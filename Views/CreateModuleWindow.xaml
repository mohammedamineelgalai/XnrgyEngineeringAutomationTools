                <!-- Colonne droite: PropriÃ©tÃ©s Custom -->
                <GroupBox Grid.Column="2" Style="{StaticResource ModernGroupBox}" Margin="10,0,0,0" Padding="10">
                    <GroupBox.Header>
                        <TextBlock Text="ðŸ‘¤ PropriÃ©tÃ©s iProperties / ParamÃ¨tres" FontSize="14" FontWeight="Bold" Foreground="#107C10"/>
                    </GroupBox.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
