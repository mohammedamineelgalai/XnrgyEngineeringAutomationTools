                    <TextBlock x:Name="TxtDestinationPreview" Text="Destination: Non dÃ©finie" 
                               Foreground="#B8D4E8" FontSize="12" VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <Button x:Name="BtnClose" Content="âœ• Fermer" Style="{StaticResource SecondaryButton}" 
                            Background="#E81123" Foreground="White" Click="BtnClose_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- SECTION INPUTS - En-tÃªte avec propriÃ©tÃ©s (compacte) -->
