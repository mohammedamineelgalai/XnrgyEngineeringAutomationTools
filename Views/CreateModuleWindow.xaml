                        </Grid.ColumnDefinitions>

                        <!-- Project Number -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,8,5">
                            <TextBlock Text="NumÃ©ro de Projet *" Style="{StaticResource ModernLabel}" FontSize="11"/>
                            <TextBox x:Name="TxtProject" Style="{StaticResource ModernTextBox}" 
                                     MaxLength="6" TextChanged="ProjectInfo_TextChanged" Padding="8,5"
                                     ToolTip="Ex: 12345 - NumÃ©ro du projet"/>
                        </StackPanel>

                        <!-- Reference - ComboBox 01 Ã  50 -->
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,8,5">
                            <TextBlock Text="RÃ©fÃ©rence *" Style="{StaticResource ModernLabel}" FontSize="11"/>
                            <ComboBox x:Name="CmbReference" Style="{StaticResource ModernComboBox}"
                                      SelectionChanged="CmbReference_SelectionChanged"
                                      ToolTip="SÃ©lectionner la rÃ©fÃ©rence (01-50)"/>
                        </StackPanel>

                        <!-- Module - ComboBox 01 Ã  50 -->
                        <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,5">
                            <TextBlock Text="Module *" Style="{StaticResource ModernLabel}" FontSize="11"/>
                            <ComboBox x:Name="CmbModule" Style="{StaticResource ModernComboBox}"
