                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Initiale Dessinateur - ComboBox avec liste prÃ©dÃ©finie -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,8,5">
                            <TextBlock Text="Initiales Dessinateur *" Style="{StaticResource ModernLabel}" FontSize="11"/>
                            <ComboBox x:Name="CmbInitialeDessinateur" Style="{StaticResource ModernComboBox}"
