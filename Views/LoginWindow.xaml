<Window x:Class="XnrgyEngineeringAutomationTools.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connexion Vault - XNRGY Engineering Automation Tools" 
        SizeToContent="WidthAndHeight"
        MinWidth="450"
        MinHeight="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        Background="#1E1E2E">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <StackPanel Grid.Row="0" Margin="0,0,0,25">
            <TextBlock Text="ðŸ” Connexion Vault" FontSize="24" FontWeight="Bold" 
                       Foreground="White" HorizontalAlignment="Center"/>
            <TextBlock Text="Autodesk Vault Professional 2026" FontSize="12" 
                       Foreground="#808080" HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Serveur -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Serveur" Foreground="#B0B0B0" Margin="0,0,0,5"/>
            <TextBox x:Name="ServerTextBox" Text="VAULTPOC" 
                     Padding="10,8" FontSize="14" Background="#2D2D44" 
                     Foreground="White" BorderBrush="#404050"/>
        </StackPanel>

        <!-- Vault -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="Vault" Foreground="#B0B0B0" Margin="0,0,0,5"/>
            <TextBox x:Name="VaultTextBox" Text="TestXNRGY" 
                     Padding="10,8" FontSize="14" Background="#2D2D44" 
                     Foreground="White" BorderBrush="#404050"/>
        </StackPanel>

        <!-- Utilisateur -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <TextBlock Text="Utilisateur" Foreground="#B0B0B0" Margin="0,0,0,5"/>
            <TextBox x:Name="UserTextBox" Text="mohammedamine.elgalai" 
                     Padding="10,8" FontSize="14" Background="#2D2D44" 
                     Foreground="White" BorderBrush="#404050"/>
        </StackPanel>

        <!-- Mot de passe -->
        <StackPanel Grid.Row="4" Margin="0,0,0,15">
            <TextBlock Text="Mot de passe" Foreground="#B0B0B0" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" 
                         Padding="10,8" FontSize="14" Background="#2D2D44" 
                         Foreground="White" BorderBrush="#404050"/>
        </StackPanel>

        <!-- Sauvegarder -->
        <CheckBox Grid.Row="5" x:Name="SaveCredentialsCheckBox" 
                  Content="Sauvegarder les identifiants" 
                  Foreground="#B0B0B0" IsChecked="True"/>

        <!-- Message d'erreur -->
        <TextBlock Grid.Row="6" x:Name="ErrorMessage" 
                   Foreground="#E81123" TextWrapping="Wrap" Margin="0,10,0,10"
                   HorizontalAlignment="Center"/>

        <!-- Boutons -->
        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="CancelButton" Content="Annuler" 
                    Click="CancelButton_Click"
                    Width="100" Padding="10,8" Margin="0,0,10,0"
                    Background="#404050" Foreground="White" BorderThickness="0"
                    Cursor="Hand"/>
            <Button x:Name="ConnectButton" Content="ðŸ”Œ Connecter" 
                    Click="ConnectButton_Click"
                    Width="120" Padding="10,8"
                    Background="#0078D4" Foreground="White" BorderThickness="0"
                    FontWeight="SemiBold" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
