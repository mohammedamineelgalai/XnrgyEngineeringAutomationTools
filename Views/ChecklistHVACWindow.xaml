<Window x:Class="XnrgyEngineeringAutomationTools.Views.ChecklistHVACWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Checklist HVAC AHU - XNRGY Engineering Automation Tools" 
        Height="900" Width="1400"
        MinWidth="800" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#1E1E2E">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1E3A5F" Padding="15,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#107C10" CornerRadius="8" Width="50" Height="50" Margin="0,0,12,0">
                        <TextBlock Text="&#x2705;" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="ðŸ“‹ Checklist HVAC AHU" FontSize="20" FontWeight="Bold" Foreground="White"/>
                        <TextBlock FontSize="12" Foreground="#FFB74D" Margin="0,3,0,0" FontWeight="SemiBold">
                            <Run Text="[i] Verification Qualite AHU - Engineering Automation Tools"/>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>

                <TextBlock Grid.Column="1" x:Name="StatusText" Text="" 
                           Foreground="#B0D0FF" VerticalAlignment="Center" 
                           HorizontalAlignment="Center" FontSize="12"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="RefreshButton" Content="ðŸ”„ Rafraichir" 
                            Click="RefreshButton_Click"
                            Background="#005A9E" Foreground="White" 
                            Padding="12,6" Margin="0,0,10,0" BorderThickness="0"
                            Cursor="Hand"/>
                    <Button x:Name="OpenExternalButton" Content="ðŸŒ Ouvrir dans navigateur" 
                            Click="OpenExternalButton_Click"
                            Background="#404050" Foreground="White" 
                            Padding="12,6" BorderThickness="0"
                            Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- WebView2 pour afficher le HTML moderne (React/JS) -->
        <wv2:WebView2 Grid.Row="1" x:Name="WebViewControl" 
                      NavigationCompleted="WebViewControl_NavigationCompleted"/>

        <!-- Footer avec info Vault -->
        <Border Grid.Row="2" Background="#252536" Padding="15,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" x:Name="FilePathText" 
                           Text="Chargement..." Foreground="#808080" 
                           VerticalAlignment="Center" FontSize="11"/>
                
                <TextBlock Grid.Column="1" Text="By Mohammed Amine Elgalai - XNRGY" 
                           Foreground="#606070" VerticalAlignment="Center" FontSize="11"/>
            </Grid>
        </Border>
    </Grid>
</Window>
