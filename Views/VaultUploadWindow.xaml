        <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
        <!-- SECTION 5 : CONTR√îLES D'OP√âRATION (Hauteur r√©duite pour gagner espace) -->
        <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
        <Grid Grid.Row="5" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Bouton Check-In Principal (Vert) OU Barre de progression -->
            <Grid Grid.Column="0" Margin="0,0,10,0">
                <!-- Bouton visible AVANT le traitement -->
                <Button Content="‚ñ∂Ô∏è CHECK-IN AUTOMATIQUE VERS VAULT"
                        Style="{StaticResource SuccessButton}"
                        Height="35"
                        FontSize="13"
                        FontWeight="Bold"
                        Command="{Binding AutoCheckInCommand}"
                        Visibility="{Binding IsProcessing, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                
                <!-- Barre de progression visible PENDANT le traitement -->
                <Border Background="White"
                        BorderBrush="#0078D4"
                        BorderThickness="2"
                        CornerRadius="3"
                        Height="35"
                        Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid>
                        <!-- Barre verte qui se remplit -->
                        <Border Background="#107C10"
                                HorizontalAlignment="Left"
                                CornerRadius="2">
                            <Border.Width>
                                <MultiBinding Converter="{StaticResource ProgressToWidthConverter}">
                                    <Binding Path="ProgressValue"/>
                                    <Binding Path="ProgressMaximum"/>
                                    <Binding RelativeSource="{RelativeSource AncestorType=Border}" Path="ActualWidth"/>
                                </MultiBinding>
                            </Border.Width>
                        </Border>
                        
                        <!-- Texte avec pourcentage -->
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="12"
                                   FontWeight="Bold"
                                   Foreground="#1E1E1E"
                                   Text="{Binding ProgressText}"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- ‚úÖ Bouton PAUSE/REPRENDRE (Orange) - Change dynamiquement -->
            <Button Grid.Column="1"
                    Content="{Binding PauseButtonText}"
                    Style="{StaticResource WarningButton}"
                    Height="35"
                    Width="120"
                    FontSize="12"
                    Command="{Binding PauseCommand}"
                    Margin="0,0,10,0"
                    IsEnabled="{Binding IsProcessing}"/>

            <!-- ‚úÖ Bouton ARR√äTER (Orange fonc√©) -->
            <Button Grid.Column="2"
                    Content="‚èπÔ∏è ARR√äTER"
                    Style="{StaticResource WarningButton}"
                    Height="35"
                    Width="120"
                    FontSize="12"
                    Command="{Binding StopProcessingCommand}"
                    Margin="0,0,10,0"
                    IsEnabled="{Binding IsProcessing}"/>

            <!-- ‚úÖ Bouton ANNULER (Rouge) -->
            <Button Grid.Column="3"
                    Content="‚ùå ANNULER"
                    Style="{StaticResource DangerButton}"
                    Height="35"
                    Width="120"
                    FontSize="12"
                    Command="{Binding CancelProcessingCommand}"
                    Margin="0,0,10,0"
                    IsEnabled="{Binding IsProcessing}"/>
        </Grid>

        <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
        <!-- SECTION 6 : Barre de progression, contr√¥les et statut -->
        <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
        <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
        <!-- SECTION 6 : PROGRESSION ET STATUT (comme Add-In WinForm) -->
        <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
        <Grid Grid.Row="6">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Barre de progression (Style moderne) -->
            <Border Grid.Row="0" 
                    Background="White"
                    BorderBrush="Black"
                    BorderThickness="1"
                    CornerRadius="3"
                    Padding="2"
                    Height="28"
                    Margin="0,0,0,8"
                    Visibility="{Binding IsCheckingIn, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid>
                    <ProgressBar Minimum="0"
                                 Maximum="{Binding ProgressMaximum}"
                                 Value="{Binding ProgressValue}"
                                 Height="24"
                                 Foreground="#107C10"
                                 Background="Transparent"
                                 BorderThickness="0"/>
                    <TextBlock Text="{Binding ProgressText}" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="11"
                               FontWeight="SemiBold"
                               Foreground="#1E1E1E"/>
                </Grid>
            </Border>

            <!-- Barre de statut (Style moderne avec bordure) -->
            <Border Grid.Row="1" 
                    Background="White"
                    BorderBrush="#0078D4"
                    BorderThickness="0,2,0,0"
                    Padding="10,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Ic√¥ne de statut -->
                    <Ellipse Grid.Column="0" 
                             Width="12" 
                             Height="12"
                             VerticalAlignment="Center"
                             Margin="0,0,10,0">
                        <Ellipse.Fill>
                            <SolidColorBrush Color="{Binding IsConnected, Converter={StaticResource BooleanToColorConverter}}"/>
                        </Ellipse.Fill>
                    </Ellipse>

                    <!-- Message de statut -->
                    <TextBlock Grid.Column="1" 
                               Text="{Binding StatusMessage}" 
                               Foreground="#1E1E1E"
                               FontSize="12"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
