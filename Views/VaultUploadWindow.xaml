<Window x:Class="XnrgyEngineeringAutomationTools.Views.VaultUploadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XnrgyEngineeringAutomationTools"
        mc:Ignorable="d"
        Title="Vault Upload - XNRGY Engineering Automation Tools" 
        Height="950" Width="1550"
        MinWidth="1400"
        MinHeight="800"
        WindowStartupLocation="CenterOwner"
        Background="#F0F0F0">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <local:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <local:BooleanToTextConverter x:Key="BooleanToTextConverter" TrueText="Connect√©" FalseText="D√©connect√©"/>
        <local:BooleanToColorConverter x:Key="BooleanToColorConverter"/>
        <local:ProgressToWidthConverter x:Key="ProgressToWidthConverter"/>

        <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
        <!-- STYLES - Inspir√©s du WinForm Add-In mais en MODERNE WPF -->
        <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
        
        <!-- Bouton Primaire (Bleu Microsoft) -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#D0D0D0"/>
                    <Setter Property="Foreground" Value="#888888"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Bouton Succ√®s (Vert - Check-In) avec effet REACTIVE -->
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#107C10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0D5C0D"/>
                            </Trigger>
                            <!-- Click effect (amortisseur moderne) -->
                            <Trigger Property="IsPressed" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           To="0.95" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           To="0.95" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           To="1.0" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <ElasticEase Oscillations="1" Springiness="3"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           To="1.0" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <ElasticEase Oscillations="1" Springiness="3"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                                <Setter TargetName="border" Property="Background" Value="#084A08"/>
                            </Trigger>
                            <!-- Disabled state -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#D0D0D0"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Bouton Danger (Rouge - Stop) avec effet REACTIVE -->
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#D13438"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#A72B2E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           To="0.95" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           To="0.95" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           To="1.0" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <ElasticEase Oscillations="1" Springiness="3"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           To="1.0" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <ElasticEase Oscillations="1" Springiness="3"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                                <Setter TargetName="border" Property="Background" Value="#7D1F21"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#D0D0D0"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Bouton Warning (Orange - Pause) avec effet REACTIVE -->
        <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#F7630C"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#C44E09"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           To="0.95" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           To="0.95" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           To="1.0" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <ElasticEase Oscillations="1" Springiness="3"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           To="1.0" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <ElasticEase Oscillations="1" Springiness="3"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                                <Setter TargetName="border" Property="Background" Value="#933807"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#D0D0D0"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Bouton Secondaire (Blanc bordure) -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#1E1E1E"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#F0F0F0"/>
                    <Setter Property="Foreground" Value="#999999"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- S√©lection du module -->
            <RowDefinition Height="7*"/>   <!-- ‚úÖ PLUS DE PLACE pour les 2 tableaux (5* ‚Üí 7*) -->
            <RowDefinition Height="Auto"/> <!-- Connexion Vault -->
            <RowDefinition Height="Auto"/> <!-- Statistiques projet -->
            <RowDefinition Height="Auto"/> <!-- Commentaire -->
            <RowDefinition Height="Auto"/> <!-- Bouton Check-In -->
            <RowDefinition Height="Auto"/> <!-- Barre de progression -->
        </Grid.RowDefinitions>

        <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
        <!-- SECTION 1 : S√©lection du projet -->
        <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
        <GroupBox Grid.Row="0" Padding="10" Margin="0,0,0,8"
                  Background="White"
                  BorderBrush="Black"
                  BorderThickness="1">
            <GroupBox.Header>
                <TextBlock Text="üìÇ S√©lection du Module" 
                           FontSize="13" 
                           FontWeight="SemiBold"
                           Foreground="#0078D4"/>
            </GroupBox.Header>
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0" 
                             Text="{Binding ProjectPath, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="12"
                             Padding="6,4"
                             Height="28"
                             VerticalContentAlignment="Center"
                             BorderBrush="Black"
                             BorderThickness="1.5"
                             IsReadOnly="False"/>

                    <Button Grid.Column="1" 
                            Content="üìã S√©lection Module" 
                            Style="{StaticResource SecondaryButton}"
                            Command="{Binding SelectModuleCommand}"
                            Margin="10,0,0,0"
                            Width="145"
                            Height="28"
                            ToolTip="Afficher la liste des modules du projet"/>

                    <Button Grid.Column="2" 
                            Content="üìÅ Parcourir..." 
                            Style="{StaticResource SecondaryButton}"
                            Command="{Binding BrowseFolderCommand}"
                            Margin="10,0,0,0"
                            Width="120"
                            Height="28"/>

                    <Button Grid.Column="3" 
                            Content="üîß Depuis Inventor" 
                            Style="{StaticResource SecondaryButton}"
                            Command="{Binding GetFromInventorCommand}"
                            Margin="10,0,0,0"
                            Width="140"
                            Height="28"/>

                    <Button Grid.Column="4" 
                            Content="üîç Scanner" 
                            Style="{StaticResource PrimaryButton}"
                            Command="{Binding ScanProjectCommand}"
                            Margin="10,0,0,0"
                            Width="100"
                            Height="28"/>
                </Grid>

                <!-- Affichage des propri√©t√©s d√©tect√©es -->
                <Border Background="#E3F2FD" 
                        CornerRadius="4" 
                        Padding="12" 
                        Margin="0,10,0,0"
                        Visibility="{Binding ProjectProperties, Converter={StaticResource NullToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock FontWeight="Bold" FontSize="13" Foreground="#0277BD" Margin="0,0,0,5">
                            ‚úÖ Propri√©t√©s d√©tect√©es :
                        </TextBlock>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="üìã Projet : " FontWeight="SemiBold" Foreground="#555"/>
                            <TextBlock Text="{Binding ProjectProperties.ProjectNumber}" Foreground="#0277BD" FontWeight="Bold" Margin="5,0,20,0"/>

                            <TextBlock Text="üìë R√©f√©rence : " FontWeight="SemiBold" Foreground="#555"/>
                            <TextBlock Text="{Binding ProjectProperties.Reference}" Foreground="#0277BD" FontWeight="Bold" Margin="5,0,20,0"/>

                            <TextBlock Text="üì¶ Module : " FontWeight="SemiBold" Foreground="#555"/>
                            <TextBlock Text="{Binding ProjectProperties.Module}" Foreground="#0277BD" FontWeight="Bold" Margin="5,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </GroupBox>

        <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
        <!-- SECTION 1b : Connexion √† Vault (COMPACTE - GARD√âE!) -->
        <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
        <GroupBox Grid.Row="2" Padding="10" Margin="0,0,0,8"
                  Background="White"
                  BorderBrush="Black"
                  BorderThickness="1">
            <GroupBox.Header>
                <TextBlock Text="üîê Connexion Vault" 
                           FontSize="13" 
                           FontWeight="SemiBold"
                           Foreground="#0078D4"/>
            </GroupBox.Header>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Type de connexion -->
                <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,8,0">
                    <TextBlock Text="Type" FontSize="10" FontWeight="SemiBold" Margin="0,0,0,2"/>
                    <ComboBox SelectedIndex="0" Padding="4" FontSize="11" Width="120">
                        <ComboBoxItem Content="Vault Account"/>
                        <ComboBoxItem Content="Autodesk ID"/>
                    </ComboBox>
                </StackPanel>

                <!-- Serveur -->
                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="0,0,8,0">
                    <TextBlock Text="Serveur" FontSize="10" FontWeight="SemiBold" Margin="0,0,0,2"/>
                    <TextBox Text="{Binding Configuration.VaultConfig.ServerName, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="4" FontSize="11" VerticalContentAlignment="Center"
                             BorderBrush="Black" BorderThickness="1.5"/>
                </StackPanel>

                <!-- Vault -->
                <StackPanel Grid.Column="2" Orientation="Vertical" Margin="0,0,8,0">
                    <TextBlock Text="Vault" FontSize="10" FontWeight="SemiBold" Margin="0,0,0,2"/>
                    <TextBox Text="{Binding Configuration.VaultConfig.VaultName, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="4" FontSize="11" VerticalContentAlignment="Center"
                             BorderBrush="Black" BorderThickness="1.5"/>
                </StackPanel>

                <!-- Utilisateur -->
                <StackPanel Grid.Column="3" Orientation="Vertical" Margin="0,0,8,0">
                    <TextBlock Text="Utilisateur" FontSize="10" FontWeight="SemiBold" Margin="0,0,0,2"/>
                    <TextBox Text="{Binding Configuration.VaultConfig.Username, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="4" FontSize="11" VerticalContentAlignment="Center"
                             BorderBrush="Black" BorderThickness="1.5"/>
                </StackPanel>

                <!-- Mot de passe -->
                <StackPanel Grid.Column="4" Orientation="Vertical" Margin="0,0,8,0">
                    <TextBlock Text="Mot de passe" FontSize="10" FontWeight="SemiBold" Margin="0,0,0,2"/>
                    <PasswordBox x:Name="PasswordBox" 
                                 PasswordChanged="PasswordBox_PasswordChanged"
                                 Padding="4" FontSize="11" 
                                 VerticalContentAlignment="Center"
                                 Height="24"
                                 BorderBrush="Black" BorderThickness="1.5"/>
                </StackPanel>

                <!-- Bouton Connecter/D√©connecter (dynamique) -->
                <StackPanel Grid.Column="5" Orientation="Vertical" Margin="0,0,8,0">
                    <TextBlock Text="Action" FontSize="10" FontWeight="SemiBold" Margin="0,0,0,2"/>
                    <Button Content="{Binding ConnectionButtonText}" 
                            Style="{StaticResource PrimaryButton}"
                            Command="{Binding ToggleConnectionCommand}"
                            Padding="8,4"
                            FontSize="11"
                            Width="100"
                            Height="24"/>
                </StackPanel>

                <!-- Statut de connexion + Case √† cocher Enregistrer -->
                <StackPanel Grid.Column="6" Orientation="Vertical" Margin="0,0,0,0">
                    <!-- Case √† cocher : Enregistrer les identifications (EN HAUT) -->
                    <CheckBox Content="üíæ Enregistrer" 
                              IsChecked="{Binding SaveCredentials, Mode=TwoWay}"
                              FontSize="9" 
                              Margin="0,0,0,4"
                              ToolTip="Cochez pour sauvegarder votre nom d'utilisateur et mot de passe"/>
                    
                    <!-- Statut Connect√©/D√©connect√© (EN BAS) -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Ellipse Width="10" Height="10">
                            <Ellipse.Fill>
                                <SolidColorBrush Color="{Binding IsConnected, Converter={StaticResource BooleanToColorConverter}}"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock Text="{Binding IsConnected, Converter={StaticResource BooleanToTextConverter}}" 
                                   FontSize="11" FontWeight="Bold" Margin="6,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </GroupBox>

