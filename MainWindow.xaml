<Window x:Class="XnrgyEngineeringAutomationTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="XNRGY Engineering Automation Tools - v1.0.0 - Released on 2026-01-02 - By Mohammed Amine Elgalai - XNRGY CLIMATE SYSTEMS ULC" 
        Height="850" Width="1300"
        MinWidth="900" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        x:Name="MainWindowRoot"
        Background="#1E1E2E"
        Loaded="Window_Loaded"
        Closing="Window_Closing">

    <Window.Resources>
        <SolidColorBrush x:Key="XnrgyBlue" Color="#0078D4"/>
        <SolidColorBrush x:Key="XnrgyGreen" Color="#107C10"/>
        <SolidColorBrush x:Key="XnrgyRed" Color="#E81123"/>
        <SolidColorBrush x:Key="XnrgyOrange" Color="#FF8C00"/>
        <SolidColorBrush x:Key="ButtonBg" Color="#252536"/>
        <SolidColorBrush x:Key="ButtonHover" Color="#3D3D56"/>
        <SolidColorBrush x:Key="LogBg" Color="#12121C"/>
        <SolidColorBrush x:Key="TextLight" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextMuted" Color="#888888"/>
        
        <!-- ModuleButton - Glow Brillant -->
        <Style x:Key="ModuleButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ButtonBg}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                BorderBrush="#4A7FBF" 
                                BorderThickness="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2A5A8F"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#00D4FF"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#00D4FF" BlurRadius="28" ShadowDepth="0" Opacity="0.85"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource XnrgyBlue}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ActionButton - Glow Brillant -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource XnrgyBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                BorderBrush="#4A7FBF"
                                BorderThickness="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1E90FF"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#00D4FF"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#00D4FF" BlurRadius="30" ShadowDepth="0" Opacity="0.9"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header BLEU MARINE avec connexion -->
        <Border x:Name="ConnectionBorder" Grid.Row="0" Background="#2A4A6F" Padding="15" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status Vault et Inventor -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border x:Name="VaultStatusBorder" Background="#1A1A28" CornerRadius="6" Padding="12,8" Margin="0,0,15,0" BorderBrush="#4A7FBF" BorderThickness="2">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Ellipse x:Name="VaultIndicator" Width="11" Height="11" Fill="#E81123" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock x:Name="VaultStatusText" VerticalAlignment="Center" FontSize="12">
                                <Run Text="ðŸ—„ï¸" Foreground="#00BFFF"/><Run x:Name="RunVaultName" Text=" Vault : --  /  " Foreground="White"/><Run Text="ðŸ‘¤" Foreground="#FFB74D"/><Run x:Name="RunUserName" Text=" Utilisateur : --  /  " Foreground="White"/><Run Text="ðŸ“¡" Foreground="#90EE90"/><Run x:Name="RunStatus" Text=" Statut : Deconnecte" Foreground="White"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                    <Border x:Name="InventorStatusBorder" Background="#1A1A28" CornerRadius="6" Padding="12,8" BorderBrush="#4A7FBF" BorderThickness="2">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Ellipse x:Name="InventorIndicator" Width="11" Height="11" Fill="#E81123" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock x:Name="InventorLabel" Text="Inventor: " Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center" FontSize="12"/>
                            <TextBlock x:Name="InventorStatusText" Text="Deconnecte" Foreground="White" VerticalAlignment="Center" FontSize="12"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Titre avec Logo -->
                <Viewbox Grid.Column="1" Stretch="Uniform" MaxWidth="800" MaxHeight="80" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="/Resources/VaultAutomationTool.png" Width="64" Height="64" Margin="0,0,15,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock x:Name="TitleText" Text="XNRGY Engineering Automation Tools v1.0.0" 
                                       FontSize="22" FontWeight="Bold" Foreground="White"/>
                            <TextBlock FontSize="14" Foreground="#FFB74D" Margin="0,3,0,0" FontWeight="SemiBold">
                                <Run Text="ðŸ’¡ Suite d'outils d'automatisation pour Vault et Inventor"/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Viewbox>

                <!-- Boutons connexion -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="ThemeToggleButton" Content="â˜€ï¸ Theme Clair" 
                            Style="{StaticResource ActionButton}" 
                            Background="#1E1E2E"
                            Click="ThemeToggleButton_Click"/>
                    <Button x:Name="ConnectButton" Content="Connecter" 
                            Style="{StaticResource ActionButton}"
                            Background="#E81123"
                            Click="ConnectButton_Click"/>
                    <Button x:Name="UpdateButton" Content="ðŸ”„ Update Workspace" 
                            Style="{StaticResource ActionButton}" 
                            Background="#7C3AED"
                            Click="UpdateWorkspace_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Module Buttons avec GroupBox -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="15,5">
            <StackPanel>
                <!-- GroupBox: Vault & Inventor -->
                <GroupBox x:Name="GroupBox1" Style="{StaticResource XnrgyGroupBox}" Margin="0,0,0,12">
                    <GroupBox.Header>
                        <TextBlock x:Name="GroupBox1Header" Text="ðŸ”§ Vault &amp; Inventor Tools" FontSize="16" FontWeight="Bold" Foreground="White"/>
                    </GroupBox.Header>
                    <WrapPanel>
                        <!-- CrÃ©er Module & Ã‰quipement (anciennement Pack & Go) -->
                        <Button x:Name="BtnPackAndGo" Style="{StaticResource ModuleButton}" Click="OpenPackAndGo_Click" Width="260" Height="210" Margin="10">
                            <StackPanel HorizontalAlignment="Center">
                                <Border Background="#FF8C00" CornerRadius="14" Width="95" Height="95" Margin="0,0,0,15">
                                    <TextBlock Text="&#x1F4E6;" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock x:Name="BtnPackAndGoTitle" Text="CrÃ©er Module" FontSize="15" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="BtnPackAndGoDesc" Text="Pack &amp; Go / Copy Design" FontSize="11" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <!-- Build Module -->
                        <Button x:Name="BtnBuildModule" Style="{StaticResource ModuleButton}" Click="OpenBuildModule_Click" Width="260" Height="210" Margin="10">
                            <StackPanel HorizontalAlignment="Center">
                                <Border Background="#00695C" CornerRadius="14" Width="95" Height="95" Margin="0,0,0,15">
                                    <TextBlock Text="&#x1F3D7;" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock x:Name="BtnBuildModuleTitle" Text="Build Module" FontSize="15" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="BtnBuildModuleDesc" Text="Construction" FontSize="11" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <!-- Smart Tools -->
                        <Button x:Name="BtnSmartTools" Style="{StaticResource ModuleButton}" Click="OpenSmartTools_Click" Width="260" Height="210" Margin="10">
                            <StackPanel HorizontalAlignment="Center">
                                <Image Source="Resources/SmartTools.png" Width="95" Height="95" Margin="0,0,0,15" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality"/>
                                <TextBlock x:Name="BtnSmartToolsTitle" Text="Smart Tools" FontSize="15" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="BtnSmartToolsDesc" Text="Outils Inventor" FontSize="11" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <!-- Upload Module -->
                        <Button x:Name="BtnVaultUpload" Style="{StaticResource ModuleButton}" Click="OpenVaultUpload_Click" Width="260" Height="210" Margin="10">
                            <StackPanel HorizontalAlignment="Center">
                                <Border Background="#AEEA00" CornerRadius="14" Width="95" Height="95" Margin="0,0,0,15">
                                    <TextBlock Text="&#x1F4E4;" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock x:Name="BtnVaultUploadTitle" Text="Upload Module" FontSize="15" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="BtnVaultUploadDesc" Text="Upload vers Vault" FontSize="11" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <!-- Upload Template (Admin Only) -->
                        <Button x:Name="BtnUploadTemplate" Style="{StaticResource ModuleButton}" Click="OpenUploadTemplate_Click" Width="260" Height="210" Margin="10">
                            <StackPanel HorizontalAlignment="Center">
                                <Border Background="#9B59B6" CornerRadius="14" Width="95" Height="95" Margin="0,0,0,15">
                                    <TextBlock Text="&#x1F4E4;" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock x:Name="BtnUploadTemplateTitle" Text="Upload Template" FontSize="15" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="BtnUploadTemplateDesc" Text="Admin - Templates Vault" FontSize="11" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </WrapPanel>
                </GroupBox>
                
                <!-- GroupBox: Verification & Quality -->
                <GroupBox x:Name="GroupBox2" Style="{StaticResource XnrgyGroupBox}" Margin="0,0,0,12">
                    <GroupBox.Header>
                        <TextBlock x:Name="GroupBox2Header" Text="âœ… Verification &amp; Quality" FontSize="16" FontWeight="Bold" Foreground="White"/>
                    </GroupBox.Header>
                    <WrapPanel>
                        <!-- Checklist HVAC -->
                        <Button x:Name="BtnChecklistHVAC" Style="{StaticResource ModuleButton}" Click="OpenChecklistHVAC_Click" Width="260" Height="210" Margin="10">
                            <StackPanel HorizontalAlignment="Center">
                                <Border Background="#107C10" CornerRadius="14" Width="95" Height="95" Margin="0,0,0,15">
                                    <TextBlock Text="&#x1F4DD;" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock x:Name="BtnChecklistHVACTitle" Text="Checklist HVAC" FontSize="15" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="BtnChecklistHVACDesc" Text="Verification Qualite AHU" FontSize="11" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <!-- DXF/CSV vs PDF Verifier -->
                        <Button x:Name="BtnDXFVerifier" Style="{StaticResource ModuleButton}" Click="OpenDXFVerifier_Click" Width="260" Height="210" Margin="10">
                            <StackPanel HorizontalAlignment="Center">
                                <Image Source="Assets/Icons/DXFVerifier.png" Width="95" Height="95" Margin="0,0,0,15" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality"/>
                                <TextBlock x:Name="BtnDXFVerifierTitle" Text="DXF/CSV vs PDF" FontSize="15" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="BtnDXFVerifierDesc" Text="Verification Fichiers" FontSize="11" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </WrapPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Log Panel - Meme largeur que les GroupBox (Margin 15 horizontal) -->
        <Border x:Name="LogBorder" Grid.Row="2" Background="#12121C" CornerRadius="8" Margin="15,10,15,0" BorderBrush="#4A7FBF" BorderThickness="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Border x:Name="LogHeaderBorder" Grid.Row="0" Background="#2A4A6F" CornerRadius="6,6,0,0" Padding="15,8">
                    <Grid>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="ðŸ“‹" FontSize="16" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock x:Name="LogHeaderText" Text="Journal des OpÃ©rations" FontSize="14" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button Content="ðŸ—‘ï¸ Effacer" 
                                HorizontalAlignment="Right" 
                                Style="{StaticResource ActionButton}" 
                                Background="#DC2626" 
                                Foreground="White"
                                Padding="10,5"
                                Click="ClearLogButton_Click"/>
                    </Grid>
                </Border>
                
                <ListBox x:Name="LogListBox" Grid.Row="1" 
                         Background="Transparent" 
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Focusable" Value="False"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <ContentPresenter/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border x:Name="StatusBorder" Grid.Row="3" Background="#252536" Padding="15,12" Margin="0,10,0,0">
            <Grid>
                <TextBlock x:Name="StatusText" Text="Pret" Foreground="White" FontSize="14" FontWeight="Bold"/>
                <TextBlock x:Name="CopyrightText" Text="XNRGY Engineering Automation Tools - v1.0.0 - Released on 2026-01-02 - By Mohammed Amine Elgalai - XNRGY CLIMATE SYSTEMS ULC" 
                           Foreground="White" FontSize="12" FontWeight="Bold" HorizontalAlignment="Right"/>
            </Grid>
        </Border>
    </Grid>
</Window>

