<Window x:Class="XnrgyEngineeringAutomationTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="XNRGY Engineering Automation Tools v1.0.0 - Released on 2025-12-25 - By Mohammed Amine Elgalai - XNRGY CLIMATE SYSTEMS ULC" 
        Height="850" Width="1300"
        MinWidth="900" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        x:Name="MainWindowRoot"
        Background="#1E1E2E"
        Loaded="Window_Loaded"
        Closing="Window_Closing">

    <Window.Resources>
        <SolidColorBrush x:Key="XnrgyBlue" Color="#0078D4"/>
        <SolidColorBrush x:Key="XnrgyGreen" Color="#107C10"/>
        <SolidColorBrush x:Key="XnrgyRed" Color="#E81123"/>
        <SolidColorBrush x:Key="XnrgyOrange" Color="#FF8C00"/>
        <SolidColorBrush x:Key="ButtonBg" Color="#252536"/>
        <SolidColorBrush x:Key="ButtonHover" Color="#3D3D56"/>
        <SolidColorBrush x:Key="LogBg" Color="#12121C"/>
        <SolidColorBrush x:Key="TextLight" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="TextMuted" Color="#888888"/>
        
        <Style x:Key="ModuleButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ButtonBg}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                BorderBrush="#404050" 
                                BorderThickness="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource ButtonHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource XnrgyBlue}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource XnrgyBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                BorderBrush="#404050"
                                BorderThickness="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1E8FE8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header BLEU avec connexion -->
        <Border x:Name="ConnectionBorder" Grid.Row="0" Background="#0078D4" Padding="15" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status Vault et Inventor -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border x:Name="VaultStatusBorder" Background="#1A1A28" CornerRadius="6" Padding="12,8" Margin="0,0,15,0" BorderBrush="#404050" BorderThickness="2">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Ellipse x:Name="VaultIndicator" Width="12" Height="12" Fill="#E81123" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock x:Name="VaultLabel" Text="Vault: " Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <TextBlock x:Name="VaultStatusText" Text="Deconnecte" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border x:Name="InventorStatusBorder" Background="#1A1A28" CornerRadius="6" Padding="12,8" BorderBrush="#404050" BorderThickness="2">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Ellipse x:Name="InventorIndicator" Width="12" Height="12" Fill="#E81123" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock x:Name="InventorLabel" Text="Inventor: " Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <TextBlock x:Name="InventorStatusText" Text="Deconnecte" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Titre avec Logo -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="/Resources/VaultAutomationTool.png" Width="64" Height="64" Margin="0,0,15,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                    <TextBlock x:Name="TitleText" Text="XNRGY Engineering Automation Tools v1.0.0" 
                               FontSize="22" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Boutons connexion -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="ThemeToggleButton" Content="☀️ Theme Clair" 
                            Style="{StaticResource ActionButton}" 
                            Background="#1E1E2E"
                            Click="ThemeToggleButton_Click"/>
                    <Button x:Name="ConnectButton" Content="Connecter" 
                            Style="{StaticResource ActionButton}"
                            Background="#E81123"
                            Click="ConnectButton_Click"/>
                    <Button x:Name="UpdateButton" Content="Update Workspace" 
                            Style="{StaticResource ActionButton}" 
                            Background="#107C10"
                            Click="UpdateWorkspace_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Module Buttons avec GroupBox -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="15,5">
            <StackPanel>
                <!-- GroupBox: Vault & Inventor -->
                <GroupBox x:Name="GroupBox1" Margin="0,0,0,15" Padding="15" Background="#252536" BorderBrush="#404060" BorderThickness="1">
                    <GroupBox.Header>
                        <TextBlock x:Name="GroupBox1Header" Text="&#x1F527; Vault &amp; Inventor Tools" FontSize="18" FontWeight="Bold" Foreground="#0078D4"/>
                    </GroupBox.Header>
                    <WrapPanel>
                        <!-- Créer Module & Équipement (anciennement Pack & Go) -->
                        <Button x:Name="BtnPackAndGo" Style="{StaticResource ModuleButton}" Click="OpenPackAndGo_Click" Width="270" Height="225" Margin="12">
                            <StackPanel HorizontalAlignment="Center">
                                <Border Background="#FF8C00" CornerRadius="15" Width="105" Height="105" Margin="0,0,0,18">
                                    <TextBlock Text="&#x1F4E6;" FontSize="54" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock x:Name="BtnPackAndGoTitle" Text="Créer Module" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="BtnPackAndGoDesc" Text="Pack &amp; Go / Copy Design" FontSize="11" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <!-- Build Module -->
                        <Button x:Name="BtnBuildModule" Style="{StaticResource ModuleButton}" Click="OpenBuildModule_Click" Width="270" Height="225" Margin="12">
                            <StackPanel HorizontalAlignment="Center">
                                <Border Background="#E81123" CornerRadius="15" Width="105" Height="105" Margin="0,0,0,18">
                                    <TextBlock Text="&#x1F3D7;" FontSize="54" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock x:Name="BtnBuildModuleTitle" Text="Build Module" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="BtnBuildModuleDesc" Text="Construction" FontSize="13" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <!-- Smart Tools -->
                        <Button x:Name="BtnSmartTools" Style="{StaticResource ModuleButton}" Click="OpenSmartTools_Click" Width="270" Height="225" Margin="12">
                            <StackPanel HorizontalAlignment="Center">
                                <Border Background="#FFD700" CornerRadius="15" Width="105" Height="105" Margin="0,0,0,18">
                                    <TextBlock Text="&#x26A1;" FontSize="54" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock x:Name="BtnSmartToolsTitle" Text="Smart Tools" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="BtnSmartToolsDesc" Text="Outils Inventor" FontSize="13" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <!-- Vault Upload -->
                        <Button x:Name="BtnVaultUpload" Style="{StaticResource ModuleButton}" Click="OpenVaultUpload_Click" Width="270" Height="225" Margin="12">
                            <StackPanel HorizontalAlignment="Center">
                                <Border Background="#0078D4" CornerRadius="15" Width="105" Height="105" Margin="0,0,0,18">
                                    <TextBlock Text="&#x1F4E4;" FontSize="54" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock x:Name="BtnVaultUploadTitle" Text="Vault Upload" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="BtnVaultUploadDesc" Text="Upload vers Vault" FontSize="13" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </WrapPanel>
                </GroupBox>
                
                <!-- GroupBox: Verification & Quality -->
                <GroupBox x:Name="GroupBox2" Margin="0,0,0,15" Padding="15" Background="#252536" BorderBrush="#404060" BorderThickness="1">
                    <GroupBox.Header>
                        <TextBlock x:Name="GroupBox2Header" Text="&#x2705; Verification &amp; Quality" FontSize="18" FontWeight="Bold" Foreground="#107C10"/>
                    </GroupBox.Header>
                    <WrapPanel>
                        <!-- Checklist HVAC -->
                        <Button x:Name="BtnChecklistHVAC" Style="{StaticResource ModuleButton}" Click="OpenChecklistHVAC_Click" Width="270" Height="225" Margin="12">
                            <StackPanel HorizontalAlignment="Center">
                                <Border Background="#107C10" CornerRadius="15" Width="105" Height="105" Margin="0,0,0,18">
                                    <TextBlock Text="&#x1F4DD;" FontSize="54" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock x:Name="BtnChecklistHVACTitle" Text="Checklist HVAC" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="BtnChecklistHVACDesc" Text="Qualite AHU" FontSize="13" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <!-- DXF/CSV vs PDF Verifier -->
                        <Button x:Name="BtnDXFVerifier" Style="{StaticResource ModuleButton}" Click="OpenDXFVerifier_Click" Width="270" Height="225" Margin="12">
                            <StackPanel HorizontalAlignment="Center">
                                <Border Background="#9B59B6" CornerRadius="15" Width="105" Height="105" Margin="0,0,0,18">
                                    <TextBlock Text="&#x1F4D0;" FontSize="54" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock x:Name="BtnDXFVerifierTitle" Text="DXF/CSV vs PDF" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="BtnDXFVerifierDesc" Text="Verifier" FontSize="13" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </WrapPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Log Panel -->
        <Border x:Name="LogBorder" Grid.Row="2" Background="#12121C" CornerRadius="8" Margin="20,10,20,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Border x:Name="LogHeaderBorder" Grid.Row="0" Background="#1E1E2E" CornerRadius="8,8,0,0" Padding="15,8">
                    <Grid>
                        <TextBlock x:Name="LogHeaderText" Text="Journal des Operations" FontSize="14" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                        <Button Content="Effacer" 
                                HorizontalAlignment="Right" 
                                Style="{StaticResource ActionButton}" 
                                Background="#505060" 
                                Padding="10,5"
                                Click="ClearLogButton_Click"/>
                    </Grid>
                </Border>
                
                <ListBox x:Name="LogListBox" Grid.Row="1" 
                         Background="Transparent" 
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Focusable" Value="False"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <ContentPresenter/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border x:Name="StatusBorder" Grid.Row="3" Background="#252536" Padding="15,12" Margin="0,10,0,0">
            <Grid>
                <TextBlock x:Name="StatusText" Text="Pret" Foreground="White" FontSize="14" FontWeight="Bold"/>
                <TextBlock x:Name="CopyrightText" Text="XNRGY Engineering Automation Tools v1.0.0 - Released on 2025-12-25 - By Mohammed Amine Elgalai - XNRGY CLIMATE SYSTEMS ULC" 
                           Foreground="White" FontSize="12" FontWeight="Bold" HorizontalAlignment="Right"/>
            </Grid>
        </Border>
    </Grid>
</Window>

