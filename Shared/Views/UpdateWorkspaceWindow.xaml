<Window x:Class="XnrgyEngineeringAutomationTools.Shared.Views.UpdateWorkspaceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mise a jour Workspace - XNRGY Engineering Automation Tools" 
        Width="900" Height="700"
        MinWidth="800" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#1E1E2E"
        Loaded="Window_Loaded"
        Closing="Window_Closing">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/XnrgyStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Style pour les items de checklist -->
            <Style x:Key="ChecklistItemStyle" TargetType="Border">
                <Setter Property="Background" Value="#252536"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="Padding" Value="12,10"/>
                <Setter Property="Margin" Value="0,4"/>
                <Setter Property="BorderBrush" Value="#3A3A5A"/>
                <Setter Property="BorderThickness" Value="1"/>
            </Style>
            
            <!-- Style pour emoji status -->
            <Style x:Key="StatusEmojiStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="Width" Value="28"/>
                <Setter Property="TextAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
            
            <!-- Style pour texte checklist -->
            <Style x:Key="ChecklistTextStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="10,0,0,0"/>
            </Style>
            
            <!-- Style pour sous-texte checklist -->
            <Style x:Key="ChecklistSubTextStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="#808080"/>
                <Setter Property="FontSize" Value="11"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="10,0,0,0"/>
                <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#2A4A6F" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ðŸ”„" FontSize="28" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Mise a jour Workspace" FontSize="20" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Synchronisation des standards XNRGY depuis Vault" FontSize="12" Foreground="#B0B0B0" Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#1E5128" CornerRadius="4" Padding="10,5" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“" FontSize="14" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock x:Name="TxtFilesCount" Text="0 fichiers" Foreground="White" FontSize="12" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#1E3A5F" CornerRadius="4" Padding="10,5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ’¾" FontSize="14" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock x:Name="TxtTotalSize" Text="0 MB" Foreground="White" FontSize="12" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- CHECKLIST DES OPERATIONS -->
        <Border Grid.Row="1" Background="#1E1E2E" Margin="20,15,20,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Titre section -->
                <Border Grid.Row="0" Background="#2A4A6F" CornerRadius="6,6,0,0" Padding="15,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“‹" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Checklist des Operations" FontSize="14" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Liste des operations -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="#252536" Padding="15">
                    <StackPanel x:Name="ChecklistPanel">
                        
                        <!-- SECTION: Telechargements Vault -->
                        <TextBlock Text="TELECHARGEMENTS VAULT" Foreground="#4FC3F7" FontSize="11" FontWeight="Bold" Margin="0,5,0,10"/>
                        
                        <!-- Item 1: Inventor_Standards -->
                        <Border Style="{StaticResource ChecklistItemStyle}" x:Name="ItemInventorStandards">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="EmojiInventorStandards" Text="â³" Style="{StaticResource StatusEmojiStyle}"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Inventor_Standards" Style="{StaticResource ChecklistTextStyle}"/>
                                    <TextBlock Text="$/Engineering/Inventor_Standards/ â†’ C:\Vault\Engineering\Inventor_Standards\" Style="{StaticResource ChecklistSubTextStyle}"/>
                                </StackPanel>
                                <TextBlock x:Name="StatusInventorStandards" Grid.Column="2" Text="" Foreground="#808080" FontSize="11" VerticalAlignment="Center" Margin="10,0,0,0"/>
                            </Grid>
                        </Border>
                        
                        <!-- Item 2: Cabinet -->
                        <Border Style="{StaticResource ChecklistItemStyle}" x:Name="ItemCabinet">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="EmojiCabinet" Text="â³" Style="{StaticResource StatusEmojiStyle}"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Library/Cabinet" Style="{StaticResource ChecklistTextStyle}"/>
                                    <TextBlock Text="$/Engineering/Library/Cabinet/ â†’ C:\Vault\Engineering\Library\Cabinet\" Style="{StaticResource ChecklistSubTextStyle}"/>
                                </StackPanel>
                                <TextBlock x:Name="StatusCabinet" Grid.Column="2" Text="" Foreground="#808080" FontSize="11" VerticalAlignment="Center" Margin="10,0,0,0"/>
                            </Grid>
                        </Border>
                        
                        <!-- Item 3: Xnrgy_M99 -->
                        <Border Style="{StaticResource ChecklistItemStyle}" x:Name="ItemXnrgyM99">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="EmojiXnrgyM99" Text="â³" Style="{StaticResource StatusEmojiStyle}"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Library/Xnrgy_M99" Style="{StaticResource ChecklistTextStyle}"/>
                                    <TextBlock Text="$/Engineering/Library/Xnrgy_M99/ â†’ C:\Vault\Engineering\Library\Xnrgy_M99\" Style="{StaticResource ChecklistSubTextStyle}"/>
                                </StackPanel>
                                <TextBlock x:Name="StatusXnrgyM99" Grid.Column="2" Text="" Foreground="#808080" FontSize="11" VerticalAlignment="Center" Margin="10,0,0,0"/>
                            </Grid>
                        </Border>
                        
                        <!-- Item 4: Xnrgy_Module -->
                        <Border Style="{StaticResource ChecklistItemStyle}" x:Name="ItemXnrgyModule">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="EmojiXnrgyModule" Text="â³" Style="{StaticResource StatusEmojiStyle}"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Library/Xnrgy_Module" Style="{StaticResource ChecklistTextStyle}"/>
                                    <TextBlock Text="$/Engineering/Library/Xnrgy_Module/ â†’ C:\Vault\Engineering\Library\Xnrgy_Module\" Style="{StaticResource ChecklistSubTextStyle}"/>
                                </StackPanel>
                                <TextBlock x:Name="StatusXnrgyModule" Grid.Column="2" Text="" Foreground="#808080" FontSize="11" VerticalAlignment="Center" Margin="10,0,0,0"/>
                            </Grid>
                        </Border>
                        
                        <!-- SECTION: Copie Plugins -->
                        <TextBlock Text="COPIE APPLICATION PLUGINS" Foreground="#81C784" FontSize="11" FontWeight="Bold" Margin="0,20,0,10"/>
                        
                        <!-- Item 5: SIBL_XNRGY_ADDINS -->
                        <Border Style="{StaticResource ChecklistItemStyle}" x:Name="ItemSiblAddins">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="EmojiSiblAddins" Text="â³" Style="{StaticResource StatusEmojiStyle}"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="SIBL_XNRGY_ADDINS_2026" Style="{StaticResource ChecklistTextStyle}"/>
                                    <TextBlock Text="â†’ C:\ProgramData\Autodesk\ApplicationPlugins\SIBL_XNRGY_ADDINS_2026\" Style="{StaticResource ChecklistSubTextStyle}"/>
                                </StackPanel>
                                <TextBlock x:Name="StatusSiblAddins" Grid.Column="2" Text="" Foreground="#808080" FontSize="11" VerticalAlignment="Center" Margin="10,0,0,0"/>
                            </Grid>
                        </Border>
                        
                        <!-- Item 6: XNRGY_ADDINS -->
                        <Border Style="{StaticResource ChecklistItemStyle}" x:Name="ItemXnrgyAddins">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="EmojiXnrgyAddins" Text="â³" Style="{StaticResource StatusEmojiStyle}"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="XNRGY_ADDINS_2026" Style="{StaticResource ChecklistTextStyle}"/>
                                    <TextBlock Text="â†’ C:\ProgramData\Autodesk\ApplicationPlugins\XNRGY_ADDINS_2026\ (excl: Xnrgy_Software, Automation_Data)" Style="{StaticResource ChecklistSubTextStyle}"/>
                                </StackPanel>
                                <TextBlock x:Name="StatusXnrgyAddins" Grid.Column="2" Text="" Foreground="#808080" FontSize="11" VerticalAlignment="Center" Margin="10,0,0,0"/>
                            </Grid>
                        </Border>
                        
                        <!-- SECTION: Installations -->
                        <TextBlock Text="INSTALLATIONS SILENCIEUSES" Foreground="#FFB74D" FontSize="11" FontWeight="Bold" Margin="0,20,0,10"/>
                        
                        <!-- Item 7: DXF Verifier -->
                        <Border Style="{StaticResource ChecklistItemStyle}" x:Name="ItemDxfVerifier">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="EmojiDxfVerifier" Text="â³" Style="{StaticResource StatusEmojiStyle}"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="DXF-CSV vs PDF Verifier V1.2" Style="{StaticResource ChecklistTextStyle}"/>
                                    <TextBlock Text="Installation silencieuse de l'outil de verification DXF" Style="{StaticResource ChecklistSubTextStyle}"/>
                                </StackPanel>
                                <TextBlock x:Name="StatusDxfVerifier" Grid.Column="2" Text="" Foreground="#808080" FontSize="11" VerticalAlignment="Center" Margin="10,0,0,0"/>
                            </Grid>
                        </Border>
                        
                        <!-- Item 8: SmartTools Addin -->
                        <Border Style="{StaticResource ChecklistItemStyle}" x:Name="ItemSmartTools">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="EmojiSmartTools" Text="â³" Style="{StaticResource StatusEmojiStyle}"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="SmartTools Amine Addin V1.7" Style="{StaticResource ChecklistTextStyle}"/>
                                    <TextBlock Text="Installation silencieuse de l'addin SmartTools pour Inventor" Style="{StaticResource ChecklistSubTextStyle}"/>
                                </StackPanel>
                                <TextBlock x:Name="StatusSmartTools" Grid.Column="2" Text="" Foreground="#808080" FontSize="11" VerticalAlignment="Center" Margin="10,0,0,0"/>
                            </Grid>
                        </Border>
                        
                        <!-- Item 9: XnBatchPrint -->
                        <Border Style="{StaticResource ChecklistItemStyle}" x:Name="ItemBatchPrint">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="EmojiBatchPrint" Text="â³" Style="{StaticResource StatusEmojiStyle}"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="XnBatchPrint" Style="{StaticResource ChecklistTextStyle}"/>
                                    <TextBlock Text="Installation silencieuse de l'outil d'impression batch" Style="{StaticResource ChecklistSubTextStyle}"/>
                                </StackPanel>
                                <TextBlock x:Name="StatusBatchPrint" Grid.Column="2" Text="" Foreground="#808080" FontSize="11" VerticalAlignment="Center" Margin="10,0,0,0"/>
                            </Grid>
                        </Border>
                        
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- BARRE DE PROGRESSION -->
        <Border Grid.Row="2" Background="#2A4A6F" CornerRadius="8" Margin="20,5,20,10" Padding="15,10"
                BorderBrush="#4A7FBF" BorderThickness="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Barre de progression avec texte integre -->
                <Border Grid.Column="0" Background="#1E1E2E" CornerRadius="6" 
                        Height="34" Margin="0,0,15,0" ClipToBounds="True"
                        BorderBrush="#4A7FBF" BorderThickness="2">
                    <Grid>
                        <!-- Barre de progression verte -->
                        <Border x:Name="ProgressBarFill" Background="#28A745" CornerRadius="6" HorizontalAlignment="Left" Width="0">
                            <Border.Effect>
                                <DropShadowEffect Color="#00FF7F" BlurRadius="20" ShadowDepth="0" Opacity="0.85"/>
                            </Border.Effect>
                        </Border>
                        
                        <!-- Texte de statut -->
                        <TextBlock x:Name="TxtStatus" 
                                   Text="Pret - En attente de demarrage..." 
                                   Foreground="White" FontSize="12" FontWeight="Bold"
                                   VerticalAlignment="Center" HorizontalAlignment="Left"
                                   Margin="12,0,0,0" TextTrimming="CharacterEllipsis" MaxWidth="350"/>
                        
                        <!-- Fichier en cours -->
                        <TextBlock x:Name="TxtCurrentFile" 
                                   Text="" 
                                   Foreground="White" FontSize="12" FontWeight="Bold"
                                   VerticalAlignment="Center" HorizontalAlignment="Left"
                                   Margin="380,0,0,0" TextTrimming="CharacterEllipsis" MaxWidth="200"/>
                        
                        <!-- Temps et pourcentage -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,12,0">
                            <TextBlock Text="â±ï¸ " Foreground="White" FontSize="11" FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock x:Name="TxtTimeElapsed" Text="00:00" Foreground="White" FontSize="11" FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock Text=" | " Foreground="White" FontSize="11" FontWeight="Bold" VerticalAlignment="Center" Margin="8,0,8,0"/>
                            <TextBlock x:Name="TxtProgressPercent" Text="0%" Foreground="White" FontSize="12" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Boutons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="BtnSkip" Content="â­ï¸ PASSER" 
                            Style="{StaticResource WarningButton}" Height="34" MinWidth="100" FontSize="13"
                            Click="BtnSkip_Click" Margin="0,0,8,0" Padding="10,5" VerticalContentAlignment="Center"
                            ToolTip="Passer la mise a jour (non recommande)"/>
                    <Button x:Name="BtnContinue" Content="âœ… CONTINUER" 
                            Style="{StaticResource SuccessButton}" Height="34" MinWidth="120" FontSize="13"
                            Click="BtnContinue_Click" Padding="12,5" VerticalContentAlignment="Center"
                            IsEnabled="False"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- JOURNAL DES OPERATIONS -->
        <Border Grid.Row="3" Background="#252536" CornerRadius="8" Margin="20,5,20,15" BorderBrush="#4A7FBF" BorderThickness="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Border Grid.Row="0" Background="#2A4A6F" CornerRadius="6,6,0,0" Padding="15,8">
                    <Grid>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="ðŸ“‹" FontSize="16" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Journal des Operations" FontSize="14" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button Content="ðŸ—‘ï¸ Effacer" 
                                HorizontalAlignment="Right" 
                                Style="{StaticResource DangerButton}"
                                Padding="10,5"
                                Click="BtnClearLog_Click"/>
                    </Grid>
                </Border>
                
                <ListBox x:Name="LogListBox" Grid.Row="1" 
                         Background="Transparent" 
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Focusable" Value="False"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <ContentPresenter/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Grid>
        </Border>

        <!-- FOOTER - Version et Copyright -->
        <Border Grid.Row="4" Background="#1A1A28" Padding="15,8">
            <Grid>
                <TextBlock Text="XNRGY Engineering Automation Tools - Mise a jour Workspace" 
                           Foreground="#606060" FontSize="11" VerticalAlignment="Center"/>
                <TextBlock Text="Developpe par Mohammed Amine Elgalai - XNRGY Climate Systems ULC" 
                           Foreground="#606060" FontSize="11" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
