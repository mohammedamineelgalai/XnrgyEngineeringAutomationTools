<Window x:Class="XnrgyEngineeringAutomationTools.Modules.SmartTools.Views.HtmlPopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="{StaticResource WindowTitleHtmlPopup}"
        Icon="/Resources/XnrgyEngineeringAutomationTools.ico"
        Height="900" Width="980"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="Manual"
        Background="#1E1E2E"
        ResizeMode="CanResize"
        ShowInTaskbar="True"
        Topmost="True">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Styles/XnrgyStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <SolidColorBrush x:Key="XnrgyBlue" Color="#0078D4"/>
            <SolidColorBrush x:Key="DarkBg" Color="#1E1E2E"/>
            <SolidColorBrush x:Key="DarkBg2" Color="#252536"/>
            <SolidColorBrush x:Key="BorderColor" Color="#4A7FBF"/>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2A4A6F" Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="TxtTitle" Grid.Column="0" 
                           FontSize="16" FontWeight="Bold" Foreground="White"
                           VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                
                <Button x:Name="BtnClose" Grid.Column="1" Content="✕" 
                        Width="28" Height="28" FontWeight="Bold"
                        Background="#DC2626" Foreground="White" 
                        BorderThickness="0" Cursor="Hand"
                        Click="BtnClose_Click"/>
            </Grid>
        </Border>

        <!-- WebView2 pour le contenu HTML -->
        <Border Grid.Row="1" Background="#252536" Margin="8,4,8,4" CornerRadius="4"
                BorderBrush="#4A7FBF" BorderThickness="1">
            <wv2:WebView2 x:Name="WebViewContent" 
                          DefaultBackgroundColor="Transparent"/>
        </Border>

        <!-- Footer avec bouton OK -->
        <Border Grid.Row="2" Background="#2A4A6F" Padding="8">
            <Button x:Name="BtnOK" Content="✅ OK" 
                    Width="100" Height="32"
                    FontSize="14" FontWeight="Bold"
                    Background="#0078D4" Foreground="White"
                    BorderBrush="#4A7FBF" BorderThickness="2"
                    HorizontalAlignment="Center" Cursor="Hand"
                    Click="BtnOK_Click"/>
        </Border>

        <!-- COPYRIGHT BAR -->
        <Border Grid.Row="3" Style="{StaticResource CopyrightBarBorder}">
            <TextBlock Style="{StaticResource CopyrightTextStyle}" HorizontalAlignment="Center"
                       Text="{StaticResource CopyrightHtmlPopup}"/>
        </Border>
    </Grid>
</Window>
