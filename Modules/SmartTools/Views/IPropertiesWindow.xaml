<Window x:Class="XnrgyEngineeringAutomationTools.Modules.SmartTools.Views.IPropertiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        Title="iProperties" 
        Height="1000" Width="880"
        MinHeight="700" MinWidth="750"
        MaxHeight="{x:Static SystemParameters.MaximizedPrimaryScreenHeight}"
        WindowStartupLocation="Manual"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip">
    
    <Window.Resources>
        <!-- Couleurs -->
        <Color x:Key="PrimaryColor">#667eea</Color>
        <Color x:Key="SecondaryColor">#764ba2</Color>
        <Color x:Key="SuccessColor">#27ae60</Color>
        <Color x:Key="DangerColor">#e74c3c</Color>
        <Color x:Key="InfoColor">#3498db</Color>
        
        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
        <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}"/>
        <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>
        
        <!-- Gradient Background -->
        <LinearGradientBrush x:Key="GradientBg" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="{StaticResource PrimaryColor}" Offset="0"/>
            <GradientStop Color="{StaticResource SecondaryColor}" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- Style bouton Fermer -->
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#e74c3c" Offset="0"/>
                        <GradientStop Color="#c0392b" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="25,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="20" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#c0392b" Offset="0"/>
                                            <GradientStop Color="#a93226" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style bouton Appliquer -->
        <Style x:Key="ApplyButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#3498db" Offset="0"/>
                        <GradientStop Color="#2980b9" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="25,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="20" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#2980b9" Offset="0"/>
                                            <GradientStop Color="#1a5276" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style bouton Ajouter -->
        <Style x:Key="AddButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#27ae60" Offset="0"/>
                        <GradientStop Color="#2ecc71" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="35,14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="25" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#229954" Offset="0"/>
                                            <GradientStop Color="#27ae60" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#bdc3c7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style TextBox moderne oblong -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#2c3e50"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#dee2e6"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CaretBrush" Value="#667eea"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="22" Padding="18,0">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Stretch"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style Label propriÃ©tÃ© -->
        <Style x:Key="PropertyLabelStyle" TargetType="Border">
            <Setter Property="Height" Value="45"/>
            <Setter Property="CornerRadius" Value="22"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#f8f9fa" Offset="0"/>
                        <GradientStop Color="#e9ecef" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#dee2e6"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
    </Window.Resources>
    
    <!-- Contenu principal avec fond gradient -->
    <Border Background="{StaticResource GradientBg}" CornerRadius="12" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.3"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Barre de titre personnalisÃ©e -->
            <Border Grid.Row="0" Background="#667eea" CornerRadius="12,12,0,0" 
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Margin="20,12">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="26" Height="26" CornerRadius="5" Background="#3498db" Margin="0,0,10,0">
                        <TextBlock Text="â˜°" Foreground="White" FontWeight="Bold" FontSize="14" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="iProperties Summary" FontSize="18" FontWeight="Bold" Foreground="White"/>
                </StackPanel>
                    <Button Content="âœ•" HorizontalAlignment="Right" Width="30" Height="30"
                            Background="Transparent" Foreground="White" BorderThickness="0"
                            FontSize="16" FontWeight="Bold" Cursor="Hand"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>
            
            <!-- Container blanc -->
            <Border Grid.Row="1" Background="White" CornerRadius="0,0,12,12" Margin="15,0,15,15">
                <Grid Margin="25">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Titre du fichier -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <Border Width="32" Height="32" CornerRadius="6" Background="#3498db" Margin="0,0,10,0">
                            <TextBlock Text="â—‰" Foreground="White" FontWeight="Bold" FontSize="18" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock x:Name="TxtFileName" FontSize="24" FontWeight="Bold" Foreground="#2c3e50" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Chemin du fichier -->
                    <Border Grid.Row="1" Background="#f8f9fa" CornerRadius="8" Padding="15,10"
                            BorderBrush="{StaticResource PrimaryBrush}" BorderThickness="0,0,0,3"
                            Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal">
                            <Border Width="18" Height="18" CornerRadius="9" Background="#9b59b6" Margin="0,0,8,0" VerticalAlignment="Center">
                                <TextBlock Text="â¦¿" Foreground="White" FontSize="10" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock x:Name="TxtFilePath" FontSize="12" Foreground="#2c3e50"
                                       TextWrapping="Wrap" TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Message de statut -->
                    <Border x:Name="StatusBorder" Grid.Row="2" Visibility="Collapsed"
                            CornerRadius="8" Padding="15,10" Margin="0,0,0,15"
                            HorizontalAlignment="Center" MinWidth="300">
                        <TextBlock x:Name="TxtStatus" FontSize="14" FontWeight="SemiBold"
                                   HorizontalAlignment="Center"/>
                    </Border>
                    
                    <!-- Boutons principaux -->
                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center"
                                Margin="0,0,0,20">
                        <Button x:Name="BtnClose" Content="âœ–ï¸ FERMER" Style="{StaticResource CloseButtonStyle}"
                                Click="BtnClose_Click" Margin="0,0,15,0"/>
                        <Button x:Name="BtnApply" Content="ðŸ’¾ APPLIQUER" Style="{StaticResource ApplyButtonStyle}"
                                Click="BtnApply_Click"/>
                    </StackPanel>
                    
                    <!-- Liste des propriÃ©tÃ©s par groupes (style Inventor) -->
                    <ScrollViewer Grid.Row="4" VerticalScrollBarVisibility="Auto" Margin="0,0,0,20">
                        <ItemsControl x:Name="PropertiesGroupList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,0,0,5">
                                        <!-- Header du groupe (style onglet Inventor) -->
                                        <Border Background="{Binding ColorBrush}" Padding="12,8" CornerRadius="4,4,0,0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Name}" FontSize="13" FontWeight="SemiBold" 
                                                           Foreground="White" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                        
                                        <!-- PropriÃ©tÃ©s du groupe -->
                                        <Border Background="White" BorderBrush="#dee2e6" BorderThickness="1,0,1,1"
                                                Padding="10" CornerRadius="0,0,4,4" Margin="0,0,0,15">
                                            <ItemsControl ItemsSource="{Binding Properties}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid Margin="0,0,0,8">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="180"/>
                                                                <ColumnDefinition Width="10"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            
                                                            <!-- Label de la propriÃ©tÃ© -->
                                                            <Border Grid.Column="0" Style="{StaticResource PropertyLabelStyle}">
                                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                                    <Border Width="22" Height="22" CornerRadius="11" 
                                                                            Background="{Binding IconBrush}" Margin="0,0,8,0">
                                                                        <TextBlock Text="{Binding Icon}" 
                                                                                   Foreground="White" FontWeight="Bold"
                                                                                   FontSize="10" HorizontalAlignment="Center" 
                                                                                   VerticalAlignment="Center"/>
                                                                    </Border>
                                                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" 
                                                                               Foreground="#2c3e50" FontSize="12"
                                                                               VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                                                </StackPanel>
                                                            </Border>
                                                            
                                                            <!-- Valeur de la propriÃ©tÃ© -->
                                                            <TextBox Grid.Column="2" Style="{StaticResource ModernTextBoxStyle}"
                                                                     Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                     Tag="{Binding Name}"/>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </Border>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <!-- Section Ajouter nouvelle propriÃ©tÃ© -->
                    <Border Grid.Row="5" BorderBrush="#dee2e6" BorderThickness="0,2,0,0"
                            Padding="0,20,0,0" Margin="0,0,0,15">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                                <Border Width="22" Height="22" CornerRadius="11" Background="{StaticResource SuccessBrush}" Margin="0,0,8,0">
                                    <TextBlock Text="+" Foreground="White" FontWeight="Bold" FontSize="14" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Ajouter une nouvelle propriÃ©tÃ©" FontSize="14"
                                           FontWeight="SemiBold" Foreground="{StaticResource SuccessBrush}"/>
                            </StackPanel>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="280"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Nom de la nouvelle propriÃ©tÃ© -->
                                <Border Grid.Column="0" Height="45" CornerRadius="22" Padding="15,0"
                                        BorderBrush="#81c784" BorderThickness="2">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#e8f5e9" Offset="0"/>
                                            <GradientStop Color="#c8e6c9" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Width="24" Height="24" CornerRadius="12" Background="#2ecc71" Margin="0,0,10,0">
                                            <TextBlock Text="N" Foreground="White" FontWeight="Bold" FontSize="12" 
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBox x:Name="TxtNewPropertyName" Grid.Column="1" 
                                                 BorderThickness="0" Background="Transparent"
                                                 FontSize="14" FontWeight="SemiBold"
                                                 VerticalContentAlignment="Center"
                                                 TextChanged="TxtNewPropertyName_TextChanged">
                                            <TextBox.Style>
                                                <Style TargetType="TextBox">
                                                    <Style.Resources>
                                                        <VisualBrush x:Key="PlaceholderBrush" AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                                            <VisualBrush.Visual>
                                                                <TextBlock Text="Nom de la propriÃ©tÃ©..." Foreground="#66bb6a" FontStyle="Italic"/>
                                                            </VisualBrush.Visual>
                                                        </VisualBrush>
                                                    </Style.Resources>
                                                    <Style.Triggers>
                                                        <Trigger Property="Text" Value="">
                                                            <Setter Property="Background" Value="{StaticResource PlaceholderBrush}"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBox.Style>
                                        </TextBox>
                                    </Grid>
                                </Border>
                                
                                <!-- Valeur de la nouvelle propriÃ©tÃ© -->
                                <Border Grid.Column="2" Height="45" CornerRadius="22" Padding="15,0"
                                        BorderBrush="#81c784" BorderThickness="2" Background="#f1f8e9">
                                    <TextBox x:Name="TxtNewPropertyValue" BorderThickness="0" Background="Transparent"
                                             FontSize="14" VerticalContentAlignment="Center">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Style.Resources>
                                                    <VisualBrush x:Key="PlaceholderBrush" AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                                        <VisualBrush.Visual>
                                                            <TextBlock Text="Valeur initiale..." Foreground="#66bb6a" FontStyle="Italic"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Style.Resources>
                                                <Style.Triggers>
                                                    <Trigger Property="Text" Value="">
                                                        <Setter Property="Background" Value="{StaticResource PlaceholderBrush}"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </Border>
                            </Grid>
                            
                            <!-- Bouton Ajouter centrÃ© -->
                            <Button x:Name="BtnAddProperty" Content="âž• AJOUTER LA PROPRIÃ‰TÃ‰"
                                    Style="{StaticResource AddButtonStyle}"
                                    HorizontalAlignment="Center" Margin="0,20,0,0"
                                    IsEnabled="False" Click="BtnAddProperty_Click"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Footer -->
                    <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Border Width="16" Height="16" CornerRadius="3" Background="#f39c12" Margin="0,0,6,0">
                            <TextBlock Text="â—†" Foreground="White" FontSize="10" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Smart iProperties Summary V2.0 - By Mohammed Amine Elgalai - XNRGY Climate Systems ULC"
                                   FontSize="11" Foreground="#95a5a6"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>

