                BorderBrush="#4A7FBF" BorderThickness="2">
            <Grid>
                <!-- Fond de progression -->
                <Border Background="#1E1E2E" CornerRadius="4" Margin="4" ClipToBounds="True">
                    <Grid>
                        <!-- Barre de progression verte avec effet -->
                        <Border x:Name="ProgressBarFill" Background="#28A745" CornerRadius="4" 
                                HorizontalAlignment="Left" Width="0">
                            <Border.Effect>
                                <DropShadowEffect Color="#00FF7F" BlurRadius="15" ShadowDepth="0" Opacity="0.45"/>
                            </Border.Effect>
                        </Border>
                        
                        <!-- Contenu de la barre -->
                        <Grid Margin="12,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Statut Ã  gauche -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock x:Name="TxtProgressLabel" Text="Pret" 
                                           Foreground="White" FontSize="12" FontWeight="Bold"/>
                            </StackPanel>
                            
                            <!-- Fichier en cours au centre -->
                            <TextBlock x:Name="TxtCurrentFile" Grid.Column="1" Text="" 
                                       Foreground="#FFB74D" FontSize="11" FontWeight="SemiBold"
                                       VerticalAlignment="Center" HorizontalAlignment="Center"
                                       TextTrimming="CharacterEllipsis" MaxWidth="400"/>
                            
                            <!-- Temps et pourcentage Ã  droite -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Ecoule: " Foreground="#888888" FontSize="11" VerticalAlignment="Center"/>
                                <TextBlock x:Name="TxtProgressTimeElapsed" Text="00:00" Foreground="White" FontSize="11" FontWeight="Bold" VerticalAlignment="Center"/>
                                <TextBlock Text=" | Estime: " Foreground="#888888" FontSize="11" VerticalAlignment="Center" Margin="8,0,0,0"/>
                                <TextBlock x:Name="TxtProgressTimeEstimated" Text="--:--" Foreground="White" FontSize="11" FontWeight="Bold" VerticalAlignment="Center"/>
                                <TextBlock Text=" | " Foreground="#888888" FontSize="11" VerticalAlignment="Center" Margin="8,0,8,0"/>
                                <TextBlock x:Name="TxtProgressPercent" Text="0%" Foreground="#00D4FF" FontSize="12" FontWeight="Bold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- ========== JOURNAL (Row 3 - Hauteur standard 200px) ========== -->
        <Border Grid.Row="3" Background="{DynamicResource DarkBg2}" BorderBrush="#4A7FBF" 
                BorderThickness="2" CornerRadius="6" Margin="10,0,10,8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header Journal - Compact -->
                <Border Grid.Row="0" Background="#2A4A6F" CornerRadius="6,6,0,0" Padding="8,3">
                    <Grid>
                        <TextBlock Text="ðŸ“‹ Journal des Operations" FontSize="12" FontWeight="Bold" 
                                   Foreground="White" VerticalAlignment="Center"/>
                        <Button x:Name="BtnClearLog" Content="ðŸ—‘ï¸ Effacer" HorizontalAlignment="Right" 
                                Style="{StaticResource JournalClearButton}"
                                Click="BtnClearLog_Click"/>
                    </Grid>
                </Border>
                
                <!-- Contenu Journal avec couleurs -->
                <RichTextBox x:Name="TxtLog" Grid.Row="1" Background="Transparent" 
                             BorderThickness="0" IsReadOnly="True" 
                             FontFamily="Consolas" FontSize="14" Padding="10,5"
                             VerticalScrollBarVisibility="Auto"
                             Foreground="White">
                    <RichTextBox.Resources>
                        <Style TargetType="Paragraph">
                            <Setter Property="Margin" Value="0,2"/>
                        </Style>
                    </RichTextBox.Resources>
                    <FlowDocument>
                        <Paragraph/>
                    </FlowDocument>
                </RichTextBox>
            </Grid>
        </Border>

        <!-- ========== COPYRIGHT BAR (Row 4) - Utilise styles centralises ========== -->
        <Border x:Name="StatusBorder" Grid.Row="4" Style="{StaticResource CopyrightBarBorder}">
            <Grid>
                <TextBlock x:Name="StatusText" Text="Pret" Style="{StaticResource StatusTextStyle}"/>
                <TextBlock x:Name="CopyrightText" Style="{StaticResource CopyrightTextStyle}" HorizontalAlignment="Right"
                           Text="{StaticResource CopyrightSmartTools}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
