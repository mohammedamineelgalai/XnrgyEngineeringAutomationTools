<Window x:Class="XnrgyEngineeringAutomationTools.Modules.SmartTools.Views.ExportOptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Export IAM vers IPT/STEP - Options - By Mohammed Amine Elgalai - XNRGY CLIMATE SYSTEMS ULC"
        Height="450" Width="550"
        MinHeight="400" MinWidth="500"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E2E"
        ResizeMode="NoResize"
        ShowInTaskbar="True">

    <Window.Resources>
        <SolidColorBrush x:Key="XnrgyBlue" Color="#0078D4"/>
        <SolidColorBrush x:Key="XnrgyGreen" Color="#107C10"/>
        <SolidColorBrush x:Key="DarkBg" Color="#1E1E2E"/>
        <SolidColorBrush x:Key="DarkBg2" Color="#252536"/>
        <SolidColorBrush x:Key="BorderColor" Color="#4A7FBF"/>
        <SolidColorBrush x:Key="TextLight" Color="#E0E0E0"/>
        
        <!-- Style TextBox -->
        <Style x:Key="DarkTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#252536"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#4A7FBF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        
        <!-- Style Button -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1E90FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style RadioButton -->
        <Style x:Key="DarkRadioButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,8"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2A4A6F" Padding="16,12">
            <StackPanel>
                <TextBlock Text="ðŸ”„ Export IAM vers IPT/STEP" FontSize="18" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Convertir un assemblage en fichier unique IPT (solides multiples) ou STEP" 
                           FontSize="12" Foreground="#FFB74D" Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Contenu -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                
                <!-- Nom du fichier source -->
                <TextBlock Text="Assemblage source:" FontWeight="SemiBold" Foreground="#0078D4" FontSize="13" Margin="0,0,0,6"/>
                <Border Background="#252536" CornerRadius="4" Padding="12,10" Margin="0,0,0,16"
                        BorderBrush="#4A7FBF" BorderThickness="1">
                    <TextBlock x:Name="TxtSourceFile" Text="--" Foreground="#E0E0E0" FontSize="13" TextWrapping="Wrap"/>
                </Border>
                
                <!-- Format d'export -->
                <TextBlock Text="Format d'export:" FontWeight="SemiBold" Foreground="#0078D4" FontSize="13" Margin="0,0,0,8"/>
                <Border Background="#252536" CornerRadius="4" Padding="16,12" Margin="0,0,0,16"
                        BorderBrush="#4A7FBF" BorderThickness="1">
                    <StackPanel>
                        <RadioButton x:Name="RbExportIPT" Content="IPT - PiÃ¨ce Inventor (solides multiples)" 
                                     Style="{StaticResource DarkRadioButton}" IsChecked="True" GroupName="ExportFormat"/>
                        <RadioButton x:Name="RbExportSTEP" Content="STEP - Format d'Ã©change standard (AP214)" 
                                     Style="{StaticResource DarkRadioButton}" GroupName="ExportFormat"/>
                    </StackPanel>
                </Border>
                
                <!-- Dossier de destination -->
                <TextBlock Text="Dossier de destination:" FontWeight="SemiBold" Foreground="#0078D4" FontSize="13" Margin="0,0,0,6"/>
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="TxtDestinationPath" Grid.Column="0" Style="{StaticResource DarkTextBox}"
                             Text="C:\Vault\Engineering\Projects\"/>
                    <Button x:Name="BtnBrowse" Grid.Column="1" Content="ðŸ“ Parcourir" 
                            Style="{StaticResource ActionButton}" Margin="8,0,0,0"
                            Background="#FF8C00" Click="BtnBrowse_Click"/>
                </Grid>
                
                <!-- Nom du fichier de sortie -->
                <TextBlock Text="Nom du fichier de sortie:" FontWeight="SemiBold" Foreground="#0078D4" FontSize="13" Margin="0,0,0,6"/>
                <TextBox x:Name="TxtOutputFileName" Style="{StaticResource DarkTextBox}" Margin="0,0,0,16"
                         Text=""/>
                <TextBlock Text="Format suggÃ©rÃ©: PROJET-REF-MODULE (ex: 10516-01-M06)" 
                           FontSize="11" Foreground="#888888" Margin="0,-12,0,16"/>
                
                <!-- Options -->
                <TextBlock Text="Options:" FontWeight="SemiBold" Foreground="#0078D4" FontSize="13" Margin="0,0,0,8"/>
                <Border Background="#252536" CornerRadius="4" Padding="16,12" 
                        BorderBrush="#4A7FBF" BorderThickness="1">
                    <StackPanel>
                        <CheckBox x:Name="ChkHideReferences" Content="Masquer les Ã©lÃ©ments de rÃ©fÃ©rence avant export" 
                                  Foreground="#E0E0E0" FontSize="13" IsChecked="True" Margin="0,4"/>
                        <CheckBox x:Name="ChkActivateDefaultRep" Content="Activer la reprÃ©sentation par dÃ©faut" 
                                  Foreground="#E0E0E0" FontSize="13" IsChecked="True" Margin="0,4"/>
                        <CheckBox x:Name="ChkOpenAfterExport" Content="Ouvrir le fichier aprÃ¨s export" 
                                  Foreground="#E0E0E0" FontSize="13" IsChecked="False" Margin="0,4"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer avec boutons -->
        <Border Grid.Row="2" Background="#252536" Padding="16,12" BorderBrush="#4A7FBF" BorderThickness="0,2,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button x:Name="BtnCancel" Grid.Column="1" Content="Annuler" 
                        Style="{StaticResource ActionButton}" Background="#6B7280"
                        Width="100" Margin="0,0,12,0" Click="BtnCancel_Click"/>
                <Button x:Name="BtnExport" Grid.Column="2" Content="ðŸ”„ Exporter" 
                        Style="{StaticResource ActionButton}" Background="#107C10"
                        Width="120" Click="BtnExport_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
