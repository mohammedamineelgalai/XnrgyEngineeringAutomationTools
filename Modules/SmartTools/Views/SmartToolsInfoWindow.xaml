                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- SECTION SAFE -->
                <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="ðŸ›¡ï¸ Safe Operations"/>
                
                <!-- SafeClose -->
                <Border Style="{StaticResource ToolCardStyle}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="ðŸ”’ Safe Close" Style="{StaticResource ToolTitleStyle}"/>
                            <Border Style="{StaticResource PanelBadgeStyle}">
                                <TextBlock Text="Tous documents" FontSize="10" Foreground="White"/>
                            </Border>
                        </StackPanel>
                        <TextBlock Style="{StaticResource ToolDescriptionStyle}" 
                                   Text="Fermeture securisee avec support des elements Dummy."/>
                        <StackPanel Margin="0,10,0,0">
                            <TextBlock Style="{StaticResource FeatureItemStyle}" Text="âœ… Sauvegarde automatique avant fermeture"/>
                            <TextBlock Style="{StaticResource FeatureItemStyle}" Text="âœ… Gestion des references"/>
                            <TextBlock Style="{StaticResource FeatureItemStyle}" Text="âœ… Protection contre perte de donnees"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- SmartSave -->
                <Border Style="{StaticResource ToolCardStyle}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="ðŸ’¾ Smart Save" Style="{StaticResource ToolTitleStyle}"/>
                            <Border Style="{StaticResource PanelBadgeStyle}">
                                <TextBlock Text="Tous documents" FontSize="10" Foreground="White"/>
                            </Border>
                        </StackPanel>
                        <TextBlock Style="{StaticResource ToolDescriptionStyle}" 
                                   Text="Sauvegarde intelligente sans fermeture."/>
                        <StackPanel Margin="0,10,0,0">
                            <TextBlock Style="{StaticResource FeatureItemStyle}" Text="âœ… Sauvegarde incrementale"/>
                            <TextBlock Style="{StaticResource FeatureItemStyle}" Text="âœ… Pas d'interruption du travail"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- SECTION EXPORT -->
                <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="ðŸ“¤ Export Tools"/>
                
                <!-- ExportIAMToIPT -->
                <Border Style="{StaticResource ToolCardNewStyle}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="ðŸ”„ Export IAM to IPT/STEP" Style="{StaticResource ToolTitleStyle}"/>
                            <Border Style="{StaticResource PanelBadgeStyle}">
                                <TextBlock Text="Assembly" FontSize="10" Foreground="White"/>
                            </Border>
                        </StackPanel>
                        <TextBlock Style="{StaticResource ToolDescriptionStyle}" 
                                   Text="Export d'assemblage vers IPT/STEP."/>
                        <StackPanel Margin="0,10,0,0">
                            <TextBlock Style="{StaticResource FeatureItemStyle}" Text="âœ… Bouton Parcourir + edition manuelle du chemin"/>
                            <TextBlock Style="{StaticResource FeatureItemStyle}" Text="âœ… Export vers formats IPT et STEP"/>
                            <TextBlock Style="{StaticResource FeatureItemStyle}" Text="âœ… Support Inventor 2026"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- ExportIDWtoShopPDF -->
                <Border Style="{StaticResource ToolCardNewStyle}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="ðŸ“‘ Export IDW to Shop PDF" Style="{StaticResource ToolTitleStyle}"/>
                            <Border Style="{StaticResource PanelBadgeStyle}">
                                <TextBlock Text="Drawing" FontSize="10" Foreground="White"/>
                            </Border>
                        </StackPanel>
                        <TextBlock Style="{StaticResource ToolDescriptionStyle}" 
                                   Text="Export de dessins en PDF vers 6-Shop Drawing PDF."/>
                        <StackPanel Margin="0,10,0,0">
                            <TextBlock Style="{StaticResource FeatureItemStyle}" Text="âœ… Option Parcourir si dossier non trouve"/>
                            <TextBlock Style="{StaticResource FeatureItemStyle}" Text="âœ… Export PDF automatique"/>
                            <TextBlock Style="{StaticResource FeatureItemStyle}" Text="âœ… Nommage intelligent"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- SECTION UTILITIES -->
                <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="âš™ï¸ Utilities"/>
                
                <!-- FormCenteringUtility -->
                <Border Style="{StaticResource ToolCardStyle}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="ðŸŽ¯ Form Centering Utility" Style="{StaticResource ToolTitleStyle}"/>
                        </StackPanel>
                        <TextBlock Style="{StaticResource ToolDescriptionStyle}" 
                                   Text="Centrage des formulaires generiques."/>
                    </StackPanel>
                </Border>
                
                <!-- iLogicFormsCentred -->
                <Border Style="{StaticResource ToolCardStyle}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="ðŸ”² iLogic Forms Centred" Style="{StaticResource ToolTitleStyle}"/>
                        </StackPanel>
                        <TextBlock Style="{StaticResource ToolDescriptionStyle}" 
                                   Text="Detection et centrage des formulaires iLogic."/>
                    </StackPanel>
                </Border>
                
                <!-- Spacer at bottom -->
                <Border Height="20"/>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- FOOTER -->
        <Border Grid.Row="2" Background="#16213e" Padding="20">
            <Grid>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ‘¨â€ðŸ’» Developpe par: Mohammed Amine El Galai" 
                               FontSize="13" Foreground="#adb5bd" HorizontalAlignment="Center"/>
                    <TextBlock Text="ðŸ¢ XNRGY Climate Systems ULC" 
                               FontSize="12" Foreground="#6c757d" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>
                <Button Content="âœ… OK" 
                        HorizontalAlignment="Right" 
                        Width="100" Height="35"
                        FontSize="14" FontWeight="SemiBold"
                        Background="#4361ee" Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BtnOk_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                                CornerRadius="6" Padding="15,8">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#3a56d4"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#2d4bb8"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
        
    </Grid>
</Window>
