                    <StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="ðŸ“‹ Rapport Contraintes" Style="{StaticResource ToolTitleStyle}"/>
                            <Border Style="{StaticResource PanelBadgeStyle}">
