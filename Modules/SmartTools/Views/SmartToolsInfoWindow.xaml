                    <StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="ðŸ“ Smart Ref Visibility" Style="{StaticResource ToolTitleStyle}"/>
                            <Border Style="{StaticResource PanelBadgeStyle}">
                                <TextBlock Text="Assembly + Part" FontSize="10" Foreground="White"/>
                            </Border>
                        </StackPanel>
                        <TextBlock Style="{StaticResource ToolDescriptionStyle}" 
                                   Text="Basculer la visibilite des references (Plans, Axes, Points)."/>
                        <StackPanel Margin="0,10,0,0">
                            <TextBlock Style="{StaticResource FeatureItemStyle}" Text="âœ… Detection automatique de l'etat actuel"/>
                            <TextBlock Style="{StaticResource FeatureItemStyle}" Text="âœ… Application recursive dans assemblages"/>
                            <TextBlock Style="{StaticResource FeatureItemStyle}" Text="âœ… Statistiques detaillees"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- ToggleSketchVisibility -->
                <Border Style="{StaticResource ToolCardStyle}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="âœï¸ Smart Sketch Visibility" Style="{StaticResource ToolTitleStyle}"/>
                            <Border Style="{StaticResource PanelBadgeStyle}">
                                <TextBlock Text="Assembly + Part" FontSize="10" Foreground="White"/>
                            </Border>
                        </StackPanel>
                        <TextBlock Style="{StaticResource ToolDescriptionStyle}" 
                                   Text="Basculer la visibilite de toutes les esquisses (2D et 3D)."/>
                        <StackPanel Margin="0,10,0,0">
                            <TextBlock Style="{StaticResource FeatureItemStyle}" Text="âœ… Support esquisses 2D et 3D"/>
                            <TextBlock Style="{StaticResource FeatureItemStyle}" Text="âœ… Fonctionne sur .ipt et .iam"/>
