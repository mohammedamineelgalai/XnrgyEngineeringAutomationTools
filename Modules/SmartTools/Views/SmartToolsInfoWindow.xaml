                    </StackPanel>
                </Border>
                
                <!-- NOUVEAUTES -->
                <Border Background="#2d1b4e" CornerRadius="10" Padding="20" Margin="0,20,0,0" BorderBrush="#e91e63" BorderThickness="2">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“‹ Nouveautes" FontSize="18" FontWeight="Bold" Foreground="#e91e63"/>
                            <Border Background="#e91e63" CornerRadius="4" Padding="8,2" Margin="10,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="NEW" FontSize="10" FontWeight="Bold" Foreground="White"/>
                            </Border>
                        </StackPanel>
                        <StackPanel Margin="0,15,0,0">
                            <TextBlock Style="{StaticResource FeatureItemStyle}" Text="âœ… Migration vers Inventor 2026"/>
                            <TextBlock Style="{StaticResource FeatureItemStyle}" Text="âœ… Support du nouveau chemin C:\Vault\Engineering\Projects\"/>
                            <TextBlock Style="{StaticResource FeatureItemStyle}" Text="âœ… ExportIAMToIPT: Bouton Parcourir + edition manuelle du chemin"/>
