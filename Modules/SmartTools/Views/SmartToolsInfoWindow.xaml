                            </Border>
                        </StackPanel>
                        <TextBlock Style="{StaticResource ToolDescriptionStyle}" 
                                   Text="Genere un rapport HTML detaille sur l'etat des contraintes de l'assemblage."/>
                        <StackPanel Margin="0,10,0,0">
                            <TextBlock Style="{StaticResource FeatureItemStyle}" Text="âœ… Analyse des degres de liberte (DoF)"/>
                            <TextBlock Style="{StaticResource FeatureItemStyle}" Text="âœ… Test des contraintes critiques"/>
                            <TextBlock Style="{StaticResource FeatureItemStyle}" Text="âœ… Interface HTML responsive moderne"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- SECTION PROPERTIES -->
                <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="ðŸ·ï¸ Properties"/>
                
                <!-- iPropertiesSummary -->
                <Border Style="{StaticResource ToolCardStyle}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="ðŸ“„ Resume iProperties" Style="{StaticResource ToolTitleStyle}"/>
                            <Border Style="{StaticResource PanelBadgeStyle}">
                                <TextBlock Text="Assembly seulement" FontSize="10" Foreground="White"/>
                            </Border>
                        </StackPanel>
                        <TextBlock Style="{StaticResource ToolDescriptionStyle}" 
                                   Text="Resume des proprietes avec chemin complet."/>
                        <StackPanel Margin="0,10,0,0">
                            <TextBlock Style="{StaticResource FeatureItemStyle}" Text="âœ… Lecture recursive des iProperties"/>
