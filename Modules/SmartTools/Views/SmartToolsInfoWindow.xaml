                        <StackPanel Margin="0,10,0,0">
                            <TextBlock Style="{StaticResource FeatureItemStyle}" Text="âœ… Masque: box, template, multi_opening, cut_opening"/>
                            <TextBlock Style="{StaticResource FeatureItemStyle}" Text="âœ… Exclut intelligemment les J_BOX et Cross_Member"/>
