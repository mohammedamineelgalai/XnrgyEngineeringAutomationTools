<Window x:Class="XnrgyEngineeringAutomationTools.Modules.SmartTools.Views.SmartToolsInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Smart Tools - Informations"
        Width="950" Height="850"
        MinWidth="850" MinHeight="700"
        WindowStartupLocation="CenterScreen"
        Background="#1a1a2e"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <!-- Styles pour les cartes d'outils -->
        <Style x:Key="ToolCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2d2d44"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="0,8,0,8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="BorderThickness" Value="0,0,0,3"/>
            <Setter Property="BorderBrush" Value="#4361ee"/>
        </Style>
        
        <Style x:Key="ToolCardNewStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#2d2d44" Offset="0"/>
                        <GradientStop Color="#3a2d5a" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="0,8,0,8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="BorderThickness" Value="0,0,0,3"/>
            <Setter Property="BorderBrush" Value="#e91e63"/>
        </Style>
        
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#4cc9f0"/>
            <Setter Property="Margin" Value="0,20,0,10"/>
        </Style>
        
        <Style x:Key="ToolTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#f8f9fa"/>
        </Style>
        
        <Style x:Key="ToolDescriptionStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#adb5bd"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
        </Style>
        
        <Style x:Key="FeatureItemStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#4ade80"/>
            <Setter Property="Margin" Value="15,3,0,0"/>
        </Style>
        
        <Style x:Key="VersionBadgeStyle" TargetType="Border">
            <Setter Property="Background" Value="#ff9800"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
        </Style>
        
        <Style x:Key="PanelBadgeStyle" TargetType="Border">
            <Setter Property="Background" Value="#7c3aed"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="8,3"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
        </Style>
        
        <Style x:Key="NewBadgeStyle" TargetType="Border">
            <Setter Property="Background" Value="#e91e63"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- HEADER -->
