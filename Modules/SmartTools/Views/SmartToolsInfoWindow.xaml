                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- SECTION REPORTS -->
                <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="ðŸ“Š Reports"/>
                
                <!-- ConstraintReport -->
