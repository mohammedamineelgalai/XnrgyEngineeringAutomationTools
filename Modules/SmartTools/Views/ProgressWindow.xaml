<Window x:Class="XnrgyEngineeringAutomationTools.Modules.SmartTools.Views.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="XNRGY Smart Tools - Progression"
        Height="750" Width="700"
        MinHeight="600" MinWidth="500"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E2E"
        ResizeMode="NoResize"
        ShowInTaskbar="True"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <SolidColorBrush x:Key="XnrgyBlue" Color="#0078D4"/>
        <SolidColorBrush x:Key="DarkBg" Color="#1E1E2E"/>
        <SolidColorBrush x:Key="DarkBg2" Color="#252536"/>
        <SolidColorBrush x:Key="BorderColor" Color="#4A7FBF"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2A4A6F" Padding="12,8">
            <TextBlock x:Name="TxtTitle" 
                       FontSize="16" FontWeight="Bold" Foreground="White"
                       VerticalAlignment="Center" TextTrimming="CharacterEllipsis"
                       Text="Progression"/>
        </Border>

        <!-- WebView2 pour le contenu HTML dynamique -->
        <Border Grid.Row="1" Background="#252536" Margin="0" CornerRadius="0"
                BorderBrush="#4A7FBF" BorderThickness="0">
            <wv2:WebView2 x:Name="WebViewContent" 
                          DefaultBackgroundColor="Transparent"/>
        </Border>
    </Grid>
</Window>

