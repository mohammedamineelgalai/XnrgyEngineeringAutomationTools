<Window x:Class="XnrgyEngineeringAutomationTools.Modules.SmartTools.Views.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Smart Tools Progress" 
        Height="650" Width="850"
        WindowStartupLocation="CenterOwner"
        Background="#f5f5f5"
        ResizeMode="CanResizeWithGrip"
        ShowInTaskbar="False">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Barre de titre -->
        <Border Grid.Row="0" Background="#667eea" Padding="15,10">
            <TextBlock x:Name="TxtTitle" Text="Smart Tools" FontSize="16" FontWeight="Bold" Foreground="White"/>
        </Border>
        
        <!-- Contenu WebView2 -->
        <wv2:WebView2 x:Name="WebViewContent" Grid.Row="1"/>
    </Grid>
</Window>

