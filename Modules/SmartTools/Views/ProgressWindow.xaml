<Window x:Class="XnrgyEngineeringAutomationTools.Modules.SmartTools.Views.SmartProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Smart Tools" 
        Height="500" Width="600"
        MinHeight="400" MinWidth="500"
        WindowStartupLocation="Manual"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True">
    
    <Window.Resources>
        <!-- Couleurs -->
        <SolidColorBrush x:Key="SuccessBrush" Color="#27ae60"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#e74c3c"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#f39c12"/>
        <SolidColorBrush x:Key="InfoBrush" Color="#3498db"/>
        <SolidColorBrush x:Key="PendingBrush" Color="#95a5a6"/>
        
        <!-- Animation de rotation pour le chargement -->
        <Storyboard x:Key="SpinAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                             From="0" To="360" Duration="0:0:1"/>
        </Storyboard>
    </Window.Resources>
    
    <!-- Contenu principal -->
    <Border CornerRadius="12" Margin="10">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#667eea" Offset="0"/>
                <GradientStop Color="#764ba2" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.4"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" Background="#5a6fd6" CornerRadius="12,12,0,0" Padding="20,15"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border x:Name="HeaderIcon" Width="32" Height="32" CornerRadius="16" 
                                Background="White" Margin="0,0,12,0">
                            <TextBlock x:Name="HeaderIconText" Text="⚡" FontSize="18" 
                                       Foreground="#5a6fd6" FontWeight="Bold"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock x:Name="TxtTitle" Text="Smart Operation" FontSize="20" FontWeight="Bold" 
                                   Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button Content="✕" HorizontalAlignment="Right" Width="30" Height="30"
                            Background="Transparent" Foreground="White" BorderThickness="0"
                            FontSize="16" FontWeight="Bold" Cursor="Hand"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>
            
            <!-- Liste des opérations -->
            <Border Grid.Row="1" Background="White" Margin="15,0,15,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
                    <StackPanel x:Name="OperationsList"/>
                </ScrollViewer>
            </Border>
            
            <!-- Footer avec progression globale -->
            <Border Grid.Row="2" Background="#f8f9fa" CornerRadius="0,0,12,12" Padding="20,15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Barre de progression -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Border Height="8" CornerRadius="4" Background="#e0e0e0"/>
                        <Border x:Name="ProgressBar" Height="8" CornerRadius="4" HorizontalAlignment="Left" Width="0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#27ae60" Offset="0"/>
                                    <GradientStop Color="#2ecc71" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Grid>
                    
                    <!-- Status et bouton -->
                    <Grid Grid.Row="1">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Border x:Name="StatusIcon" Width="24" Height="24" CornerRadius="12" 
                                    Background="{StaticResource InfoBrush}" Margin="0,0,10,0">
                                <TextBlock x:Name="StatusIconText" Text="⏳" FontSize="12" Foreground="White"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock x:Name="TxtStatus" Text="En cours..." FontSize="14" 
                                       Foreground="#2c3e50" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <Button x:Name="BtnClose" Content="Fermer" HorizontalAlignment="Right"
                                Padding="20,8" FontSize="14" FontWeight="SemiBold"
                                Background="#3498db" Foreground="White" BorderThickness="0"
                                Cursor="Hand" Visibility="Collapsed" Click="BtnClose_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="20" 
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
