<Window x:Class="XnrgyEngineeringAutomationTools.Modules.SmartTools.Views.SmartProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Progression - XNRGY Engineering Automation Tools" 
        Icon="/Resources/XnrgyEngineeringAutomationTools.ico"
        SizeToContent="Height"
        Width="680"
        MaxHeight="900"
        MinHeight="400" MinWidth="600"
        WindowStartupLocation="Manual"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True">
    
    <Window.Resources>
        <!-- Couleurs -->
        <SolidColorBrush x:Key="SuccessBrush" Color="#27ae60"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#e74c3c"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#f39c12"/>
        <SolidColorBrush x:Key="InfoBrush" Color="#3498db"/>
        <SolidColorBrush x:Key="PendingBrush" Color="#95a5a6"/>
    </Window.Resources>
    
    <!-- Contenu principal -->
    <Border CornerRadius="12" Margin="10">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#667eea" Offset="0"/>
                <GradientStop Color="#764ba2" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.4"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" Background="#5a6fd6" CornerRadius="12,12,0,0" Padding="20,15"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border x:Name="HeaderIcon" Width="32" Height="32" CornerRadius="16" 
                                Background="White" Margin="0,0,12,0">
                            <TextBlock x:Name="HeaderIconText" Text="âš¡" FontSize="18" 
                                       Foreground="#5a6fd6" FontWeight="Bold"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock x:Name="TxtTitle" Text="Smart Operation" FontSize="20" FontWeight="Bold" 
                                   Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button Content="âœ•" HorizontalAlignment="Right" Width="30" Height="30"
                            Background="Transparent" Foreground="White" BorderThickness="0"
                            FontSize="16" FontWeight="Bold" Cursor="Hand"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>
            
            <!-- Info Document -->
            <Border Grid.Row="1" Background="White" Margin="15,15,15,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Info Box -->
                    <Border Grid.Row="0" Background="#e8f5e9" CornerRadius="8" Padding="12" Margin="10,10,10,5"
                            BorderBrush="#4caf50" BorderThickness="1">
                        <StackPanel x:Name="InfoPanel">
                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <TextBlock Text="ðŸ“„" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Document:" FontWeight="SemiBold" Foreground="#2e7d32" Margin="0,0,5,0"/>
                                <TextBlock x:Name="TxtDocName" Text="..." Foreground="#333"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <TextBlock Text="ðŸ“‹" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Type:" FontWeight="SemiBold" Foreground="#2e7d32" Margin="0,0,5,0"/>
                                <TextBlock x:Name="TxtDocType" Text="..." Foreground="#333"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <TextBlock Text="ðŸ“…" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Date:" FontWeight="SemiBold" Foreground="#2e7d32" Margin="0,0,5,0"/>
                                <TextBlock x:Name="TxtDate" Text="..." Foreground="#333"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <TextBlock Text="ðŸ‘¨â€ðŸ’»" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="DÃ©veloppÃ© par:" FontWeight="SemiBold" Foreground="#2e7d32" Margin="0,0,5,0"/>
                                <TextBlock Text="Mohammed Amine El Galai" Foreground="#333"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Liste des opÃ©rations - Toutes les Ã©tapes visibles -->
                    <StackPanel x:Name="OperationsList" Grid.Row="1" Margin="10,10,10,10"/>
                </Grid>
            </Border>
            
            <!-- Footer avec progression globale -->
            <Border Grid.Row="2" Background="#f8f9fa" CornerRadius="0,0,12,12" Padding="20,15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Barre de progression -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Border Height="8" CornerRadius="4" Background="#e0e0e0"/>
                        <Border x:Name="ProgressBar" Height="8" CornerRadius="4" HorizontalAlignment="Left" Width="0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#27ae60" Offset="0"/>
                                    <GradientStop Color="#2ecc71" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Grid>
                    
                    <!-- Status et bouton -->
                    <Grid Grid.Row="1">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Border x:Name="StatusIcon" Width="24" Height="24" CornerRadius="12" 
                                    Background="{StaticResource InfoBrush}" Margin="0,0,10,0">
                                <TextBlock x:Name="StatusIconText" Text="â—Œ" FontSize="12" Foreground="White"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock x:Name="TxtStatus" Text="En cours..." FontSize="14" 
                                       Foreground="#2c3e50" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <Button x:Name="BtnClose" Content="Fermer" HorizontalAlignment="Right"
                                Padding="20,8" FontSize="14" FontWeight="SemiBold"
                                Background="#3498db" Foreground="White" BorderThickness="0"
                                Cursor="Hand" Visibility="Collapsed" Click="BtnClose_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="20" 
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>

