<Window x:Class="XnrgyEngineeringAutomationTools.Modules.UpdateWorkspace.Views.UpdateWorkspaceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{StaticResource WindowTitleUpdateWorkspace}" Height="920" Width="950"
        MinHeight="700" MinWidth="800"
        WindowStartupLocation="CenterScreen" ResizeMode="CanResize" Background="#1E1E2E">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Styles/XnrgyStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border BorderBrush="#4A7FBF" BorderThickness="2" CornerRadius="8" Margin="4">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="180"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ========== HEADER XNRGY STYLE (Bleu Marine) ========== -->
            <Border Grid.Row="0" Background="#2A4A6F" Padding="15,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Logo + Titre a gauche -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Background="#AEEA00" CornerRadius="8" Width="50" Height="50" Margin="0,0,12,0">
                            <TextBlock Text="&#x1F504;" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="&#x1F504; Update Workspace" FontSize="22" FontWeight="Bold" Foreground="White"/>
                            <TextBlock FontSize="12" Foreground="#FFB74D" Margin="0,3,0,0" FontWeight="SemiBold">
                                <Run Text="&#x1F4A1; Synchronisation des standards XNRGY depuis Vault"/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>

                    <!-- Droite: Status Connexion Vault -->
                    <Border Grid.Column="2" Background="#2D2D44" CornerRadius="4" Padding="10,6"
                            BorderBrush="#4A7FBF" BorderThickness="2" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse x:Name="VaultStatusIndicator" Width="10" Height="10" Fill="#10B981" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock FontWeight="SemiBold" FontSize="12">
                                <Run Text="&#x1F5C4;&#xFE0F;" Foreground="#00BFFF"/><Run x:Name="RunVaultName" Text=" Vault: TestXNRGY" Foreground="White"/>
                                <Run Text="  |  &#x1F464;" Foreground="#FFB74D"/><Run x:Name="RunUserName" Text=" Admin" Foreground="White"/>
                                <Run Text="  |  &#x1F4E1;" Foreground="#90EE90"/><Run x:Name="RunStatus" Text=" Connecte" Foreground="White"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- ========== CHECKLIST STEPS ========== -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20,10">
                <StackPanel>
                    <!-- Section Header -->
                    <Border Background="#2A4A6F" CornerRadius="6" Padding="10,8" Margin="0,0,0,12">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#x1F4CB;" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="ETAPES DE MISE A JOUR" FontSize="13" FontWeight="Bold" Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <!-- Step 1: Verification connexion -->
                    <Border Background="#252536" CornerRadius="6" Padding="12" Margin="0,3" BorderBrush="#4A7FBF" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="36"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="IconStep1" Text="&#x23F3;" FontSize="18" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TxtStep1" Grid.Column="1" Text="Verification connexion Vault" Foreground="White" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" Margin="8,0"/>
                            <TextBlock x:Name="DetailStep1" Grid.Column="2" Text="" Foreground="#FFB74D" FontSize="11" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Step 2: Telecharger Inventor_Standards -->
                    <Border Background="#252536" CornerRadius="6" Padding="12" Margin="0,3" BorderBrush="#4A7FBF" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="36"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="IconStep2" Text="&#x23F3;" FontSize="18" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TxtStep2" Grid.Column="1" Text="Telecharger Inventor_Standards" Foreground="White" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" Margin="8,0"/>
                            <TextBlock x:Name="DetailStep2" Grid.Column="2" Text="" Foreground="#FFB74D" FontSize="11" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Step 3: Telecharger Library/Cabinet -->
                    <Border Background="#252536" CornerRadius="6" Padding="12" Margin="0,3" BorderBrush="#4A7FBF" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="36"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="IconStep3" Text="&#x23F3;" FontSize="18" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TxtStep3" Grid.Column="1" Text="Telecharger Library/Cabinet" Foreground="White" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" Margin="8,0"/>
                            <TextBlock x:Name="DetailStep3" Grid.Column="2" Text="" Foreground="#FFB74D" FontSize="11" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Step 4: Telecharger Library/Xnrgy_M99 -->
                    <Border Background="#252536" CornerRadius="6" Padding="12" Margin="0,3" BorderBrush="#4A7FBF" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="36"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="IconStep4" Text="&#x23F3;" FontSize="18" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TxtStep4" Grid.Column="1" Text="Telecharger Library/Xnrgy_M99" Foreground="White" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" Margin="8,0"/>
                            <TextBlock x:Name="DetailStep4" Grid.Column="2" Text="" Foreground="#FFB74D" FontSize="11" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Step 5: Telecharger Library/Xnrgy_Module -->
                    <Border Background="#252536" CornerRadius="6" Padding="12" Margin="0,3" BorderBrush="#4A7FBF" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="36"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="IconStep5" Text="&#x23F3;" FontSize="18" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TxtStep5" Grid.Column="1" Text="Telecharger Library/Xnrgy_Module" Foreground="White" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" Margin="8,0"/>
                            <TextBlock x:Name="DetailStep5" Grid.Column="2" Text="" Foreground="#FFB74D" FontSize="11" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Step 6: Copier SIBL_XNRGY_ADDINS_2026 -->
                    <Border Background="#252536" CornerRadius="6" Padding="12" Margin="0,3" BorderBrush="#4A7FBF" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="36"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="IconStep6" Text="&#x23F3;" FontSize="18" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TxtStep6" Grid.Column="1" Text="Copier SIBL_XNRGY_ADDINS_2026" Foreground="White" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" Margin="8,0"/>
                            <TextBlock x:Name="DetailStep6" Grid.Column="2" Text="" Foreground="#FFB74D" FontSize="11" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Step 7: Copier XNRGY_ADDINS_2026 -->
                    <Border Background="#252536" CornerRadius="6" Padding="12" Margin="0,3" BorderBrush="#4A7FBF" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="36"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="IconStep7" Text="&#x23F3;" FontSize="18" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TxtStep7" Grid.Column="1" Text="Copier XNRGY_ADDINS_2026" Foreground="White" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" Margin="8,0"/>
                            <TextBlock x:Name="DetailStep7" Grid.Column="2" Text="" Foreground="#FFB74D" FontSize="11" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Step 8: Installation des applications -->
                    <Border Background="#252536" CornerRadius="6" Padding="12" Margin="0,3" BorderBrush="#4A7FBF" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="36"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="IconStep8" Text="&#x23F3;" FontSize="18" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TxtStep8" Grid.Column="1" Text="Installation des applications" Foreground="White" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" Margin="8,0"/>
                            <TextBlock x:Name="DetailStep8" Grid.Column="2" Text="" Foreground="#FFB74D" FontSize="11" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Step 9: Finalisation -->
                    <Border Background="#252536" CornerRadius="6" Padding="12" Margin="0,3" BorderBrush="#4A7FBF" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="36"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="IconStep9" Text="&#x23F3;" FontSize="18" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TxtStep9" Grid.Column="1" Text="Finalisation" Foreground="White" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" Margin="8,0"/>
                            <TextBlock x:Name="DetailStep9" Grid.Column="2" Text="" Foreground="#FFB74D" FontSize="11" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- ========== PROGRESS BAR SECTION ========== -->
            <Border Grid.Row="2" Background="#252536" CornerRadius="8" Margin="20,8" Padding="16" BorderBrush="#4A7FBF" BorderThickness="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Progress bar visual -->
                    <Border Grid.Column="0" Background="#1E1E2E" CornerRadius="6" Height="32" ClipToBounds="True" BorderBrush="#4A7FBF" BorderThickness="1">
                        <Grid>
                            <Border x:Name="ProgressBarFill" Background="#28A745" CornerRadius="6" HorizontalAlignment="Left" Width="0"/>
                            <TextBlock x:Name="TxtStatus" Text="Pret - En attente de demarrage..." 
                                       Foreground="White" FontSize="12" FontWeight="SemiBold" 
                                       VerticalAlignment="Center" Margin="12,0,0,0" HorizontalAlignment="Left"/>
                            <TextBlock x:Name="TxtCurrentFile" Text="" 
                                       Foreground="#FFB74D" FontSize="11" 
                                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,12,0">
                                <TextBlock x:Name="TxtElapsedTime" Text="00:00" Foreground="White" FontSize="11" VerticalAlignment="Center"/>
                                <TextBlock Text=" | " Foreground="White" FontSize="11" VerticalAlignment="Center" Margin="6,0"/>
                                <TextBlock Text="Est: " Foreground="White" FontSize="11" VerticalAlignment="Center"/>
                                <TextBlock x:Name="TxtEstimatedTime" Text="--:--" Foreground="White" FontSize="11" VerticalAlignment="Center"/>
                                <TextBlock Text=" | " Foreground="White" FontSize="11" VerticalAlignment="Center" Margin="6,0"/>
                                <TextBlock x:Name="TxtProgressPercent" Text="0%" Foreground="#90EE90" FontSize="12" FontWeight="Bold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Buttons -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="12,0,0,0">
                        <Button x:Name="BtnSkip" Content="&#x23F8;&#xFE0F; Passer" Width="90" Height="32" 
                                Background="#FF8C00" Foreground="White" FontWeight="SemiBold" 
                                Click="BtnSkip_Click" Margin="0,0,8,0" Visibility="Collapsed"
                                Cursor="Hand" BorderBrush="#FF8C00" BorderThickness="1">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="4" BorderBrush="{TemplateBinding BorderBrush}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button x:Name="BtnContinue" Content="&#x25B6;&#xFE0F; Demarrer" Width="110" Height="32" 
                                Background="#10B981" Foreground="White" FontWeight="Bold" 
                                Click="BtnContinue_Click" Cursor="Hand" 
                                BorderBrush="#10B981" BorderThickness="1">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="4" BorderBrush="{TemplateBinding BorderBrush}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button x:Name="BtnCancel" Content="&#x274C; Annuler" Width="100" Height="32" 
                                Background="#DC2626" Foreground="White" FontWeight="Bold" 
                                Click="BtnCancel_Click" Margin="8,0,0,0" Cursor="Hand"
                                BorderBrush="#DC2626" BorderThickness="1">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="4" BorderBrush="{TemplateBinding BorderBrush}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ========== JOURNAL DES OPERATIONS ========== -->
            <Border Grid.Row="3" Background="#252536" CornerRadius="8" Margin="20,5,20,10" BorderBrush="#4A7FBF" BorderThickness="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header Journal Bleu Marine -->
                    <Border Grid.Row="0" Background="#2A4A6F" CornerRadius="6,6,0,0" Padding="12,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#x1F4CB;" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Journal des Operations" FontSize="14" FontWeight="Bold" Foreground="White"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Log Content -->
                    <ListBox x:Name="LogListBox" Grid.Row="1" Background="Transparent" BorderThickness="0" 
                             ItemsSource="{Binding LogEntries}" ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Message}" Foreground="{Binding Color}" 
                                           FontSize="11" FontFamily="Consolas" Margin="8,2"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Focusable" Value="False"/>
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </Grid>
            </Border>

            <!-- ========== COPYRIGHT BAR - Utilise styles centralises ========== -->
            <Border Grid.Row="4" Style="{StaticResource CopyrightBarBorder}">
                <Grid>
                    <TextBlock Text="Pret" Style="{StaticResource StatusTextStyle}"/>
                    <TextBlock Style="{StaticResource CopyrightTextStyle}" HorizontalAlignment="Right"
                               Text="{StaticResource CopyrightUpdateWS}"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
