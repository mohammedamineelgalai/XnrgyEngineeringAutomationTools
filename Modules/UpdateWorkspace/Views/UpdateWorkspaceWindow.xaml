<Window x:Class="XnrgyEngineeringAutomationTools.Modules.UpdateWorkspace.Views.UpdateWorkspaceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mise a jour du Workspace - XNRGY Engineering Tools"
        Height="750" Width="700"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        Background="#1E1E1E">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Styles/XnrgyStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Style bouton standard -->
            <Style x:Key="ModernButton" TargetType="Button">
                <Setter Property="Background" Value="#0078D4"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Padding" Value="20,10"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="4" 
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1084D8"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#006CC1"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#555555"/>
                                    <Setter Property="Foreground" Value="#888888"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Style bouton secondaire -->
            <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
                <Setter Property="Background" Value="#3C3C3C"/>
            </Style>

            <!-- Style bouton annuler -->
            <Style x:Key="CancelButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
                <Setter Property="Background" Value="#C42B1C"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#D83B2B"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Style etape checklist -->
            <Style x:Key="ChecklistItem" TargetType="StackPanel">
                <Setter Property="Orientation" Value="Horizontal"/>
                <Setter Property="Margin" Value="0,4"/>
            </Style>

            <Style x:Key="ChecklistIcon" TargetType="TextBlock">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Width" Value="24"/>
                <Setter Property="TextAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>

            <Style x:Key="ChecklistText" TargetType="TextBlock">
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Foreground" Value="#CCCCCC"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="8,0,0,0"/>
            </Style>

            <Style x:Key="ChecklistDetail" TargetType="TextBlock">
                <Setter Property="FontSize" Value="11"/>
                <Setter Property="Foreground" Value="#888888"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="8,0,0,0"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸ”„ Mise a jour du Workspace" 
                       FontSize="24" FontWeight="Bold" Foreground="White"/>
            <TextBlock Text="Synchronisation des fichiers depuis Vault et installation des outils" 
                       FontSize="13" Foreground="#888888" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Checklist des etapes -->
        <Border Grid.Row="1" Background="#2D2D2D" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Progression" FontSize="14" FontWeight="SemiBold" 
                           Foreground="White" Margin="0,0,0,10"/>

                <!-- Etape 1: Connexion -->
                <StackPanel Style="{StaticResource ChecklistItem}">
                    <TextBlock x:Name="IconStep1" Text="â³" Style="{StaticResource ChecklistIcon}"/>
                    <TextBlock x:Name="TxtStep1" Text="Verification de la connexion Vault" 
                               Style="{StaticResource ChecklistText}"/>
                    <TextBlock x:Name="DetailStep1" Style="{StaticResource ChecklistDetail}"/>
                </StackPanel>

                <!-- Etape 2: Inventor_Standards -->
                <StackPanel Style="{StaticResource ChecklistItem}">
                    <TextBlock x:Name="IconStep2" Text="â³" Style="{StaticResource ChecklistIcon}"/>
                    <TextBlock x:Name="TxtStep2" Text="Telechargement Inventor_Standards" 
                               Style="{StaticResource ChecklistText}"/>
                    <TextBlock x:Name="DetailStep2" Style="{StaticResource ChecklistDetail}"/>
                </StackPanel>

                <!-- Etape 3: Cabinet -->
                <StackPanel Style="{StaticResource ChecklistItem}">
                    <TextBlock x:Name="IconStep3" Text="â³" Style="{StaticResource ChecklistIcon}"/>
                    <TextBlock x:Name="TxtStep3" Text="Telechargement Library/Cabinet" 
                               Style="{StaticResource ChecklistText}"/>
                    <TextBlock x:Name="DetailStep3" Style="{StaticResource ChecklistDetail}"/>
                </StackPanel>

                <!-- Etape 4: Xnrgy_M99 -->
                <StackPanel Style="{StaticResource ChecklistItem}">
                    <TextBlock x:Name="IconStep4" Text="â³" Style="{StaticResource ChecklistIcon}"/>
                    <TextBlock x:Name="TxtStep4" Text="Telechargement Library/Xnrgy_M99" 
                               Style="{StaticResource ChecklistText}"/>
                    <TextBlock x:Name="DetailStep4" Style="{StaticResource ChecklistDetail}"/>
                </StackPanel>

                <!-- Etape 5: Xnrgy_Module -->
                <StackPanel Style="{StaticResource ChecklistItem}">
                    <TextBlock x:Name="IconStep5" Text="â³" Style="{StaticResource ChecklistIcon}"/>
                    <TextBlock x:Name="TxtStep5" Text="Telechargement Library/Xnrgy_Module" 
                               Style="{StaticResource ChecklistText}"/>
                    <TextBlock x:Name="DetailStep5" Style="{StaticResource ChecklistDetail}"/>
                </StackPanel>

                <!-- Etape 6: SIBL Plugin -->
                <StackPanel Style="{StaticResource ChecklistItem}">
                    <TextBlock x:Name="IconStep6" Text="â³" Style="{StaticResource ChecklistIcon}"/>
                    <TextBlock x:Name="TxtStep6" Text="Copie plugin SIBL_XNRGY_ADDINS_2026" 
                               Style="{StaticResource ChecklistText}"/>
                    <TextBlock x:Name="DetailStep6" Style="{StaticResource ChecklistDetail}"/>
                </StackPanel>

                <!-- Etape 7: XNRGY Plugin -->
                <StackPanel Style="{StaticResource ChecklistItem}">
                    <TextBlock x:Name="IconStep7" Text="â³" Style="{StaticResource ChecklistIcon}"/>
                    <TextBlock x:Name="TxtStep7" Text="Copie plugin XNRGY_ADDINS_2026" 
                               Style="{StaticResource ChecklistText}"/>
                    <TextBlock x:Name="DetailStep7" Style="{StaticResource ChecklistDetail}"/>
                </StackPanel>

                <!-- Etape 8: Installations -->
                <StackPanel Style="{StaticResource ChecklistItem}">
                    <TextBlock x:Name="IconStep8" Text="â³" Style="{StaticResource ChecklistIcon}"/>
                    <TextBlock x:Name="TxtStep8" Text="Installations silencieuses (DXF Verifier, Smart Tools, XnBatchPrint)" 
                               Style="{StaticResource ChecklistText}"/>
                    <TextBlock x:Name="DetailStep8" Style="{StaticResource ChecklistDetail}"/>
                </StackPanel>

                <!-- Etape 9: Finalisation -->
                <StackPanel Style="{StaticResource ChecklistItem}">
                    <TextBlock x:Name="IconStep9" Text="â³" Style="{StaticResource ChecklistIcon}"/>
                    <TextBlock x:Name="TxtStep9" Text="Finalisation" 
                               Style="{StaticResource ChecklistText}"/>
                    <TextBlock x:Name="DetailStep9" Style="{StaticResource ChecklistDetail}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Journal / Log -->
        <Border Grid.Row="2" Background="#2D2D2D" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Journal" FontSize="14" FontWeight="SemiBold" 
                           Foreground="White" Margin="0,0,0,10"/>

                <ListBox x:Name="LogListBox" Grid.Row="1"
                         Background="Transparent" BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         ItemsSource="{Binding LogEntries}">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="0,2"/>
                            <Setter Property="Focusable" Value="False"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <ContentPresenter/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" TextWrapping="Wrap" FontSize="11" 
                                       FontFamily="Consolas" Foreground="#CCCCCC"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- Barre de progression -->
        <Border Grid.Row="3" Background="#2D2D2D" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <!-- Statut et fichier courant -->
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="TxtStatus" Text="Pret a demarrer" 
                               FontSize="12" Foreground="#AAAAAA" Grid.Column="0"/>
                    <TextBlock x:Name="TxtCurrentFile" Text="" 
                               FontSize="11" Foreground="#666666" Grid.Column="1"
                               FontStyle="Italic"/>
                </Grid>

                <!-- Barre de progression avec texte integre -->
                <Grid Height="28">
                    <Border Background="#1E1E1E" CornerRadius="4"/>
                    <Border x:Name="ProgressBarFill" Background="#0078D4" CornerRadius="4"
                            HorizontalAlignment="Left" Width="0"/>
                    <!-- Texte centre sur la barre -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="â±ï¸ " FontSize="12" Foreground="White" FontWeight="Bold"/>
                        <TextBlock x:Name="TxtElapsedTime" Text="00:00" FontSize="12" 
                                   Foreground="White" FontWeight="Bold"/>
                        <TextBlock Text=" / " FontSize="12" Foreground="White" FontWeight="Bold"/>
                        <TextBlock x:Name="TxtEstimatedTime" Text="--:--" FontSize="12" 
                                   Foreground="White" FontWeight="Bold"/>
                        <TextBlock Text=" | " FontSize="12" Foreground="White" FontWeight="Bold"/>
                        <TextBlock x:Name="TxtProgressPercent" Text="0%" FontSize="12" 
                                   Foreground="White" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Boutons d'action -->
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="BtnContinue" Content="Continuer" 
                    Style="{StaticResource ModernButton}"
                    Grid.Column="1" Margin="0,0,10,0"
                    Click="BtnContinue_Click"/>

            <Button x:Name="BtnSkip" Content="Passer" 
                    Style="{StaticResource SecondaryButton}"
                    Grid.Column="2" Margin="0,0,10,0"
                    Click="BtnSkip_Click"/>

            <Button x:Name="BtnCancel" Content="Annuler" 
                    Style="{StaticResource CancelButton}"
                    Grid.Column="3"
                    Click="BtnCancel_Click"/>
        </Grid>

        <!-- ========== COPYRIGHT BAR - Utilise styles centralises ========== -->
        <Border Grid.Row="6" Style="{StaticResource CopyrightBarBorder}" Margin="-20,15,-20,-20">
            <Grid>
                <TextBlock Style="{StaticResource CopyrightTextStyle}" HorizontalAlignment="Center">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0} - {1} - {2} - {3} - By {4} - {5}">
                            <Binding Source="{StaticResource CopyrightUpdateWS}"/>
                            <Binding Source="{StaticResource AppShortName}"/>
                            <Binding Source="{StaticResource AppVersion}"/>
                            <Binding Source="{StaticResource AppReleaseDate}"/>
                            <Binding Source="{StaticResource AppAuthor}"/>
                            <Binding Source="{StaticResource AppCompany}"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</Window>
