<Window x:Class="XnrgyEngineeringAutomationTools.Modules.VaultUpload.Views.VaultUploadModuleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Upload Module vers Vault v1.0 - XNRGY Climate Systems ULC - By Mohammed Amine Elgalai" 
        Height="950" Width="1550"
        MinWidth="1400"
        MinHeight="800"
        WindowStartupLocation="CenterOwner"
        WindowState="Maximized"
        Background="{DynamicResource WindowBackground}"
        Loaded="Window_Loaded"
        Closing="Window_Closing">

    <Window.Resources>
        <!-- ========== COULEURS THEME ========== -->
        <SolidColorBrush x:Key="XnrgyBlue" Color="#0078D4"/>
        <SolidColorBrush x:Key="XnrgyGreen" Color="#107C10"/>
        <SolidColorBrush x:Key="XnrgyOrange" Color="#FF8C00"/>
        <SolidColorBrush x:Key="XnrgyRed" Color="#E81123"/>
        
        <!-- Theme Sombre (defaut) -->
        <SolidColorBrush x:Key="WindowBackground" Color="#1E1E2E"/>
        <SolidColorBrush x:Key="PanelBackground" Color="#252536"/>
        <SolidColorBrush x:Key="InputBackground" Color="#2D2D44"/>
        <SolidColorBrush x:Key="BorderColor" Color="#404060"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#888888"/>
        <SolidColorBrush x:Key="DataGridAltRow" Color="#2A2A3E"/>
        
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- ========== STYLE GROUPBOX MODERNE ========== -->
        <Style x:Key="ModernGroupBox" TargetType="GroupBox">
            <Setter Property="Background" Value="{DynamicResource PanelBackground}"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Background="{DynamicResource XnrgyBlue}" CornerRadius="6,6,0,0" Padding="12,8"
                                    BorderBrush="White" BorderThickness="1,1,1,0">
                                <ContentPresenter ContentSource="Header" TextElement.Foreground="White" TextElement.FontWeight="Bold" TextElement.FontSize="14"/>
                            </Border>
                            <Border Grid.Row="1" Background="{TemplateBinding Background}" 
                                    BorderBrush="White" 
                                    BorderThickness="1,0,1,1"
                                    CornerRadius="0,0,6,6"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ========== BOUTON PRIMAIRE ========== -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource XnrgyBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#404060"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ========== BOUTON SUCCES ========== -->
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="{DynamicResource XnrgyGreen}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0D5C0D"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform" Storyboard.TargetProperty="ScaleX" To="0.95" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform" Storyboard.TargetProperty="ScaleY" To="0.95" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform" Storyboard.TargetProperty="ScaleX" To="1.0" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction><ElasticEase Oscillations="1" Springiness="3"/></DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform" Storyboard.TargetProperty="ScaleY" To="1.0" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction><ElasticEase Oscillations="1" Springiness="3"/></DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#404060"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ========== BOUTON DANGER ========== -->
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="{DynamicResource XnrgyRed}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#A72B2E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#404060"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ========== BOUTON WARNING ========== -->
        <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="{DynamicResource XnrgyOrange}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#C44E09"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#404060"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ========== BOUTON SECONDAIRE ========== -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource InputBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3D3D55"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="#555555"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ========== TEXTBOX MODERNE ========== -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource InputBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="2"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{DynamicResource XnrgyBlue}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ========== STYLE DATAGRID MODERNE ========== -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#1E1E2E"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#404060"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="RowBackground" Value="#252536"/>
            <Setter Property="AlternatingRowBackground" Value="#2D2D44"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#404060"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
        </Style>

        <!-- Style Header DataGrid - fond sombre avec texte blanc gras -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="#005A9E"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
        </Style>

        <!-- Style Cell DataGrid -->
        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#0078D4"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Style Row DataGrid -->
        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="#252536"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Style.Triggers>
                <Trigger Property="AlternationIndex" Value="1">
                    <Setter Property="Background" Value="#2D2D44"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#0078D4"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3D3D55"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>    <!-- Header: Logo + Connexion + Stats -->
            <RowDefinition Height="Auto"/>    <!-- Selection module -->
            <RowDefinition Height="*"/>       <!-- Listes fichiers (prend tout l'espace) -->
            <RowDefinition Height="Auto"/>    <!-- Commentaire -->
            <RowDefinition Height="120"/>     <!-- Journal (3-4 lignes) -->
            <RowDefinition Height="Auto"/>    <!-- Footer: Barre progression + Boutons -->
        </Grid.RowDefinitions>

        <!-- ========== SECTION 0: HEADER (Style CrÃ©er Module) ========== -->
        <Border Grid.Row="0" Background="#0078D4" Padding="15,12" Margin="0,0,0,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Logo + Titre + Description -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ“¤" FontSize="32" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Upload Module - Vault Check-In v1.1" FontSize="20" FontWeight="Bold" Foreground="White"/>
                        <TextBlock FontSize="12" Foreground="#FFB74D" Margin="0,3,0,0" FontWeight="SemiBold">
                            <Run Text="ðŸ”§ Upload des fichiers Inventor et documents vers Autodesk Vault avec les propriÃ©tÃ©s XNRGY automatiques"/>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>

                <!-- Centre: Statistiques (agrandies) -->
                <Border Grid.Column="1" Background="#005A9E" CornerRadius="6" Padding="15,8" Margin="20,0" HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Margin="0,0,20,0" HorizontalAlignment="Center">
                            <TextBlock x:Name="TxtStatsInventor" Text="0" Foreground="#4FC3F7" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="ðŸ“ Inventor" Foreground="White" FontSize="11" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,20,0" HorizontalAlignment="Center">
                            <TextBlock x:Name="TxtStatsNonInventor" Text="0" Foreground="#FFB74D" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="ðŸ“„ Autres" Foreground="White" FontSize="11" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock x:Name="TxtStatsSelected" Text="0" Foreground="#81C784" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="âœ… SÃ©lection" Foreground="White" FontSize="11" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Droite: Connexion Vault + PropriÃ©tÃ©s -->
                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <!-- Status Connexion -->
                    <Border Background="#005A9E" CornerRadius="4" Padding="10,6" Margin="0,0,0,6">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse x:Name="VaultStatusIndicator" Width="10" Height="10" Fill="#E81123" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock x:Name="TxtVaultStatus" Text="Vault: Non connectÃ©" Foreground="White" FontWeight="SemiBold" FontSize="12"/>
                            <TextBlock x:Name="TxtVaultUser" Text="" Foreground="#B8D4E8" FontSize="11" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <!-- PropriÃ©tÃ©s dÃ©tectÃ©es -->
                    <Border x:Name="PropertiesPanel" Background="#1A3A5C" CornerRadius="4" Padding="10,6" Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“‹ Projet: " Foreground="White" FontSize="11"/>
                            <TextBlock x:Name="TxtProjectNumber" Text="" Foreground="#4FC3F7" FontWeight="Bold" FontSize="12"/>
                            <TextBlock Text=" | REF: " Foreground="White" FontSize="11" Margin="8,0,0,0"/>
                            <TextBlock x:Name="TxtReference" Text="" Foreground="#4FC3F7" FontWeight="Bold" FontSize="12"/>
                            <TextBlock Text=" | M: " Foreground="White" FontSize="11" Margin="8,0,0,0"/>
                            <TextBlock x:Name="TxtModule" Text="" Foreground="#4FC3F7" FontWeight="Bold" FontSize="12"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ========== SECTION 1: SELECTION MODULE ========== -->
        <Border Grid.Row="1" Background="{DynamicResource PanelBackground}" CornerRadius="6" Padding="10" Margin="0,0,0,8"
                BorderBrush="White" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="TxtProjectPath" Grid.Column="0" Style="{StaticResource ModernTextBox}" Height="34" FontSize="12"
                         BorderBrush="White" BorderThickness="1"/>
                
                <Button Grid.Column="1" Content="ðŸ“‹ Module" Style="{StaticResource SecondaryButton}" 
                        Click="SelectModule_Click" Margin="8,0,0,0" Width="100" Height="34" FontSize="12" FontWeight="Bold"
                        BorderBrush="White" BorderThickness="1"/>
                <Button Grid.Column="2" Content="ðŸ“ Parcourir" Style="{StaticResource SecondaryButton}" 
                        Click="BrowseFolder_Click" Margin="8,0,0,0" Width="110" Height="34" FontSize="12" FontWeight="Bold"
                        BorderBrush="White" BorderThickness="1"/>
                <Button Grid.Column="3" Content="ðŸ”§ Depuis Inventor" Style="{StaticResource SecondaryButton}" 
                        Click="GetFromInventor_Click" Margin="8,0,0,0" Width="155" Height="34" FontSize="12" FontWeight="Bold"
                        BorderBrush="White" BorderThickness="1"/>
                <Button Grid.Column="4" Content="ðŸ” Scanner" Style="{StaticResource PrimaryButton}" 
                        Click="ScanProject_Click" Margin="8,0,0,0" Width="100" Height="34" FontSize="12" FontWeight="Bold"
                        BorderBrush="White" BorderThickness="1"/>
            </Grid>
        </Border>

        <!-- ========== SECTION 2: LISTES FICHIERS ========== -->
        <Grid Grid.Row="2" Margin="0,0,0,8">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="6"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Liste Fichiers Inventor -->
            <GroupBox Grid.Row="0" Style="{StaticResource ModernGroupBox}" Margin="0">
                <GroupBox.Header>
                    <TextBlock Text="ðŸ“ Fichiers Inventor (.ipt, .iam, .idw, .ipn)" Foreground="White" FontWeight="Bold"/>
                </GroupBox.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Controles Inventor - Ligne 1: Boutons et Recherche -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,4">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <Button Content="âœ… Tout sÃ©lectionner" Style="{StaticResource SecondaryButton}" 
                                    Click="SelectAllInventor_Click" Width="140" Height="30" FontSize="11" FontWeight="Bold"/>
                            <Button Content="âŒ Tout dÃ©sÃ©lectionner" Style="{StaticResource SecondaryButton}" 
                                    Click="DeselectAllInventor_Click" Margin="6,0,0,0" Width="150" Height="30" FontSize="11" FontWeight="Bold"/>
                            
                            <!-- Recherche -->
                            <TextBlock Text="ðŸ”" VerticalAlignment="Center" Margin="12,0,4,0" FontSize="14" Foreground="White"/>
                            <TextBox x:Name="TxtSearchInventor" Style="{StaticResource ModernTextBox}" Width="140" Height="30" 
                                     TextChanged="SearchInventor_TextChanged" ToolTip="Rechercher par nom"/>
                            
                            <!-- Extension -->
                            <TextBlock Text="ðŸ“‹ Extension:" VerticalAlignment="Center" Margin="12,0,4,0" FontSize="11" Foreground="White" FontWeight="Bold"/>
                            <ComboBox x:Name="CmbExtensionInventor" Width="80" Height="30" VerticalContentAlignment="Center"
                                      SelectionChanged="CmbExtensionInventor_SelectionChanged">
                                <ComboBoxItem Content="Tous" IsSelected="True"/>
                                <ComboBoxItem Content=".ipt"/>
                                <ComboBoxItem Content=".iam"/>
                                <ComboBoxItem Content=".idw"/>
                                <ComboBoxItem Content=".ipn"/>
                                <ComboBoxItem Content=".dwg"/>
                            </ComboBox>
                            
                            <!-- Categorie Vault -->
                            <TextBlock Text="ðŸ“ CatÃ©gorie:" VerticalAlignment="Center" Margin="12,0,4,0" FontSize="11" Foreground="White" FontWeight="Bold"/>
                            <ComboBox x:Name="CmbCategoryInventor" Width="120" Height="30" DisplayMemberPath="Name" 
                                      VerticalContentAlignment="Center" SelectionChanged="CmbCategoryInventor_SelectionChanged"/>
                            
                            <!-- Lifecycle State Vault -->
                            <TextBlock Text="ðŸ”„ State:" VerticalAlignment="Center" Margin="12,0,4,0" FontSize="11" Foreground="White" FontWeight="Bold"/>
                            <ComboBox x:Name="CmbLifecycleStateInventor" Width="130" Height="30" DisplayMemberPath="Name"
                                      VerticalContentAlignment="Center"/>
                            
                            <!-- Hidden State ComboBox for code compatibility -->
                            <ComboBox x:Name="CmbStateInventor" Visibility="Collapsed">
                                <ComboBoxItem Content="Tous" IsSelected="True"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>

                    <!-- DataGrid Inventor -->
                    <DataGrid x:Name="DgInventorFiles" Grid.Row="1" 
                              AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                              IsReadOnly="False"
                              Background="{DynamicResource PanelBackground}"
                              Foreground="{DynamicResource TextPrimary}"
                              GridLinesVisibility="Horizontal"
                              AlternatingRowBackground="{DynamicResource DataGridAltRow}"
                              RowHeight="32" SelectionMode="Single" SelectionUnit="FullRow"
                              BorderBrush="{DynamicResource BorderColor}" BorderThickness="1"
                              MouseLeftButtonUp="DataGrid_MouseLeftButtonUp">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn Header="âœ…" Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" Width="40"/>
                            <DataGridTextColumn Header="ðŸ“„ Nom du fichier" Binding="{Binding FileName}" Width="200" IsReadOnly="True"/>
                            <DataGridTextColumn Header="ðŸ“ Type" Binding="{Binding FileType}" Width="80" IsReadOnly="True"/>
                            <DataGridTextColumn Header="ðŸ“Š Taille" Binding="{Binding FileSizeFormatted}" Width="100" IsReadOnly="True"/>
                            <DataGridTextColumn Header="ðŸ“ Chemin complet" Binding="{Binding FullPath}" Width="*" IsReadOnly="True"/>
                            <DataGridTextColumn Header="ðŸ”„ Statut" Binding="{Binding Status}" Width="200" IsReadOnly="True"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>

            <!-- Liste Fichiers Non-Inventor -->
            <GroupBox Grid.Row="2" Style="{StaticResource ModernGroupBox}">
                <GroupBox.Header>
                    <TextBlock Text="ðŸ“„ Autres Fichiers (.pdf, .xlsx, .docx, etc.)" Foreground="White" FontWeight="Bold"/>
                </GroupBox.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Controles Non-Inventor - Ligne 1: Boutons et Recherche -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,4">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <Button Content="âœ… Tout sÃ©lectionner" Style="{StaticResource SecondaryButton}" 
                                    Click="SelectAllNonInventor_Click" Width="140" Height="30" FontSize="11" FontWeight="Bold"/>
                            <Button Content="âŒ Tout dÃ©sÃ©lectionner" Style="{StaticResource SecondaryButton}" 
                                    Click="DeselectAllNonInventor_Click" Margin="6,0,0,0" Width="150" Height="30" FontSize="11" FontWeight="Bold"/>
                            
                            <!-- Recherche -->
                            <TextBlock Text="ðŸ”" VerticalAlignment="Center" Margin="12,0,4,0" FontSize="14" Foreground="White"/>
                            <TextBox x:Name="TxtSearchNonInventor" Style="{StaticResource ModernTextBox}" Width="140" Height="30" 
                                     TextChanged="SearchNonInventor_TextChanged" ToolTip="Rechercher par nom"/>
                            
                            <!-- Extension -->
                            <TextBlock Text="ðŸ“‹ Extension:" VerticalAlignment="Center" Margin="12,0,4,0" FontSize="11" Foreground="White" FontWeight="Bold"/>
                            <ComboBox x:Name="CmbExtensionNonInventor" Width="80" Height="30" VerticalContentAlignment="Center"
                                      SelectionChanged="CmbExtensionNonInventor_SelectionChanged">
