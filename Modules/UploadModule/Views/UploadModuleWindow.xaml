<Window x:Class="XnrgyEngineeringAutomationTools.Modules.UploadModule.Views.UploadModuleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Upload Module vers Vault - v1.0.0 - Released on 2026-01-02 - By Mohammed Amine Elgalai - XNRGY CLIMATE SYSTEMS ULC" 
        Height="950" Width="1550"
        MinWidth="1400"
        MinHeight="800"
        WindowStartupLocation="CenterOwner"
        WindowState="Maximized"
        Background="{DynamicResource WindowBackground}"
        Loaded="Window_Loaded"
        Closing="Window_Closing">

    <Window.Resources>
        <!-- ========== COULEURS THEME ========== -->
        <SolidColorBrush x:Key="XnrgyBlue" Color="#0078D4"/>
        <SolidColorBrush x:Key="XnrgyGreen" Color="#00D26A"/>
        <SolidColorBrush x:Key="XnrgyOrange" Color="#FF8C00"/>
        <SolidColorBrush x:Key="XnrgyRed" Color="#E81123"/>
        
        <!-- Theme Sombre (defaut) -->
        <SolidColorBrush x:Key="WindowBackground" Color="#1E1E2E"/>
        <SolidColorBrush x:Key="PanelBackground" Color="#252536"/>
        <SolidColorBrush x:Key="InputBackground" Color="#2D2D44"/>
        <SolidColorBrush x:Key="BorderColor" Color="#404060"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#888888"/>
        <SolidColorBrush x:Key="DataGridAltRow" Color="#2A2A3E"/>
        
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- ========== STYLE GROUPBOX MODERNE ========== -->
        <Style x:Key="ModernGroupBox" TargetType="GroupBox">
            <Setter Property="Background" Value="#252536"/>
            <Setter Property="BorderBrush" Value="#4A7FBF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Background="#2A4A6F" CornerRadius="8,8,0,0" 
                                    BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="2,2,2,0" Padding="15,10">
                                <ContentPresenter ContentSource="Header"/>
                            </Border>
                            <Border Grid.Row="1" Background="{TemplateBinding Background}" 
                                    CornerRadius="0,0,8,8" BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="2,0,2,2" Padding="{TemplateBinding Padding}">
                                <ContentPresenter/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ========== BOUTON PRIMAIRE ========== -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="25,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" 
                                BorderBrush="#4A7FBF" BorderThickness="2" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1E90FF"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#00D4FF"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#00D4FF" BlurRadius="30" ShadowDepth="0" Opacity="0.9"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#4A7FBF"/>
                                <Setter Property="Foreground" Value="#666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ========== BOUTON SUCCES ========== -->
        <Style x:Key="SuccessButton" TargetType="Button">
            <Setter Property="Background" Value="#107C10"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="30,15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8" 
                                BorderBrush="#4A7FBF" BorderThickness="2" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#32CD32"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#00FF7F"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#00FF7F" BlurRadius="30" ShadowDepth="0" Opacity="0.9"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#4A7FBF"/>
                                <Setter Property="Foreground" Value="#666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ========== BOUTON DANGER ========== -->
        <Style x:Key="DangerButton" TargetType="Button">
            <Setter Property="Background" Value="#E81123"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" 
                                BorderBrush="#4A7FBF" BorderThickness="2" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF4444"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF6B6B"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#FF6B6B" BlurRadius="28" ShadowDepth="0" Opacity="0.85"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#4A7FBF"/>
                                <Setter Property="Foreground" Value="#666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ========== BOUTON WARNING ========== -->
        <Style x:Key="WarningButton" TargetType="Button">
            <Setter Property="Background" Value="#FF8C00"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" 
                                BorderBrush="#4A7FBF" BorderThickness="2" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFA500"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FFD700"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#FFD700" BlurRadius="28" ShadowDepth="0" Opacity="0.85"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#4A7FBF"/>
                                <Setter Property="Foreground" Value="#666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ========== BOUTON SECONDAIRE ========== -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" 
                                BorderBrush="#4A7FBF" BorderThickness="2" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2A5A8F"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#00D4FF"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#00D4FF" BlurRadius="28" ShadowDepth="0" Opacity="0.85"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ========== TEXTBOX MODERNE ========== -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4A7FBF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="0" 
                                          VerticalContentAlignment="Center"
                                          VerticalAlignment="Center"
                                          HorizontalContentAlignment="Left"
                                          VerticalScrollBarVisibility="Disabled"
                                          HorizontalScrollBarVisibility="Disabled"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ========== TEXTBOX PATH (sans coupure de texte) ========== -->
        <Style x:Key="PathTextBox" TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="0" Padding="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ========== STYLE DATAGRID MODERNE ========== -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#1E1E2E"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#404060"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="RowBackground" Value="#252536"/>
            <Setter Property="AlternatingRowBackground" Value="#2D2D44"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#404060"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
        </Style>

        <!-- Style Header DataGrid - fond bleu marine XNRGY avec texte blanc gras -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#2A4A6F"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="#3A5A7F"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
        </Style>

        <!-- Style Cell DataGrid -->
        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#0078D4"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Style Row DataGrid -->
        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="#252536"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Style.Triggers>
                <Trigger Property="AlternationIndex" Value="1">
                    <Setter Property="Background" Value="#2D2D44"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#0078D4"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3D3D55"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>

        <!-- ========== SECTION 0: HEADER (Style CrÃ©er Module) ========== -->
        <Border Grid.Row="0" Background="#2A4A6F" Padding="15,12" Margin="0,0,0,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Logo + Titre + Description -->
                <Viewbox Grid.Column="0" Stretch="Uniform" MaxWidth="600" MaxHeight="80" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Background="#AEEA00" CornerRadius="8" Width="50" Height="50" Margin="0,0,12,0">
                            <TextBlock Text="&#x1F4E4;" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="ðŸ“¤ Upload Module - Vault Check-In v1.0.0" FontSize="20" FontWeight="Bold" Foreground="White"/>
                            <TextBlock FontSize="14" Foreground="#FFB74D" Margin="0,3,0,0" FontWeight="SemiBold">
                                <Run Text="ðŸ’¡ Upload des fichiers Inventor et documents vers Autodesk Vault avec les proprietes XNRGY automatiques"/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Viewbox>

                <!-- Centre: Statistiques (agrandies) -->
                <Viewbox Grid.Column="1" Stretch="Uniform" MaxWidth="500" MaxHeight="80" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20,0">
                    <Border Background="#1A1A28" CornerRadius="6" Padding="15,4"
                            BorderBrush="#4A7FBF" BorderThickness="2">
                        <StackPanel VerticalAlignment="Center">
                            <!-- Titre -->
                            <TextBlock Text="ðŸ“ˆ Statistiques" Foreground="#FFD700" FontSize="11" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                            <!-- Valeurs -->
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <StackPanel Margin="0,0,20,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock x:Name="TxtStatsTotal" Text="0" Foreground="White" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock Text="ðŸ“Š Total" Foreground="White" FontSize="11" HorizontalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Margin="0,0,20,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock x:Name="TxtStatsInventor" Text="0" Foreground="#FFD700" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock Text="ðŸ“ Inventor" Foreground="#FFD700" FontSize="11" HorizontalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Margin="0,0,20,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock x:Name="TxtStatsNonInventor" Text="0" Foreground="#FFB74D" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock Text="ðŸ“„ Autres" Foreground="#FFB74D" FontSize="11" HorizontalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock x:Name="TxtStatsSelected" Text="0" Foreground="#90EE90" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock Text="âœ… Selection" Foreground="#90EE90" FontSize="11" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Viewbox>

                <!-- Droite: Connexion Vault + PropriÃ©tÃ©s -->
                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <!-- Status Connexion -->
                    <Border Background="#2D2D44" CornerRadius="4" Padding="10,6" Margin="0,0,0,6"
                            BorderBrush="#4A7FBF" BorderThickness="2">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse x:Name="VaultStatusIndicator" Width="10" Height="10" Fill="#E81123" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock x:Name="TxtVaultStatus" FontWeight="SemiBold" FontSize="12">
                                <Run Text="ðŸ—„ï¸" Foreground="#00BFFF"/><Run x:Name="RunVaultName" Text=" Vault : --  /  " Foreground="White"/><Run Text="ðŸ‘¤" Foreground="#FFB74D"/><Run x:Name="RunUserName" Text=" Utilisateur : --  /  " Foreground="White"/><Run Text="ðŸ“¡" Foreground="#90EE90"/><Run x:Name="RunStatus" Text=" Statut : Deconnecte" Foreground="White"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                    <!-- PropriÃ©tÃ©s dÃ©tectÃ©es -->
                    <Border x:Name="PropertiesPanel" Background="#2D2D44" CornerRadius="4" Padding="10,6" Visibility="Collapsed"
                            BorderBrush="#4A7FBF" BorderThickness="2">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <!-- Titre du groupe alignÃ© avec les valeurs -->
                            <TextBlock Text="ðŸ·ï¸ PropriÃ©tÃ©s Vault: " Foreground="#00BFFF" FontWeight="Bold" FontSize="12" VerticalAlignment="Center"/>
                            <!-- Valeurs -->
                            <TextBlock Text="ðŸ“‹ Projet: " Foreground="White" FontSize="11" VerticalAlignment="Center"/>
                            <TextBlock x:Name="TxtProjectNumber" Text="" Foreground="#FFD700" FontWeight="Bold" FontSize="12" VerticalAlignment="Center"/>
                            <TextBlock Text=" | REF: " Foreground="White" FontSize="11" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            <TextBlock x:Name="TxtReference" Text="" Foreground="#FFD700" FontWeight="Bold" FontSize="12" VerticalAlignment="Center"/>
                            <TextBlock Text=" | M: " Foreground="White" FontSize="11" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            <TextBlock x:Name="TxtModule" Text="" Foreground="#FFD700" FontWeight="Bold" FontSize="12" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ========== SECTION 1: SELECTION MODULE ========== -->
        <Border Grid.Row="1" Background="#2A4A6F" CornerRadius="6" Padding="10" Margin="0,0,0,8"
                BorderBrush="#4A7FBF" BorderThickness="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="TxtProjectPath" Grid.Column="0" Style="{StaticResource PathTextBox}" Height="34" VerticalContentAlignment="Center" TextWrapping="Wrap" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Disabled"/>
                
                <Button Grid.Column="1" Content="ðŸ“‹ Module" Style="{StaticResource SecondaryButton}" 
                        Background="#0078D4" Foreground="White" FontSize="13"
                        Click="SelectModule_Click" Margin="8,0,0,0" MinWidth="100" Height="34" Padding="10,5" VerticalContentAlignment="Center"/>
                <Button Grid.Column="2" Content="ðŸ“ Parcourir" Style="{StaticResource SecondaryButton}" 
                        Background="#0891B2" Foreground="White" FontSize="13"
                        Click="BrowseFolder_Click" Margin="8,0,0,0" MinWidth="110" Height="34" Padding="10,5" VerticalContentAlignment="Center"/>
                <Button Grid.Column="3" Content="ðŸ”§ Depuis Inventor" Style="{StaticResource SecondaryButton}" 
                        Background="#5B5FC7" Foreground="White" FontSize="13"
                        Click="GetFromInventor_Click" Margin="8,0,0,0" MinWidth="155" Height="34" Padding="10,5" VerticalContentAlignment="Center"/>
                <Button Grid.Column="4" Content="ðŸ” Scanner" Style="{StaticResource PrimaryButton}" 
                        FontSize="13"
                        Click="ScanProject_Click" Margin="8,0,0,0" MinWidth="100" Height="34" Padding="12,5" VerticalContentAlignment="Center"/>
            </Grid>
        </Border>

        <!-- ========== SECTION 2: LISTE FICHIERS UNIFIEE ========== -->
        <GroupBox Grid.Row="2" Style="{StaticResource ModernGroupBox}" Margin="0,0,0,8">
            <GroupBox.Header>
                <TextBlock Text="ðŸ“„ Tous les Fichiers a Uploader" Foreground="White" FontWeight="Bold"/>
            </GroupBox.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Controles: Boutons selection + Recherche + Filtres -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8" VerticalAlignment="Center">
                    <Button Content="âœ… Tout selectionner" Style="{StaticResource SuccessButton}" 
                            Click="SelectAll_Click" Height="38" MinWidth="150" Padding="12,8" VerticalContentAlignment="Center" FontSize="12"/>
                    <Button Content="âŒ Tout deselectionner" Style="{StaticResource DangerButton}" 
                            Click="DeselectAll_Click" Margin="6,0,0,0" Height="38" MinWidth="160" Padding="12,8" VerticalContentAlignment="Center" FontSize="12"/>
                    
                    <!-- Recherche -->
                    <TextBlock Text="ðŸ”" VerticalAlignment="Center" Margin="12,0,4,0" FontSize="14" Foreground="White"/>
                    <TextBox x:Name="TxtSearch" Style="{StaticResource ModernTextBox}" Width="180" Height="32" 
                             TextChanged="TxtSearch_TextChanged" ToolTip="Rechercher par nom" 
                             VerticalContentAlignment="Center" VerticalAlignment="Center"/>
                    
                    <!-- Filtre Extension (chargÃ© dynamiquement) -->
                    <TextBlock Text="ðŸ“‹ Extension:" VerticalAlignment="Center" Margin="12,0,4,0" FontSize="11" Foreground="White" FontWeight="Bold"/>
                    <ComboBox x:Name="CmbExtension" Width="90" Height="32" VerticalContentAlignment="Center"
                              SelectionChanged="CmbExtension_SelectionChanged">
                        <ComboBoxItem Content="Tous" IsSelected="True"/>
                    </ComboBox>
                    
                    <!-- Filtre Statut -->
                    <TextBlock Text="ðŸ“Š Statut:" VerticalAlignment="Center" Margin="12,0,4,0" FontSize="11" Foreground="White" FontWeight="Bold"/>
                    <ComboBox x:Name="CmbState" Width="100" Height="32" VerticalContentAlignment="Center"
                              SelectionChanged="CmbState_SelectionChanged">
                        <ComboBoxItem Content="Tous" IsSelected="True"/>
                        <ComboBoxItem Content="En attente"/>
                        <ComboBoxItem Content="Uploade"/>
                        <ComboBoxItem Content="Ignore"/>
                        <ComboBoxItem Content="Erreur"/>
                    </ComboBox>
                    
                    <!-- Categorie Vault -->
                    <TextBlock Text="ðŸ“ Categorie:" VerticalAlignment="Center" Margin="12,0,4,0" FontSize="11" Foreground="White" FontWeight="Bold"/>
                    <ComboBox x:Name="CmbCategory" Width="120" Height="32" DisplayMemberPath="Name" 
                              VerticalContentAlignment="Center" SelectionChanged="CmbCategory_SelectionChanged"/>
                    
                    <!-- Lifecycle State Vault -->
