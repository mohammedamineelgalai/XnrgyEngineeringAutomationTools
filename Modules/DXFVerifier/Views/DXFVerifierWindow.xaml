                                                            <Setter.Value>
                                                                <DropShadowEffect Color="#FF4444" BlurRadius="15" ShadowDepth="0" Opacity="0.7"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
