<Window x:Class="XnrgyEngineeringAutomationTools.Modules.DXFVerifier.Views.DXFVerifierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{StaticResource WindowTitleDXFVerifier}" 
        Icon="/Resources/XnrgyEngineeringAutomationTools.ico"
        Height="1000" Width="1450"
        MinHeight="800" MinWidth="1200"
        WindowStartupLocation="CenterOwner"
        WindowState="Maximized"
        Background="#1E1E2E"
        FontSize="12"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Couleurs XNRGY -->
        <SolidColorBrush x:Key="XnrgyBlue" Color="#0078D4"/>
        <SolidColorBrush x:Key="XnrgyGreen" Color="#107C10"/>
        <SolidColorBrush x:Key="XnrgyOrange" Color="#FF8C00"/>
        <SolidColorBrush x:Key="XnrgyRed" Color="#E81123"/>
        <SolidColorBrush x:Key="DarkBg" Color="#1E1E2E"/>
        <SolidColorBrush x:Key="DarkBg2" Color="#252536"/>
        <SolidColorBrush x:Key="DarkBg3" Color="#2D2D44"/>
        <SolidColorBrush x:Key="BorderColor" Color="#4A7FBF"/>
        <SolidColorBrush x:Key="TextLight" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="TextMuted" Color="#888888"/>

        <!-- Style TextBox moderne -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4A7FBF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="2" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style Label moderne -->
        <Style x:Key="ModernLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Style Bouton principal - Glow Brillant -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" 
                                BorderBrush="#4A7FBF" BorderThickness="2" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1E90FF"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#00D4FF"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#00D4FF" BlurRadius="30" ShadowDepth="0" Opacity="0.9"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#4A7FBF"/>
                                <Setter Property="Foreground" Value="#666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style Bouton secondaire - Glow Brillant -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" 
                                BorderBrush="#4A7FBF" BorderThickness="2" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2A5A8F"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#00D4FF"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#00D4FF" BlurRadius="28" ShadowDepth="0" Opacity="0.85"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style Bouton Succes - Glow Brillant -->
        <Style x:Key="SuccessButton" TargetType="Button">
            <Setter Property="Background" Value="#107C10"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" 
                                BorderBrush="#4A7FBF" BorderThickness="2" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#32CD32"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#00FF7F"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#00FF7F" BlurRadius="30" ShadowDepth="0" Opacity="0.9"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#4A7FBF"/>
                                <Setter Property="Foreground" Value="#666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style GroupBox moderne avec header bleu marine -->
        <Style x:Key="ModernGroupBox" TargetType="GroupBox">
            <Setter Property="Background" Value="#252536"/>
            <Setter Property="BorderBrush" Value="#4A7FBF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Background="#2A4A6F" CornerRadius="8,8,0,0" 
                                    BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="2,2,2,0" Padding="12,8">
                                <ContentPresenter ContentSource="Header"/>
                            </Border>
                            <Border Grid.Row="1" Background="{TemplateBinding Background}" 
                                    CornerRadius="0,0,8,8" BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="2,0,2,2" Padding="{TemplateBinding Padding}">
                                <ContentPresenter/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style DataGrid moderne -->
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="#252536"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4A7FBF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#3D3D56"/>
            <Setter Property="RowBackground" Value="#252536"/>
            <Setter Property="AlternatingRowBackground" Value="#2D2D44"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- Style ProgressBar moderne animee -->
        <Style x:Key="ModernProgressBar" TargetType="ProgressBar">
            <Setter Property="Height" Value="22"/>
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="#0078D4"/>
            <Setter Property="BorderBrush" Value="#4A7FBF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <Grid>
                                <Border x:Name="PART_Track" CornerRadius="3"/>
                                <Border x:Name="PART_Indicator" CornerRadius="3" 
                                        Background="{TemplateBinding Foreground}" 
                                        HorizontalAlignment="Left"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style ComboBox moderne (theme noir) - COPIE de CreateModule -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4A7FBF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="Border" Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="24"/>
                                    </Grid.ColumnDefinitions>
                                    <!-- ContentPresenter pour afficher la selection - utilise TextBlock pour texte visible -->
                                    <TextBlock Grid.Column="0" Margin="8,0,0,0" 
                                               Text="{TemplateBinding Text}"
                                               Foreground="{TemplateBinding Foreground}"
                                               FontSize="{TemplateBinding FontSize}"
                                               FontWeight="{TemplateBinding FontWeight}"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"
                                               TextTrimming="CharacterEllipsis"/>
                                    <ToggleButton Grid.Column="1" x:Name="ToggleButton" 
                                                  Background="Transparent" BorderThickness="0"
                                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                  ClickMode="Press">
                                        <Path Fill="#888" Data="M0,0 L4,4 L8,0 Z" 
                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </ToggleButton>
                                    <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" 
                                           AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                        <Border x:Name="DropDownBorder" Background="#2D2D44" 
                                                BorderBrush="#0078D4" BorderThickness="2" CornerRadius="6"
                                                MinWidth="{TemplateBinding ActualWidth}" MaxHeight="300">
                                            <ScrollViewer>
                                                <StackPanel IsItemsHost="True"/>
                                            </ScrollViewer>
                                        </Border>
                                    </Popup>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style ComboBoxItem moderne -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3D3D56"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#0078D4"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="180"/>
        </Grid.RowDefinitions>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- HEADER BAR - Style comme SmartTools avec Logo + Statistiques + Connexion Vault -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Border Grid.Row="0" Background="#2A4A6F" Padding="15,12" Margin="0,0,0,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo + Titre (style SmartTools) -->
                <Viewbox Grid.Column="0" Stretch="Uniform" MaxWidth="600" MaxHeight="80" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="/Assets/Icons/DXFVerifier.png" Width="50" Height="50" Margin="0,0,12,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="DXF Verifier - Validation CSV/DXF vs PDF" FontSize="20" FontWeight="Bold" Foreground="White"/>
                            <TextBlock FontSize="14" Foreground="#FFB74D" FontWeight="SemiBold" Margin="0,3,0,0">
                                <Run Text="ðŸ“Š Comparaison automatique des quantitÃ©s et tags entre fichiers CSV/DXF et PDF BatchPrint"/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Viewbox>

                <!-- Statistiques au centre -->
                <Border Grid.Column="1" Background="#1A1A28" CornerRadius="6" Padding="15,8" Margin="20,0"
                        BorderBrush="#4A7FBF" BorderThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Statistiques de Verification" Foreground="#FFD700" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,6"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <!-- CSV Qty -->
                            <StackPanel Margin="0,0,20,0" HorizontalAlignment="Center">
                                <TextBlock x:Name="TotalCsvQtyLabel" Text="0" Foreground="White" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="Total Qte CSV/DXF" Foreground="White" FontSize="11" HorizontalAlignment="Center"/>
                            </StackPanel>
                            <!-- CSV Tags -->
                            <StackPanel Margin="0,0,20,0" HorizontalAlignment="Center">
                                <TextBlock x:Name="TotalCsvTagsLabel" Text="0" Foreground="White" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="Total Tags CSV/DXF" Foreground="White" FontSize="11" HorizontalAlignment="Center"/>
                            </StackPanel>
                            <!-- Separateur -->
                            <Border Background="#4A7FBF" Width="2" Height="40" Margin="5,0"/>
                            <!-- PDF Qty -->
                            <StackPanel Margin="20,0,20,0" HorizontalAlignment="Center">
                                <TextBlock x:Name="TotalPdfQtyLabel" Text="0" Foreground="White" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="Total Qte PDF" Foreground="White" FontSize="11" HorizontalAlignment="Center"/>
                            </StackPanel>
                            <!-- PDF Tags -->
                            <StackPanel Margin="0,0,20,0" HorizontalAlignment="Center">
                                <TextBlock x:Name="TotalPdfTagsLabel" Text="0" Foreground="White" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="Total Tags PDF" Foreground="White" FontSize="11" HorizontalAlignment="Center"/>
                            </StackPanel>
                            <!-- PDF Pages -->
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock x:Name="TotalPdfPagesLabel" Text="0" Foreground="White" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="Pages PDF" Foreground="White" FontSize="11" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Info + Statut Inventor (ligne 1) + Vault (ligne 2) - coin droit -->
                <StackPanel Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <!-- Ligne 1: Statut Inventor + Bouton Info -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,6">
                        <!-- Statut Connexion Inventor -->
                        <Border Background="#2D2D44" CornerRadius="4" Padding="10,6" Margin="0,0,10,0"
                                BorderBrush="#4A7FBF" BorderThickness="2">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse x:Name="InventorStatusIndicator" Width="10" Height="10" Fill="#E81123" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock x:Name="TxtInventorStatus" FontWeight="SemiBold" FontSize="12">
                                    <Run Text="âš™ï¸" Foreground="#FF8C00"/><Run x:Name="RunInventorStatus" Text=" Inventor: Deconnecte" Foreground="White"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                        <!-- Bouton Info (coin droit) -->
                        <Button x:Name="InfoButton" Content="â„¹ï¸ Info" Style="{StaticResource SecondaryButton}" 
                                Click="InfoButton_Click" Width="80" Padding="10,6"/>
                    </StackPanel>
                    <!-- Ligne 2: Statut Vault (en dessous, aligne a droite) -->
                    <Border Background="#2D2D44" CornerRadius="4" Padding="10,6" HorizontalAlignment="Right"
                            BorderBrush="#4A7FBF" BorderThickness="2">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse x:Name="VaultStatusIndicator" Width="10" Height="10" Fill="#E81123" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock x:Name="TxtVaultStatus" FontWeight="SemiBold" FontSize="12">
                                <Run Text="ðŸ—„ï¸" Foreground="#00BFFF"/><Run x:Name="RunVaultName" Text=" Vault: --" Foreground="White"/><Run Text="  |  ðŸ‘¤" Foreground="#FFB74D"/><Run x:Name="RunUserName" Text=" --" Foreground="White"/><Run Text="  |  ðŸ“¡" Foreground="#90EE90"/><Run x:Name="RunStatus" Text=" Deconnecte" Foreground="White"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- SECTION DETECTION AUTOMATIQUE - GroupBox avec header bleu marine -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <GroupBox Grid.Row="1" Style="{StaticResource ModernGroupBox}">
            <GroupBox.Header>
                <TextBlock Text="ðŸ“ Detection Automatique de Projet" Foreground="#FFB74D" FontWeight="Bold" FontSize="13"/>
            </GroupBox.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- LIGNE 1: Projet + Ref + Module + Boutons + Chemin -->
                <Grid Grid.Row="0" Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Projet:" Style="{StaticResource ModernLabel}" Margin="0,0,8,0"/>
                    <ComboBox x:Name="ProjectNumberComboBox" Grid.Column="1" Height="30" 
                              Style="{StaticResource ModernComboBox}"
                              SelectionChanged="ProjectNumberComboBox_SelectionChanged"/>

                    <TextBlock Grid.Column="2" Text="Ref:" Style="{StaticResource ModernLabel}" Margin="12,0,8,0"/>
                    <ComboBox x:Name="ReferenceComboBox" Grid.Column="3" Height="30" 
                              Style="{StaticResource ModernComboBox}"
                              SelectionChanged="ReferenceComboBox_SelectionChanged"/>

                    <TextBlock Grid.Column="4" Text="Module:" Style="{StaticResource ModernLabel}" Margin="12,0,8,0"/>
                    <ComboBox x:Name="ModuleNumberComboBox" Grid.Column="5" Height="30" 
                              Style="{StaticResource ModernComboBox}"
                              SelectionChanged="ModuleNumberComboBox_SelectionChanged"/>

                    <Button x:Name="DetectPdfButton" Grid.Column="6" Content="ðŸ” Detecter depuis PDF 02-Machines" Style="{StaticResource PrimaryButton}" 
                            Padding="12,6" Margin="15,0,5,0" Click="DetectPdfButton_Click"/>
                    <Button x:Name="SelectProjectButton" Grid.Column="7" Content="ðŸ“ Choisir Projet" Style="{StaticResource SecondaryButton}" 
                            Padding="15,6" Margin="0,0,5,0" Click="SelectProjectButton_Click"/>

                    <TextBlock Grid.Column="8" Text="Chemin de base:" Style="{StaticResource ModernLabel}" Margin="10,0,5,0"/>
                    <TextBox x:Name="BasePathTextBox" Grid.Column="9" Style="{StaticResource ModernTextBox}" Height="30"
                             Text="C:\Vault\Engineering\Projects" MinWidth="180"/>
                    <Button x:Name="BrowsePathButton" Grid.Column="10" Content="ðŸ“‚" Style="{StaticResource SecondaryButton}" 
                            Width="35" Height="30" Padding="5,3" Margin="5,0,0,0" Click="BrowsePathButton_Click"/>
                </Grid>

                <!-- LIGNE 2: Fichiers CSV / Excel / PDF -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- CSV -->
                    <TextBlock Grid.Column="0" Text="CSV:" Style="{StaticResource ModernLabel}" Foreground="#90EE90" Margin="0,0,5,0"/>
                    <Border Grid.Column="1" Background="#2D2D44" BorderBrush="#4A7FBF" BorderThickness="1" CornerRadius="4" Padding="8,4">
                        <TextBlock x:Name="CsvPathLabel" Text="Non detecte" Foreground="#888" FontSize="10" TextTrimming="CharacterEllipsis"/>
                    </Border>
                    <Button Grid.Column="2" Content="ðŸ“‚" Style="{StaticResource SecondaryButton}" Width="28" Height="26" Padding="3" Margin="5,0,15,0" Click="CsvBrowseButton_Click"/>

                    <!-- Excel -->
                    <TextBlock Grid.Column="3" Text="Excel:" Style="{StaticResource ModernLabel}" Foreground="#FFD700" Margin="0,0,5,0"/>
                    <Border Grid.Column="4" Background="#2D2D44" BorderBrush="#4A7FBF" BorderThickness="1" CornerRadius="4" Padding="8,4">
