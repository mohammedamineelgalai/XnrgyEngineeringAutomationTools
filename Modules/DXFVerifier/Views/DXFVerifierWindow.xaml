        <!-- JOURNAL avec boutons Effacer (rose) + Voir Log (bleu clair) dans le header -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Border Grid.Row="4" Background="#12121C" CornerRadius="8" BorderBrush="#4A7FBF" BorderThickness="2" Margin="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header du Journal -->
                <Border Grid.Row="0" Background="#2A4A6F" CornerRadius="6,6,0,0" Padding="12,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="ðŸ“‹ Journal des Operations" Foreground="White" FontWeight="Bold" FontSize="13" VerticalAlignment="Center"/>
                        <Button x:Name="ClearLogButton" Grid.Column="1" Content="Effacer" 
                                Background="#E81123" Foreground="White" BorderBrush="#FF6666" BorderThickness="1"
                                Padding="12,5" Margin="0,0,8,0" FontSize="11" FontWeight="Bold" Cursor="Hand" Click="ClearLogButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border" Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
