<Window x:Class="XnrgyEngineeringAutomationTools.Modules.DXFVerifier.Views.DXFVerifierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{StaticResource WindowTitleDXFVerifier}" 
        Height="1000" Width="1450"
        MinHeight="800" MinWidth="1200"
        WindowStartupLocation="CenterOwner"
        WindowState="Maximized"
        Background="#1E1E2E"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Couleurs XNRGY -->
        <SolidColorBrush x:Key="XnrgyBlue" Color="#0078D4"/>
        <SolidColorBrush x:Key="XnrgyGreen" Color="#107C10"/>
        <SolidColorBrush x:Key="XnrgyOrange" Color="#FF8C00"/>
        <SolidColorBrush x:Key="XnrgyRed" Color="#E81123"/>
        <SolidColorBrush x:Key="DarkBg" Color="#1E1E2E"/>
        <SolidColorBrush x:Key="DarkBg2" Color="#252536"/>
        <SolidColorBrush x:Key="DarkBg3" Color="#2D2D44"/>
        <SolidColorBrush x:Key="BorderColor" Color="#4A7FBF"/>
        <SolidColorBrush x:Key="TextLight" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="TextMuted" Color="#888888"/>

        <!-- Style TextBox moderne -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4A7FBF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="2" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style Label moderne -->
        <Style x:Key="ModernLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Style Bouton principal - Glow Brillant -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" 
                                BorderBrush="#4A7FBF" BorderThickness="2" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1E90FF"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#00D4FF"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#00D4FF" BlurRadius="30" ShadowDepth="0" Opacity="0.9"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#4A7FBF"/>
                                <Setter Property="Foreground" Value="#666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style Bouton secondaire - Glow Brillant -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" 
                                BorderBrush="#4A7FBF" BorderThickness="2" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2A5A8F"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#00D4FF"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#00D4FF" BlurRadius="28" ShadowDepth="0" Opacity="0.85"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style Bouton Succes - Glow Brillant -->
        <Style x:Key="SuccessButton" TargetType="Button">
            <Setter Property="Background" Value="#107C10"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" 
                                BorderBrush="#4A7FBF" BorderThickness="2" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#32CD32"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#00FF7F"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#00FF7F" BlurRadius="30" ShadowDepth="0" Opacity="0.9"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#4A7FBF"/>
                                <Setter Property="Foreground" Value="#666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style GroupBox moderne avec header bleu marine -->
        <Style x:Key="ModernGroupBox" TargetType="GroupBox">
            <Setter Property="Background" Value="#252536"/>
            <Setter Property="BorderBrush" Value="#4A7FBF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Background="#2A4A6F" CornerRadius="8,8,0,0" 
                                    BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="2,2,2,0" Padding="12,8">
                                <ContentPresenter ContentSource="Header"/>
                            </Border>
                            <Border Grid.Row="1" Background="{TemplateBinding Background}" 
                                    CornerRadius="0,0,8,8" BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="2,0,2,2" Padding="{TemplateBinding Padding}">
                                <ContentPresenter/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style DataGrid moderne -->
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="#252536"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4A7FBF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#3D3D56"/>
            <Setter Property="RowBackground" Value="#252536"/>
            <Setter Property="AlternatingRowBackground" Value="#2D2D44"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- Style ProgressBar moderne animee -->
        <Style x:Key="ModernProgressBar" TargetType="ProgressBar">
            <Setter Property="Height" Value="22"/>
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="#0078D4"/>
            <Setter Property="BorderBrush" Value="#4A7FBF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <Grid>
                                <Border x:Name="PART_Track" CornerRadius="3"/>
                                <Border x:Name="PART_Indicator" CornerRadius="3" 
                                        Background="{TemplateBinding Foreground}" 
                                        HorizontalAlignment="Left"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="180"/>
        </Grid.RowDefinitions>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- HEADER BAR - Style comme UploadModule avec Logo + Statistiques + Connexion -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Border Grid.Row="0" Background="#2A4A6F" Padding="12,10" Margin="0,0,0,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo XNRGY + Titre + Description -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Image x:Name="LogoImage" Width="50" Height="50" Margin="0,0,15,0" VerticalAlignment="Center"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="DXF Verifier - Validation CSV/DXF vs PDF" FontSize="22" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Comparaison automatique des quantites et tags entre fichiers CSV/DXF et PDF BatchPrint" 
                                   FontSize="11" Foreground="#FFB74D" FontWeight="SemiBold"/>
                    </StackPanel>
                </StackPanel>

                <!-- Statistiques au centre (style encadre comme UploadModule) -->
                <Border Grid.Column="1" Background="#1A1A28" CornerRadius="6" Padding="15,8" Margin="20,0"
                        BorderBrush="#4A7FBF" BorderThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Statistiques de Verification" Foreground="#FFD700" FontSize="11" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,6"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <!-- CSV Qty -->
                            <StackPanel Margin="0,0,20,0" HorizontalAlignment="Center">
                                <TextBlock x:Name="TotalCsvQtyLabel" Text="0" Foreground="#90EE90" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="Total Qte CSV/DXF" Foreground="#90EE90" FontSize="9" HorizontalAlignment="Center"/>
                            </StackPanel>
                            <!-- CSV Tags -->
                            <StackPanel Margin="0,0,20,0" HorizontalAlignment="Center">
                                <TextBlock x:Name="TotalCsvTagsLabel" Text="0" Foreground="#90EE90" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="Total Tags CSV/DXF" Foreground="#90EE90" FontSize="9" HorizontalAlignment="Center"/>
                            </StackPanel>
                            <!-- Separateur -->
                            <Border Background="#4A7FBF" Width="2" Height="40" Margin="5,0"/>
                            <!-- PDF Qty -->
                            <StackPanel Margin="20,0,20,0" HorizontalAlignment="Center">
                                <TextBlock x:Name="TotalPdfQtyLabel" Text="0" Foreground="#ADD8E6" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="Total Qte PDF" Foreground="#ADD8E6" FontSize="9" HorizontalAlignment="Center"/>
                            </StackPanel>
                            <!-- PDF Tags -->
                            <StackPanel Margin="0,0,20,0" HorizontalAlignment="Center">
                                <TextBlock x:Name="TotalPdfTagsLabel" Text="0" Foreground="#ADD8E6" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="Total Tags PDF" Foreground="#ADD8E6" FontSize="9" HorizontalAlignment="Center"/>
                            </StackPanel>
                            <!-- PDF Pages -->
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock x:Name="TotalPdfPagesLabel" Text="0" Foreground="#87CEEB" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="Pages PDF" Foreground="#87CEEB" FontSize="9" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Info + Statut Vault a droite -->
                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <!-- Bouton Info -->
                    <Button x:Name="InfoButton" Content="Info" Style="{StaticResource SecondaryButton}" 
                            Click="InfoButton_Click" Padding="20,6" Margin="0,0,0,6"/>
                    <!-- Status Connexion Vault -->
                    <Border Background="#2D2D44" CornerRadius="4" Padding="8,4" BorderBrush="#4A7FBF" BorderThickness="1">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse x:Name="VaultStatusIndicator" Width="8" Height="8" Fill="#888888" Margin="0,0,6,0" VerticalAlignment="Center"/>
                            <TextBlock x:Name="VaultStatusText" Text="Vault: N/A" Foreground="#888888" FontSize="10" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- SECTION DETECTION AUTOMATIQUE - GroupBox avec header bleu marine -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <GroupBox Grid.Row="1" Style="{StaticResource ModernGroupBox}">
            <GroupBox.Header>
                <TextBlock Text="Detection Automatique de Projet" Foreground="White" FontWeight="Bold" FontSize="13"/>
            </GroupBox.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- LIGNE 1: Projet + Ref + Module + Boutons + Chemin -->
                <Grid Grid.Row="0" Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="55"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="55"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Projet:" Style="{StaticResource ModernLabel}" Margin="0,0,8,0"/>
                    <TextBox x:Name="ProjectNumberTextBox" Grid.Column="1" Style="{StaticResource ModernTextBox}" Height="30"/>

                    <TextBlock Grid.Column="2" Text="Ref:" Style="{StaticResource ModernLabel}" Margin="12,0,8,0"/>
                    <TextBox x:Name="ReferenceTextBox" Grid.Column="3" Style="{StaticResource ModernTextBox}" Height="30"/>

                    <TextBlock Grid.Column="4" Text="Module:" Style="{StaticResource ModernLabel}" Margin="12,0,8,0"/>
                    <TextBox x:Name="ModuleNumberTextBox" Grid.Column="5" Style="{StaticResource ModernTextBox}" Height="30"/>

                    <Button x:Name="DetectPdfButton" Grid.Column="6" Content="ðŸ” Detecter" Style="{StaticResource PrimaryButton}" 
                            Padding="12,6" Margin="15,0,5,0" Click="DetectPdfButton_Click"/>
                    <Button x:Name="SelectProjectButton" Grid.Column="7" Content="ï¿½ Choisir" Style="{StaticResource SecondaryButton}" 
                            Padding="12,6" Margin="0,0,5,0" Click="SelectProjectButton_Click"/>

                    <TextBlock Grid.Column="8" Text="Chemin:" Style="{StaticResource ModernLabel}" Margin="15,0,8,0"/>
                    <TextBox x:Name="BasePathTextBox" Grid.Column="9" Style="{StaticResource ModernTextBox}" Height="30"
                             Text="C:\Vault\Engineering\Projects"/>
                    <Button x:Name="BrowsePathButton" Grid.Column="10" Content="ï¿½" Style="{StaticResource SecondaryButton}" 
                            Width="35" Height="30" Padding="5,3" Margin="5,0,0,0" Click="BrowsePathButton_Click"/>
                </Grid>

                <!-- LIGNE 2: Fichiers CSV / Excel / PDF -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- CSV -->
                    <TextBlock Grid.Column="0" Text="CSV:" Style="{StaticResource ModernLabel}" Foreground="#90EE90" Margin="0,0,5,0"/>
                    <Border Grid.Column="1" Background="#2D2D44" BorderBrush="#4A7FBF" BorderThickness="1" CornerRadius="4" Padding="8,4">
                        <TextBlock x:Name="CsvPathLabel" Text="Non detecte" Foreground="#888" FontSize="10" TextTrimming="CharacterEllipsis"/>
                    </Border>
                    <Button Grid.Column="2" Content="ðŸ“‚" Style="{StaticResource SecondaryButton}" Width="28" Height="26" Padding="3" Margin="5,0,15,0" Click="CsvBrowseButton_Click"/>

                    <!-- Excel -->
                    <TextBlock Grid.Column="3" Text="Excel:" Style="{StaticResource ModernLabel}" Foreground="#FFD700" Margin="0,0,5,0"/>
                    <Border Grid.Column="4" Background="#2D2D44" BorderBrush="#4A7FBF" BorderThickness="1" CornerRadius="4" Padding="8,4">
                        <TextBlock x:Name="ExcelPathLabel" Text="Non detecte" Foreground="#888" FontSize="10" TextTrimming="CharacterEllipsis"/>
                    </Border>
                    <Button Grid.Column="5" Content="ðŸ“‚" Style="{StaticResource SecondaryButton}" Width="28" Height="26" Padding="3" Margin="5,0,15,0" Click="ExcelBrowseButton_Click"/>

                    <!-- PDF -->
                    <TextBlock Grid.Column="6" Text="PDF:" Style="{StaticResource ModernLabel}" Foreground="#ADD8E6" Margin="0,0,5,0"/>
                    <Border Grid.Column="7" Background="#2D2D44" BorderBrush="#4A7FBF" BorderThickness="1" CornerRadius="4" Padding="8,4">
                        <TextBlock x:Name="PdfPathLabel" Text="Non detecte" Foreground="#888" FontSize="10" TextTrimming="CharacterEllipsis"/>
                    </Border>
                    <Button Grid.Column="8" Content="ðŸ“‚" Style="{StaticResource SecondaryButton}" Width="28" Height="26" Padding="3" Margin="5,0,0,0" Click="PdfBrowseButton_Click"/>
                </Grid>
            </Grid>
        </GroupBox>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- DATAGRID RESULTATS -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <DataGrid x:Name="ResultDataGrid" Grid.Row="2" Style="{StaticResource ModernDataGrid}" 
                  Margin="0,0,0,8" AutoGenerateColumns="False" IsReadOnly="True"
                  CanUserAddRows="False" CanUserDeleteRows="False" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Qte CSV/DXF" Binding="{Binding Quantity}" Width="*"/>
                <DataGridTextColumn Header="Tag CSV/DXF" Binding="{Binding Tag}" Width="2*"/>
                <DataGridTextColumn Header="Materiau" Binding="{Binding Material}" Width="*"/>
                <DataGridTextColumn Header="Qte PDF" Binding="{Binding PdfQuantity}" Width="*"/>
                <DataGridTextColumn Header="Resultat" Binding="{Binding Status}" Width="2*"/>
            </DataGrid.Columns>
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#2A4A6F"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="Padding" Value="10,8"/>
                    <Setter Property="BorderBrush" Value="#3A5A7F"/>
                    <Setter Property="BorderThickness" Value="0,0,1,0"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
        </DataGrid>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- BARRE DE PROGRESSION + BOUTON VERIFIER + STATUT -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Grid Grid.Row="3" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Barre de progression moderne -->
            <ProgressBar x:Name="ProgressBar" Grid.Row="0" Grid.Column="0" Style="{StaticResource ModernProgressBar}" 
                         Minimum="0" Maximum="100" Margin="0,0,10,0"/>
            
            <!-- Bouton Verifier PDF -->
            <Button x:Name="VerifyButton" Grid.Row="0" Grid.Column="1" Content="âœ… Verifier PDF" Style="{StaticResource SuccessButton}" 
                    Padding="25,8" Click="VerifyButton_Click"/>

            <!-- Statut -->
            <TextBlock x:Name="StatusLabel" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                       Text="{StaticResource StatusDXFVerifier}" 
