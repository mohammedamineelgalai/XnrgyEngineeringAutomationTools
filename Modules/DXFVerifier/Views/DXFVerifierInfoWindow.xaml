<Window x:Class="XnrgyEngineeringAutomationTools.Modules.DXFVerifier.Views.DXFVerifierInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{StaticResource WindowTitleDXFVerifierInfo}"
        Icon="/Resources/XnrgyEngineeringAutomationTools.ico"
        Height="900" Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="#1E1E2E">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Styles/XnrgyStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Style Bouton Fermer avec Glow -->
            <Style x:Key="CloseButton" TargetType="Button">
                <Setter Property="Background" Value="#E81123"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="25,10"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="BorderBrush" Value="#4A7FBF"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="6" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FF4444"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="#FF6666"/>
                                    <Setter TargetName="border" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="#FF4444" BlurRadius="30" ShadowDepth="0" Opacity="0.9"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER avec style sombre - Utilise les ressources centralisees -->
        <Border Grid.Row="0" Background="#2A4A6F" Padding="20,15">
            <StackPanel>
                <TextBlock Text="DXF-CSV vs PDF Verifier" 
                           FontSize="24" FontWeight="Bold" Foreground="White" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Outil de verification automatique des quantites et tags" 
                           FontSize="14" Foreground="#FFB74D" 
                           HorizontalAlignment="Center" Margin="0,5,0,0"/>
                <TextBlock FontSize="12" Foreground="#90EE90" HorizontalAlignment="Center" Margin="0,5,0,0">
                    <Run Text="{StaticResource AppVersion}"/>
                    <Run Text=" - "/>
                    <Run Text="{StaticResource AppReleaseDate}"/>
                    <Run Text=" - XNRGY Climate Systems ULC"/>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- CONTENU PRINCIPAL -->
        <Border Grid.Row="1" Background="#252536" Margin="15,10,15,10" CornerRadius="8" 
                BorderBrush="#4A7FBF" BorderThickness="2">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                <StackPanel x:Name="ContentPanel">
                    <!-- Les sections seront ajoutees dynamiquement en code-behind -->
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- BOUTON FERMER -->
        <Button Grid.Row="2" Content="âŒ Fermer" 
                Style="{StaticResource CloseButton}"
                HorizontalAlignment="Center"
                Margin="0,10,0,15"
                Click="CloseButton_Click"/>

        <!-- Copyright Bar -->
        <Border Grid.Row="3" Style="{StaticResource CopyrightBarBorder}">
            <TextBlock Style="{StaticResource CopyrightTextStyle}" HorizontalAlignment="Center"
                       Text="{StaticResource CopyrightDXFVerifierInfo}"/>
        </Border>
    </Grid>
</Window>
