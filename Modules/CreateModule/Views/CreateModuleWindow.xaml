<Window x:Class="XnrgyEngineeringAutomationTools.Modules.CreateModule.Views.CreateModuleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{StaticResource WindowTitleCreateModule}" 
        Height="900" Width="1400"
        MinHeight="700" MinWidth="1100"
        WindowStartupLocation="CenterOwner"
        WindowState="Maximized"
        Background="#1E1E2E">

    <Window.Resources>
        <!-- Couleurs XNRGY -->
        <SolidColorBrush x:Key="XnrgyBlue" Color="#0078D4"/>
        <SolidColorBrush x:Key="XnrgyGreen" Color="#107C10"/>
        <SolidColorBrush x:Key="XnrgyOrange" Color="#FF8C00"/>
        <SolidColorBrush x:Key="XnrgyRed" Color="#E81123"/>
        <SolidColorBrush x:Key="DarkBg" Color="#1E1E2E"/>
        <SolidColorBrush x:Key="DarkBg2" Color="#252536"/>
        <SolidColorBrush x:Key="DarkBg3" Color="#2D2D44"/>
        <SolidColorBrush x:Key="BorderColor" Color="#4A7FBF"/>
        <SolidColorBrush x:Key="TextLight" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="TextMuted" Color="#888888"/>

        <!-- Style TextBox moderne -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4A7FBF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="2"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style Label -->
        <Style x:Key="ModernLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- Style RadioButton moderne -->
        <Style x:Key="ModernRadioButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="MainBorder" Background="#2D2D44" BorderBrush="#4A7FBF" 
                                BorderThickness="2" CornerRadius="8" Padding="15,12" Cursor="Hand">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border x:Name="RadioBorder" Grid.Column="0" Width="22" Height="22" 
                                        CornerRadius="11" BorderBrush="#666" BorderThickness="2" 
                                        Background="Transparent" Margin="0,0,12,0" VerticalAlignment="Center">
                                    <Ellipse x:Name="RadioDot" Width="10" Height="10" Fill="#0078D4" 
                                             Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ContentPresenter Grid.Column="1" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="MainBorder" Property="BorderBrush" Value="#0078D4"/>
                                <Setter TargetName="MainBorder" Property="Background" Value="#1A3A5C"/>
                                <Setter TargetName="RadioBorder" Property="BorderBrush" Value="#0078D4"/>
                                <Setter TargetName="RadioDot" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="MainBorder" Property="Background" Value="#3D3D56"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style Bouton principal - Glow Brillant -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="25,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" 
                                BorderBrush="#4A7FBF" BorderThickness="2" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1E90FF"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#00D4FF"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#00D4FF" BlurRadius="30" ShadowDepth="0" Opacity="0.9"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#4A7FBF"/>
                                <Setter Property="Foreground" Value="#666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style Bouton secondaire - Glow Brillant -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" 
                                BorderBrush="#4A7FBF" BorderThickness="2" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2A5A8F"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#00D4FF"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#00D4FF" BlurRadius="28" ShadowDepth="0" Opacity="0.85"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style Bouton Succès - Glow Brillant -->
        <Style x:Key="SuccessButton" TargetType="Button">
            <Setter Property="Background" Value="#107C10"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="30,15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8" 
                                BorderBrush="#4A7FBF" BorderThickness="2" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#32CD32"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#00FF7F"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#00FF7F" BlurRadius="30" ShadowDepth="0" Opacity="0.9"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#4A7FBF"/>
                                <Setter Property="Foreground" Value="#666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style GroupBox -->
        <Style x:Key="ModernGroupBox" TargetType="GroupBox">
            <Setter Property="Background" Value="#252536"/>
            <Setter Property="BorderBrush" Value="#4A7FBF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Background="#2A4A6F" CornerRadius="8,8,0,0" 
                                    BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="2,2,2,0" Padding="15,10">
                                <ContentPresenter ContentSource="Header"/>
                            </Border>
                            <Border Grid.Row="1" Background="{TemplateBinding Background}" 
                                    CornerRadius="0,0,8,8" BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="2,0,2,2" Padding="{TemplateBinding Padding}">
                                <ContentPresenter/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style DataGrid moderne -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#1E1E2E"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#4A7FBF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="RowBackground" Value="#252536"/>
            <Setter Property="AlternatingRowBackground" Value="#2D2D44"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#4A7FBF"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#4A7FBF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderBrush" Value="#4A7FBF"/>
            <Setter Property="BorderThickness" Value="0,0,1,2"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#0078D4"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style DatePicker moderne (thème noir complet avec bouton calendrier visible) -->
        <Style x:Key="ModernDatePicker" TargetType="DatePicker">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#4A7FBF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6" Padding="4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <!-- Zone de texte pour la date -->
                                <DatePickerTextBox x:Name="PART_TextBox" Grid.Column="0"
                                                   Background="Transparent"
                                                   Foreground="White"
                                                   BorderThickness="0"
                                                   FontSize="12"
                                                   FontWeight="Bold"
                                                   VerticalAlignment="Center"
                                                   Margin="4,0"/>
                                <!-- Bouton calendrier avec icône visible (blanc) -->
                                <Button x:Name="PART_Button" Grid.Column="1" 
                                        Background="Transparent" BorderThickness="0"
                                        Cursor="Hand" Padding="6,4" VerticalAlignment="Center">
                                    <Path Data="M19,4H18V2H16V4H8V2H6V4H5C3.89,4 3,4.9 3,6V20A2,2 0 0,0 5,22H19A2,2 0 0,0 21,20V6A2,2 0 0,0 19,4M19,20H5V10H19V20M19,8H5V6H19V8M12,13H17V18H12V13Z" 
                                          Fill="White" Width="18" Height="18" Stretch="Uniform"/>
                                </Button>
                                <!-- Popup du calendrier -->
                                <Popup x:Name="PART_Popup" 
                                       PlacementTarget="{Binding ElementName=PART_TextBox}" 
                                       Placement="Bottom" 
                                       IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                       AllowsTransparency="True" StaysOpen="False">
                                    <Border Background="#2D2D44" BorderBrush="#0078D4" BorderThickness="2" CornerRadius="6">
                                        <Calendar x:Name="PART_Calendar"
                                                  Background="#2D2D44"
                                                  Foreground="White"
                                                  BorderThickness="0"/>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style pour DatePickerTextBox interne (texte visible sur fond sombre) -->
        <Style TargetType="DatePickerTextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePickerTextBox">
                        <Grid>
                            <Border Background="Transparent" Padding="2">
                                <TextBox x:Name="PART_TextBox"
                                         Text="{Binding Path=Text, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                         Background="Transparent"
                                         Foreground="White"
                                         BorderThickness="0"
                                         FontSize="12"
                                         FontWeight="Bold"
                                         VerticalContentAlignment="Center"
                                         IsReadOnly="{TemplateBinding IsReadOnly}"/>
                            </Border>
                            <TextBlock x:Name="PART_Watermark" 
                                       Text="Sélectionner une date" 
                                       Foreground="#888888"
                                       Margin="4,0"
                                       VerticalAlignment="Center"
                                       Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <DataTrigger Binding="{Binding Path=Text, RelativeSource={RelativeSource Self}}" Value="">
                                <Setter TargetName="PART_Watermark" Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style ComboBox moderne (thème noir) -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4A7FBF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="Border" Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="30"/>
                                    </Grid.ColumnDefinitions>
                                    <!-- ContentPresenter pour afficher correctement la selection avec DisplayMemberPath -->
                                    <ContentPresenter Grid.Column="0" Margin="10,8" 
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      ContentStringFormat="{TemplateBinding SelectionBoxItemStringFormat}"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Left"
                                                      IsHitTestVisible="False"/>
                                    <ToggleButton Grid.Column="1" x:Name="ToggleButton" 
                                                  Background="Transparent" BorderThickness="0"
                                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                  ClickMode="Press">
                                        <Path Fill="#888" Data="M0,0 L4,4 L8,0 Z" 
                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </ToggleButton>
                                    <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" 
                                           AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                        <Border x:Name="DropDownBorder" Background="#2D2D44" 
                                                BorderBrush="#0078D4" BorderThickness="2" CornerRadius="6"
                                                MinWidth="{TemplateBinding ActualWidth}" MaxHeight="300">
                                            <ScrollViewer>
                                                <StackPanel IsItemsHost="True"/>
                                            </ScrollViewer>
                                        </Border>
                                    </Popup>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style ComboBoxItem moderne -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3D3D56"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#0078D4"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="180"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#2A4A6F" Padding="15,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Viewbox Grid.Column="0" Stretch="Uniform" MaxWidth="600" MaxHeight="80" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Background="#FF8C00" CornerRadius="8" Width="50" Height="50" Margin="0,0,12,0">
                            <TextBlock Text="&#x1F4E6;" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock FontSize="24" FontWeight="Bold" Foreground="White">
                                <Run Text="📦" Foreground="#FF8C00"/><Run Text=" Creer Module - Pack &amp; Go / Copy Design"/>
                            </TextBlock>
                            <TextBlock FontSize="14" Foreground="#FFB74D" Margin="0,3,0,0" FontWeight="SemiBold">
                                <Run Text="💡" Foreground="#FFD700"/><Run Text=" Copie complete de modules Inventor avec renommage automatique"/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Viewbox>

                <!-- Centre: Statistiques -->
                <Viewbox Grid.Column="1" Stretch="Uniform" MaxWidth="500" MaxHeight="80" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20,0">
                    <Border x:Name="StatisticsBorder" Background="#1A1A28" CornerRadius="6" Padding="15,4"
                            BorderBrush="#4A7FBF" BorderThickness="2">
                        <StackPanel VerticalAlignment="Center">
                            <!-- Titre -->
                            <TextBlock Foreground="#FFD700" FontSize="11" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,4">
                                <Run Text="📈" Foreground="#00FF7F"/><Run Text=" Statistiques" Foreground="#FFD700"/>
                            </TextBlock>
                            <!-- Valeurs -->
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <StackPanel Margin="0,0,20,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock x:Name="TxtStatsTotal" Text="0" Foreground="White" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock FontSize="11" HorizontalAlignment="Center">
                                        <Run Text="📊" Foreground="#4169E1"/><Run Text=" Total" Foreground="White"/>
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel Margin="0,0,20,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock x:Name="TxtStatsInventor" Text="0" Foreground="#FFD700" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock FontSize="11" HorizontalAlignment="Center">
                                        <Run Text="📐" Foreground="#FF8C00"/><Run Text=" Inventor" Foreground="#FFD700"/>
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel Margin="0,0,20,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock x:Name="TxtStatsOther" Text="0" Foreground="#FFB74D" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock FontSize="11" HorizontalAlignment="Center">
                                        <Run Text="📄" Foreground="#87CEEB"/><Run Text=" Autres" Foreground="#FFB74D"/>
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock x:Name="TxtStatsSelected" Text="0" Foreground="#90EE90" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock FontSize="11" HorizontalAlignment="Center">
                                        <Run Text="✅" Foreground="#32CD32"/><Run Text=" Selection" Foreground="#90EE90"/>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Viewbox>

                <!-- Droite: Statut connexion + Boutons -->
                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <!-- Statut Connexion Inventor et Vault (côte à côte) - Inventor à gauche, Vault à droite -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,6">
                        <!-- Statut Connexion Inventor (dynamique avec fichier actif) -->
                        <Border Background="#2D2D44" CornerRadius="4" Padding="10,6" Margin="0,0,8,0"
                                BorderBrush="#4A7FBF" BorderThickness="2">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse x:Name="InventorStatusIndicator" Width="10" Height="10" Fill="#E81123" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock x:Name="TxtInventorStatus" FontWeight="SemiBold" FontSize="12">
                                    <Run Text="⚙️" Foreground="#FF8C00"/><Run x:Name="RunInventorStatus" Text=" Inventor : Deconnecte" Foreground="White"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                        <!-- Statut Connexion Vault (style identique VaultUploadModule) -->
                        <Border Background="#2D2D44" CornerRadius="4" Padding="10,6"
                                BorderBrush="#4A7FBF" BorderThickness="2">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse x:Name="VaultStatusIndicator" Width="10" Height="10" Fill="#E81123" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock x:Name="TxtVaultStatus" FontWeight="SemiBold" FontSize="12">
                                    <Run Text="🗄️" Foreground="#00BFFF"/><Run x:Name="RunVaultName" Text=" Vault: --" Foreground="White"/><Run Text="  |  👤" Foreground="#FFB74D"/><Run x:Name="RunUserName" Text=" --" Foreground="White"/><Run Text="  |  📡" Foreground="#90EE90"/><Run x:Name="RunStatus" Text=" Deconnecte" Foreground="White"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    <!-- Boutons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock x:Name="TxtDestinationPreview" Text="Destination: Non definie" 
                                   Foreground="#B8D4E8" FontSize="11" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <!-- Bouton Reglages Admin - Visible uniquement si admin Vault -->
                        <Button x:Name="BtnSettings" Content="⚙️ Reglages" Style="{StaticResource SecondaryButton}" 
                                Background="#5B5FC7" Foreground="#FFFFFF" Height="34" FontSize="13"
                                Padding="12,5" Margin="0,0,8,0"
                                Click="BtnSettings_Click" ToolTip="Reglages - Administrateurs Vault uniquement"
                                Visibility="Collapsed" VerticalContentAlignment="Center"/>
                        <Button x:Name="BtnClose" Content="❌ Fermer" Style="{StaticResource SecondaryButton}" 
                                Background="#E81123" Foreground="White" Height="34" FontSize="13"
                                Padding="12,5" Click="BtnClose_Click" VerticalContentAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
        <!-- SECTION INPUTS - En-tête avec propriétés et options de renommage -->
        <Border x:Name="InputsSectionBorder" Grid.Row="1" Background="#1E1E2E" Padding="15,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Colonne gauche: Informations Projet + Paramètres/iProperties fusionnés -->
                <GroupBox Grid.Column="0" Style="{StaticResource ModernGroupBox}" Margin="0,0,10,0" Padding="10">
                    <GroupBox.Header>
                        <TextBlock FontSize="14" FontWeight="Bold">
                            <Run Text="📁" Foreground="#FFD700"/><Run Text=" Informations Projet / " Foreground="#FF8C00"/><Run Text="⚙️" Foreground="#FF8C00"/><Run Text=" Paramètres et iProperties" Foreground="#FF8C00"/>
                        </TextBlock>
                    </GroupBox.Header>
                    <StackPanel>
                        <!-- Informations Projet -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.8*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="1.2*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Project Number -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,8,3">
                                <TextBlock Text="Numéro de Projet *" Style="{StaticResource ModernLabel}" FontSize="11"/>
                                <TextBox x:Name="TxtProject" Style="{StaticResource ModernTextBox}" 
                                         MaxLength="6" TextChanged="ProjectInfo_TextChanged" Padding="10,8"
                                         ToolTip="Ex: 12345 - Numéro du projet"/>
                            </StackPanel>

                            <!-- Reference - ComboBox 01 à 50 -->
                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,8,3">
                                <TextBlock Text="Référence *" Style="{StaticResource ModernLabel}" FontSize="11"/>
                                <ComboBox x:Name="CmbReference" Style="{StaticResource ModernComboBox}"
                                          SelectionChanged="CmbReference_SelectionChanged"
                                          ToolTip="Sélectionner la référence (01-50)"/>
                            </StackPanel>

                            <!-- Module - ComboBox 01 à 50 -->
                            <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,3">
                                <TextBlock Text="Module *" Style="{StaticResource ModernLabel}" FontSize="11"/>
                                <ComboBox x:Name="CmbModule" Style="{StaticResource ModernComboBox}"
                                          SelectionChanged="CmbModule_SelectionChanged"
                                          ToolTip="Sélectionner le module (01-50)"/>
                            </StackPanel>

                            <!-- Full Project Number (Calculé) -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,3,8,3">
                                <TextBlock Text="Numéro Projet Complet (Auto)" Style="{StaticResource ModernLabel}" FontSize="11"/>
                                <Border Background="#1A1A28" CornerRadius="4" Padding="10,8" BorderBrush="#4A7FBF" BorderThickness="2">
                                    <TextBlock x:Name="TxtFullProjectNumber" Text="000000000" FontSize="12" 
                                               FontWeight="Bold" Foreground="White" FontFamily="Consolas"/>
                                </Border>
                            </StackPanel>

                            <!-- Destination Path (Calculé) -->
                            <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,3,0,3">
                                <TextBlock Text="Chemin de Destination (Auto)" Style="{StaticResource ModernLabel}" FontSize="11"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" Background="#1A1A28" CornerRadius="4,0,0,4" Padding="10,8" 
                                            BorderBrush="#4A7FBF" BorderThickness="2,2,0,2">
                                        <TextBlock x:Name="TxtDestinationPath" Text="C:\Vault\Engineering\Projects\..." 
                                                   FontSize="12" FontWeight="Bold" Foreground="White" FontFamily="Consolas" 
                                                   TextTrimming="CharacterEllipsis" TextWrapping="NoWrap"/>
                                    </Border>
                                    <Button Grid.Column="1" x:Name="BtnBrowseDestination" Content="📂" 
                                            Style="{StaticResource SecondaryButton}" Padding="8,5" Foreground="#FFD700"
                                            Click="BtnBrowseDestination_Click" ToolTip="Parcourir..."/>
                                </Grid>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Paramètres / iProperties -->
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="280"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Initiale Dessinateur - ComboBox avec liste prédéfinie -->
                            <StackPanel Grid.Column="0" Margin="0,0,4,0">
                                <TextBlock Text="Dessinateur *" Style="{StaticResource ModernLabel}" FontSize="11"/>
                                <ComboBox x:Name="CmbInitialeDessinateur" Style="{StaticResource ModernComboBox}"
                                          SelectionChanged="CmbInitialeDessinateur_SelectionChanged"
                                          ToolTip="Sélectionner les initiales du dessinateur principal"/>
                            </StackPanel>

                            <!-- Initiale Co-Dessinateur - ComboBox avec liste prédéfinie -->
                            <StackPanel Grid.Column="1" Margin="0,0,4,0">
                                <TextBlock Text="Co-Dessinateur" Style="{StaticResource ModernLabel}" FontSize="11"/>
                                <ComboBox x:Name="CmbInitialeCoDessinateur" Style="{StaticResource ModernComboBox}"
                                          SelectionChanged="CmbInitialeCoDessinateur_SelectionChanged"
                                          ToolTip="Sélectionner les initiales du co-dessinateur (optionnel)"/>
                            </StackPanel>

                            <!-- Initiale Lead CAD - ComboBox avec liste prédéfinie -->
                            <StackPanel Grid.Column="2" Margin="0,0,4,0">
                                <TextBlock Text="Lead CAD" Style="{StaticResource ModernLabel}" FontSize="11"/>
                                <ComboBox x:Name="CmbInitialeLeadCAD" Style="{StaticResource ModernComboBox}"
                                          SelectionChanged="CmbInitialeLeadCAD_SelectionChanged"
                                          ToolTip="Sélectionner les initiales du Lead CAD (optionnel)"/>
                            </StackPanel>

                            <!-- Job Title (requis) -->
                            <StackPanel Grid.Column="3" Margin="0,0,4,0">
                                <TextBlock Text="Job Title *" Style="{StaticResource ModernLabel}" FontSize="11"/>
                                <TextBox x:Name="TxtJobTitle" Style="{StaticResource ModernTextBox}" Padding="8,8"
                                         TextChanged="TxtJobTitle_TextChanged"
                                         CharacterCasing="Upper"
                                         ToolTip="Titre du projet en MAJUSCULES"/>
                            </StackPanel>

                            <!-- Date de Création avec DatePicker stylé -->
                            <StackPanel Grid.Column="4">
                                <TextBlock Text="Date" Style="{StaticResource ModernLabel}" FontSize="11"/>
                                <DatePicker x:Name="DpCreationDate" 
                                            Style="{StaticResource ModernDatePicker}"
                                            SelectedDateFormat="Short"
                                            ToolTip="Cliquez sur le calendrier pour changer la date"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- Séparateur vertical -->
                <Border Grid.Column="1" Width="1" Background="#2A4A6F" Margin="5,0"/>

                <!-- Colonne droite: Options de Renommage -->
                <GroupBox Grid.Column="2" Style="{StaticResource ModernGroupBox}" Margin="10,0,0,0" Padding="10">
                    <GroupBox.Header>
                        <TextBlock FontSize="14" FontWeight="Bold">
                            <Run Text="✏️" Foreground="#FF8C00"/><Run Text=" Options de Renommage des Fichiers" Foreground="#FF8C00"/>
                        </TextBlock>
                    </GroupBox.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Rechercher / Remplacer -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,8,3">
                            <TextBlock Text="Rechercher:" Style="{StaticResource ModernLabel}" FontSize="11"/>
                                <TextBox x:Name="TxtSearch" Style="{StaticResource ModernTextBox}" Padding="10,8"
                                     TextChanged="RenameOptions_Changed" ToolTip="Texte à rechercher dans les noms"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,8,3">
                            <TextBlock Text="Remplacer par:" Style="{StaticResource ModernLabel}" FontSize="11"/>
                            <TextBox x:Name="TxtReplace" Style="{StaticResource ModernTextBox}" Padding="10,8"
                                     TextChanged="RenameOptions_Changed" ToolTip="Texte de remplacement"/>
                        </StackPanel>

                        <!-- Espace vide pour la colonne 2 ligne 0 -->
                        <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,3"/>

                        <!-- Préfixe / Suffixe / Suffixe fixe alignés -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,3,8,0">
                            <TextBlock Text="Préfixe:" Style="{StaticResource ModernLabel}" FontSize="11"/>
                            <TextBox x:Name="TxtPrefix" Style="{StaticResource ModernTextBox}" Padding="10,8"
                                     TextChanged="RenameOptions_Changed" ToolTip="Préfixe à ajouter"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,3,8,0">
                            <TextBlock Text="Suffixe:" Style="{StaticResource ModernLabel}" FontSize="11"/>
                            <TextBox x:Name="TxtSuffix" Style="{StaticResource ModernTextBox}" Padding="10,8"
                                     TextChanged="RenameOptions_Changed" ToolTip="Suffixe à ajouter"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,3,0,0">
                            <TextBlock Text="Suffixe fixe:" Style="{StaticResource ModernLabel}" FontSize="11"/>
                            <ComboBox x:Name="CmbFixedSuffix" Style="{StaticResource ModernComboBox}"
                                      SelectionChanged="CmbFixedSuffix_SelectionChanged"
                                      ToolTip="Sélectionner un suffixe fixe à appliquer">
                                <ComboBoxItem Content="Aucun" IsSelected="True"/>
                                <ComboBoxItem Content="_01"/>
                                <ComboBoxItem Content="_02"/>
                                <ComboBoxItem Content="_03"/>
                                <ComboBoxItem Content="_04"/>
                                <ComboBoxItem Content="_05"/>
                                <ComboBoxItem Content="_06"/>
                                <ComboBoxItem Content="_07"/>
                                <ComboBoxItem Content="_08"/>
                                <ComboBoxItem Content="_09"/>
                                <ComboBoxItem Content="_10"/>
                                <ComboBoxItem Content="Autre..."/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Checkboxes alignées avec les boutons + Boutons d'action -->
                        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Checkbox 1: Inclure les Fichiers Non Inventor -->
                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                <CheckBox x:Name="ChkIncludeNonInventor" 
                                          Foreground="White" FontSize="12" FontWeight="Bold"
                                          IsChecked="False"
                                          Checked="ChkIncludeNonInventor_Changed"
                                          Unchecked="ChkIncludeNonInventor_Changed">
                                    <TextBlock Text="Inclure les Fichiers Non Inventor" Foreground="White" FontSize="12" FontWeight="Bold"/>
                                </CheckBox>
                                <TextBlock x:Name="TxtPreviewInclude" Text="" Foreground="#90EE90" FontSize="11" Margin="20,2,0,0" FontStyle="Italic" TextWrapping="Wrap"/>
                            </StackPanel>
                            
                            <!-- Checkbox 2: Préfixe Numéro Projet -->
                            <StackPanel Grid.Column="1" Margin="0,0,8,0">
                                <CheckBox x:Name="ChkApplyProjectPrefix" 
                                          Foreground="White" FontSize="12" FontWeight="Bold"
                                          IsChecked="False"
                                          Checked="ChkApplyProjectPrefix_Changed"
                                          Unchecked="ChkApplyProjectPrefix_Changed"
                                          ToolTip="Ajoute le numéro projet complet (XXXXXXXXX_) comme préfixe à tous les fichiers">
                                    <TextBlock FontSize="12" FontWeight="Bold">
                                        <Run Text="✅" Foreground="#32CD32"/><Run Text=" Préfixe Numéro Projet" Foreground="White"/>
                                    </TextBlock>
                                </CheckBox>
                                <TextBlock x:Name="TxtPreviewPrefix" Text="" Foreground="#90EE90" FontSize="11" Margin="20,2,0,0" FontStyle="Italic" TextWrapping="Wrap"/>
                            </StackPanel>
                            
                            <!-- Checkbox 3: Suffixe incrémentatif -->
                            <StackPanel Grid.Column="2" Margin="0,0,8,0">
                                <CheckBox x:Name="ChkApplyIncrementalSuffix" 
                                          Foreground="White" FontSize="12" FontWeight="Bold"
                                          IsChecked="False"
                                          Checked="ChkApplyIncrementalSuffix_Changed"
                                          Unchecked="ChkApplyIncrementalSuffix_Changed"
                                          ToolTip="Applique un suffixe incrémentatif à tous les fichiers sélectionnés">
                                    <TextBlock FontSize="12" FontWeight="Bold">
                                        <Run Text="✅" Foreground="#32CD32"/><Run Text=" Suffixe incrémentatif" Foreground="White"/>
                                    </TextBlock>
                                </CheckBox>
                                <TextBlock x:Name="TxtPreviewIncremental" Text="" Foreground="#90EE90" FontSize="11" Margin="20,2,0,0" FontStyle="Italic" TextWrapping="Wrap"/>
                            </StackPanel>
                            
                            <!-- Boutons d'action - Reset à gauche, Appliquer à droite -->
                            <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button x:Name="BtnResetNames" Content="↺ Reset" 
                                        Style="{StaticResource SecondaryButton}" 
                                        Padding="10,8" FontSize="12" FontWeight="Bold" Height="38" Margin="0,0,8,0"
                                        Click="BtnResetNames_Click"/>
                                <Button x:Name="BtnApplyRename" Content="✓ Appliquer" 
                                        Style="{StaticResource PrimaryButton}" 
                                        Padding="10,8" FontSize="12" FontWeight="Bold" Height="38"
                                        Click="BtnApplyRename_Click"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </GroupBox>
            </Grid>
        </Border>

        <!-- SECTION PRINCIPALE - Options et Fichiers -->
        <Grid Grid.Row="2" Margin="15,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="340"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Panneau gauche: Options de source et renommage avec Scroll -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="0,0,15,0">
                <StackPanel>
                
                <!-- Source du module -->
                <GroupBox Style="{StaticResource ModernGroupBox}">
                    <GroupBox.Header>
                        <TextBlock FontSize="14" FontWeight="Bold">
                            <Run Text="📥" Foreground="#00BFFF"/><Run Text=" Source du Module" Foreground="#FF8C00"/>
                        </TextBlock>
                    </GroupBox.Header>
                    <StackPanel>
                        <RadioButton x:Name="RbFromTemplate" Style="{StaticResource ModernRadioButton}" 
                                     IsChecked="True" Checked="SourceOption_Changed">
                            <StackPanel>
                                <TextBlock FontWeight="Bold" FontSize="13">
                                    <Run Text="📦" Foreground="#FF8C00"/><Run Text=" Creer Depuis Template Local" Foreground="White"/>
                                </TextBlock>
                                <TextBlock Text="Template vierge Xnrgy_Module (C:\Vault\Engineering\Library\)" FontSize="11" Foreground="#DDDDDD" Margin="0,2,0,0"/>
                            </StackPanel>
                        </RadioButton>
                        
                        <RadioButton x:Name="RbFromExisting" Style="{StaticResource ModernRadioButton}" 
                                     Checked="SourceOption_Changed" Margin="0,8,0,0">
                            <StackPanel>
                                <TextBlock FontWeight="Bold" FontSize="13">
                                    <Run Text="📂" Foreground="#FFD700"/><Run Text=" Creer Depuis Projet Local" Foreground="White"/>
                                </TextBlock>
                                <TextBlock Text="Copier un projet existant sur le disque local (C:\Vault\Engineering\Projects\)" FontSize="11" Foreground="#DDDDDD" Margin="0,2,0,0"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton x:Name="RbFromVault" Style="{StaticResource ModernRadioButton}" 
                                     Checked="SourceOption_Changed" Margin="0,8,0,0">
                            <StackPanel>
                                <TextBlock FontWeight="Bold" FontSize="13">
                                    <Run Text="🗄️" Foreground="#00BFFF"/><Run Text=" Creer Depuis Projet Vault" Foreground="White"/>
                                </TextBlock>
                                <TextBlock Text="Telecharger et copier un projet depuis le serveur Vault ($/Engineering/Projects/)" FontSize="11" Foreground="#DDDDDD" Margin="0,2,0,0"/>
                            </StackPanel>
                        </RadioButton>

                        <!-- Sélecteur de projet existant (visible uniquement si RbFromExisting) -->
                        <StackPanel x:Name="PnlProjectSelector" Visibility="Collapsed" Margin="0,10,0,0">
                            <TextBlock Text="Sélectionner Projet:" Style="{StaticResource ModernLabel}" FontSize="12"/>
                            <ComboBox x:Name="CmbProjects" Height="36" FontSize="12"
                                      Style="{StaticResource ModernComboBox}"
                                      SelectionChanged="CmbProjects_SelectionChanged"/>
                            <Button x:Name="BtnRefreshProjects" Content="🔄 Actualiser les Projets" 
                                    Style="{StaticResource SecondaryButton}" Margin="0,8,0,0" 
                                    Padding="12,8" FontSize="11" Foreground="#00FF7F"
                                    Click="BtnRefreshProjects_Click"/>
                        </StackPanel>

                        <!-- Sélecteur de projet Vault (visible uniquement si RbFromVault) -->
                        <StackPanel x:Name="PnlVaultProjectSelector" Visibility="Collapsed" Margin="0,10,0,0">
                            <TextBlock Text="Sélectionner Projet Vault:" Style="{StaticResource ModernLabel}" FontSize="12"/>
                            <ComboBox x:Name="CmbVaultProjects" Height="36" FontSize="12"
                                      Style="{StaticResource ModernComboBox}"
                                      SelectionChanged="CmbVaultProjects_SelectionChanged"
                                      DisplayMemberPath="DisplayName"/>
                            <Button x:Name="BtnRefreshVaultProjects" Content="🔄 Actualiser les Projets Vault" 
                                    Style="{StaticResource SecondaryButton}" Margin="0,8,0,0" 
                                    Padding="12,8" FontSize="11" Foreground="#00FF7F"
                                    Click="BtnRefreshVaultProjects_Click"/>
                        </StackPanel>

                        <!-- Chemin source -->
                        <StackPanel Margin="0,12,0,0">
                            <TextBlock Text="Chemin Source:" Style="{StaticResource ModernLabel}" FontSize="12"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="TxtSourcePath" Grid.Column="0" Style="{StaticResource ModernTextBox}"
                                         Text="C:\Vault\Engineering\Library\Xnrgy_Module" IsReadOnly="True"
                                         Padding="8,6"/>
                                <Button x:Name="BtnBrowseSource" Grid.Column="1" Content="📂" 
                                        Style="{StaticResource SecondaryButton}" Padding="10,6" Margin="5,0,0,0" Foreground="#FFD700"
                                        Click="BtnBrowseSource_Click" ToolTip="Parcourir..."/>
                            </Grid>
                        </StackPanel>

                        <!-- Bouton Charger fichiers - bien visible -->
                        <Button x:Name="BtnLoadFiles" Content="🔄 Charger les Fichiers" 
                                Style="{StaticResource PrimaryButton}" Margin="0,12,0,5" 
                                Padding="15,10" FontSize="13" Foreground="#00FF7F"
                                Click="BtnLoadFiles_Click"/>
                    </StackPanel>
                </GroupBox>
                </StackPanel>
            </ScrollViewer>

            <!-- Panneau droit: Liste des fichiers -->
            <GroupBox Grid.Column="1" Style="{StaticResource ModernGroupBox}" Margin="0">
                <GroupBox.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Titre -->
                        <TextBlock Grid.Column="0" FontSize="16" FontWeight="Bold" VerticalAlignment="Center">
                            <Run Text="📄" Foreground="#87CEEB"/><Run Text=" Fichiers à Copier (Style Copy Design)" Foreground="White"/>
                        </TextBlock>
                        
                        <!-- Zone de recherche et filtres -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,0,20,0" VerticalAlignment="Center">
                            <!-- Recherche -->
                            <Border Background="#2D2D3D" CornerRadius="4" Padding="6,4" Margin="0,0,10,0"
                                    BorderBrush="#4A7FBF" BorderThickness="2">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🔍" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#87CEEB"/>
                                    <TextBox x:Name="TxtSearchFiles" Width="180" Background="Transparent" 
                                             Foreground="White" BorderThickness="0" VerticalAlignment="Center"
                                             CaretBrush="White"
                                             TextChanged="TxtSearchFiles_TextChanged"
                                             ToolTip="Rechercher par nom de fichier"/>
                                    <Button x:Name="BtnClearSearch" Content="✕" Background="Transparent" 
                                            Foreground="White" BorderThickness="0" Padding="5,2" 
                                            Click="BtnClearSearch_Click" ToolTip="Effacer la recherche"
                                            Visibility="Collapsed"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Filtre Extension (chargé dynamiquement) -->
                            <TextBlock VerticalAlignment="Center" Margin="0,0,5,0" FontSize="11" FontWeight="Bold">
                                <Run Text="📋" Foreground="#87CEEB"/><Run Text=" Extension:" Foreground="White"/>
                            </TextBlock>
                            <ComboBox x:Name="CmbFilterType" Width="90" Style="{StaticResource ModernComboBox}"
                                      SelectionChanged="CmbFilterType_SelectionChanged" ToolTip="Filtrer par type de fichier">
                                <ComboBoxItem Content="Tous" IsSelected="True"/>
                            </ComboBox>
                            
                            <!-- Filtre Statut (chargé dynamiquement) -->
                            <TextBlock VerticalAlignment="Center" Margin="10,0,5,0" FontSize="11" FontWeight="Bold">
                                <Run Text="🔄" Foreground="#00FF7F"/><Run Text=" Statut:" Foreground="White"/>
                            </TextBlock>
                            <ComboBox x:Name="CmbFilterSelection" Width="110" Style="{StaticResource ModernComboBox}"
                                      SelectionChanged="CmbFilterSelection_SelectionChanged" ToolTip="Filtrer par statut">
                                <ComboBoxItem Content="Tous" IsSelected="True"/>
                            </ComboBox>
                            
                            <!-- Compteur -->
                            <Border Background="#0078D4" CornerRadius="10" Padding="8,2" Margin="10,0,0,0" VerticalAlignment="Center">
                                <TextBlock x:Name="TxtFileCount" Text="0 fichiers" Foreground="White" FontSize="11" FontWeight="Bold"/>
                            </Border>
                        </StackPanel>
                        
                        <!-- Boutons de sélection -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <Button x:Name="BtnInvertSelection" Content="⇄ Inverser" Style="{StaticResource SecondaryButton}" 
                                    Padding="10,5" Margin="0,0,5,0" Click="BtnInvertSelection_Click" ToolTip="Inverser la sélection"/>
                            <Button x:Name="BtnSelectAll" Content="☑ Tout" Style="{StaticResource SecondaryButton}" 
                                    Padding="10,5" Margin="0,0,5,0" Click="BtnSelectAll_Click"/>
                            <Button x:Name="BtnSelectNone" Content="☐ Rien" Style="{StaticResource SecondaryButton}" 
                                    Padding="10,5" Click="BtnSelectNone_Click"/>
                        </StackPanel>
                    </Grid>
                </GroupBox.Header>
                
                <DataGrid x:Name="DgFiles" AutoGenerateColumns="False" 
                          CanUserAddRows="False" CanUserDeleteRows="False"
                          SelectionMode="Extended" SelectionUnit="FullRow"
                          VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                          MouseLeftButtonUp="DgFiles_MouseLeftButtonUp">
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn Header="✓" Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" Width="40"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding FileType}" Width="60" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Nom Original" Binding="{Binding OriginalFileName}" Width="200" IsReadOnly="True"/>
                        <DataGridTextColumn Header="➜" Width="30" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="➜"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="#0078D4"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Nouveau Nom" Binding="{Binding NewFileName, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80" IsReadOnly="True"/>
                        <DataGridTextColumn Header="📁 Source" Binding="{Binding OriginalPath}" Width="450" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#A0A0A0"/>
                                    <Setter Property="ToolTip" Value="{Binding OriginalPath}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="📂 Destination" Binding="{Binding DestinationPath}" Width="450" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#70B070"/>
                                    <Setter Property="ToolTip" Value="{Binding DestinationPath}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </Grid>

        <!-- FOOTER - Boutons d'action (compact) -->
        <Border Grid.Row="3" Background="#2A4A6F" CornerRadius="8" Margin="20,10,20,10" Padding="15,10"
                BorderBrush="#4A7FBF" BorderThickness="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Barre de progression avec texte de statut intégré -->
                <Border Grid.Column="0" Background="#1E1E2E" CornerRadius="6" 
                        Height="34" Margin="0,0,15,0" ClipToBounds="True"
                        BorderBrush="#4A7FBF" BorderThickness="2">
                    <Grid>
                        <!-- Barre de progression verte avec effet - Brillance reduite -->
                        <Border x:Name="ProgressBarFill" Background="#28A745" CornerRadius="6" HorizontalAlignment="Left" Width="0">
                            <Border.Effect>
                                <DropShadowEffect Color="#00FF7F" BlurRadius="15" ShadowDepth="0" Opacity="0.45"/>
                            </Border.Effect>
                        </Border>
                        
                        <!-- Texte de statut -->
                        <TextBlock x:Name="TxtStatus" 
                                   Text="Prêt - Remplissez les informations du projet" 
                                   Foreground="White" FontSize="12" FontWeight="Bold"
                                   VerticalAlignment="Center" HorizontalAlignment="Left"
                                   Margin="12,0,0,0" TextTrimming="CharacterEllipsis" MaxWidth="200"/>
                        
                        <!-- Fichier en cours -->
                        <TextBlock x:Name="TxtCurrentFile" 
                                   Text="" 
                                   Foreground="White" FontSize="12" FontWeight="Bold"
                                   VerticalAlignment="Center" HorizontalAlignment="Left"
                                   Margin="220,0,0,0" TextTrimming="CharacterEllipsis" MaxWidth="200"/>
                        
                        <!-- Temps écoulé et pourcentage - AVEC LABELS -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,12,0">
                            <TextBlock x:Name="TxtTimeLabel" Text="⏱️ Ecoulé: " Foreground="White" FontSize="11" FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock x:Name="TxtProgressTimeElapsed" Text="00:00" Foreground="White" FontSize="11" FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock x:Name="TxtEstimatedLabel" Text=" / Estimé: " Foreground="White" FontSize="11" FontWeight="Bold" VerticalAlignment="Center" Margin="4,0,0,0"/>
                            <TextBlock x:Name="TxtProgressTimeEstimated" Text="00:00" Foreground="White" FontSize="11" FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock x:Name="TxtSeparator" Text=" | " Foreground="White" FontSize="11" FontWeight="Bold" VerticalAlignment="Center" Margin="8,0,8,0"/>
                            <TextBlock x:Name="TxtProgressPercent" Text="0%" Foreground="White" FontSize="12" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Boutons d'action (compacts) -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="BtnPreview" Content="👁️ Prévisualiser" Style="{StaticResource SecondaryButton}" 
                            Background="#0891B2" Foreground="White" Height="34" FontSize="13" FontWeight="Bold"
                            Padding="12,5" Margin="0,0,8,0" Click="BtnPreview_Click" VerticalContentAlignment="Center"/>
                    <Button x:Name="BtnCancel" Content="✖️ Annuler" Style="{StaticResource SecondaryButton}" 
                            Background="#E81123" Foreground="White" Height="34" FontSize="13" FontWeight="Bold"
                            Padding="12,5" Margin="0,0,8,0" Click="BtnCancel_Click" VerticalContentAlignment="Center"/>
                    <Button x:Name="BtnCreateModule" Content="✅ CRÉER LE MODULE" Style="{StaticResource SuccessButton}" 
                            Foreground="White" Height="34" FontSize="13" FontWeight="Bold"
                            Padding="15,5" IsEnabled="False" Click="BtnCreateModule_Click" VerticalContentAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- JOURNAL DES OPÉRATIONS -->
        <Border Grid.Row="4" Background="#252536" CornerRadius="8" Margin="20,10,20,10" BorderBrush="#4A7FBF" BorderThickness="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Border Grid.Row="0" Background="#2A4A6F" CornerRadius="6,6,0,0" Padding="15,8">
                    <Grid>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="📋" FontSize="16" Foreground="#87CEEB" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Journal des Opérations" FontSize="14" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button Content="🗑️ Effacer" 
                                HorizontalAlignment="Right" 
                                Style="{StaticResource SecondaryButton}" 
                                Background="#DC2626" Foreground="White" FontWeight="Bold"
                                Padding="10,5"
                                Click="BtnClearLog_Click"/>
                    </Grid>
                </Border>
                
                <ListBox x:Name="LogListBox" Grid.Row="1" 
                         Background="Transparent" 
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Focusable" Value="False"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <ContentPresenter/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Grid>
        </Border>

        <!-- ========== COPYRIGHT BAR - Utilise styles centralises ========== -->
        <Border Grid.Row="5" Style="{StaticResource CopyrightBarBorder}">
            <Grid>
                <TextBlock Text="Pret" Style="{StaticResource StatusTextStyle}"/>
                <TextBlock Style="{StaticResource CopyrightTextStyle}" HorizontalAlignment="Right"
                           Text="{StaticResource CopyrightCreateModule}"/>
            </Grid>
        </Border>
    </Grid>
</Window>