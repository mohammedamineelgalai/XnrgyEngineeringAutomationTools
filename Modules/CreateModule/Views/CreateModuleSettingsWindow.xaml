<Window x:Class="XnrgyEngineeringAutomationTools.Modules.CreateModule.Views.CreateModuleSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reglages - Creer Module (Admin) - v1.0.0 - Released on 2026-01-02 - By Mohammed Amine Elgalai - XNRGY CLIMATE SYSTEMS ULC" 
        Height="700" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E2E"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <!-- Couleurs XNRGY -->
        <SolidColorBrush x:Key="XnrgyBlue" Color="#0078D4"/>
        <SolidColorBrush x:Key="XnrgyGreen" Color="#107C10"/>
        <SolidColorBrush x:Key="XnrgyOrange" Color="#FF8C00"/>
        <SolidColorBrush x:Key="XnrgyRed" Color="#E81123"/>
        <SolidColorBrush x:Key="DarkBg" Color="#1E1E2E"/>
        <SolidColorBrush x:Key="DarkBg2" Color="#252536"/>
        <SolidColorBrush x:Key="DarkBg3" Color="#2D2D44"/>
        <SolidColorBrush x:Key="BorderColor" Color="#4A7FBF"/>
        <SolidColorBrush x:Key="TextLight" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="TextMuted" Color="#888888"/>

        <!-- Style TextBox moderne (identique au parent) -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#4A7FBF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="2"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style Label (identique au parent) -->
        <Style x:Key="ModernLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- Style GroupBox moderne (identique au parent) -->
        <Style x:Key="ModernGroupBox" TargetType="GroupBox">
            <Setter Property="Background" Value="#252536"/>
            <Setter Property="BorderBrush" Value="#4A7FBF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Background="#2A4A6F" CornerRadius="8,8,0,0" 
                                    BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="2,2,2,0" Padding="15,10">
                                <ContentPresenter ContentSource="Header"/>
                            </Border>
                            <Border Grid.Row="1" Background="{TemplateBinding Background}" 
                                    CornerRadius="0,0,8,8" BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="2,0,2,2" Padding="{TemplateBinding Padding}">
                                <ContentPresenter/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Alias pour compatibilitÃ© -->
        <Style x:Key="SettingsLabel" TargetType="TextBlock" BasedOn="{StaticResource ModernLabel}"/>
        <Style x:Key="SettingsTextBox" TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}"/>
        <Style x:Key="SettingsGroupBox" TargetType="GroupBox" BasedOn="{StaticResource ModernGroupBox}"/>
        
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" 
                                BorderBrush="#4A7FBF" BorderThickness="2" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1E90FF"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#00D4FF"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#00D4FF" BlurRadius="30" ShadowDepth="0" Opacity="0.9"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#4A7FBF"/>
                                <Setter Property="Foreground" Value="#666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" 
                                BorderBrush="#4A7FBF" BorderThickness="2" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2A5A8F"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#00D4FF"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#00D4FF" BlurRadius="28" ShadowDepth="0" Opacity="0.85"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#555555"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2A4A6F" Padding="15" BorderBrush="#4A7FBF" BorderThickness="0,0,0,2">
            <StackPanel>
                <TextBlock Text="âš™ï¸ RÃ©glages du Module 'CrÃ©er Module'" 
                           FontSize="18" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Configuration des paramÃ¨tres standards - Modifications rÃ©servÃ©es aux administrateurs Vault" 
                           FontSize="11" Foreground="#B8D4E8" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content - ScrollViewer -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="15">
            <StackPanel>
                
                <!-- Initiales Dessinateurs -->
                <GroupBox Style="{StaticResource SettingsGroupBox}">
                    <GroupBox.Header>
                        <TextBlock Text="ðŸ‘¥ Initiales des Dessinateurs" FontSize="14" FontWeight="Bold" Foreground="#FF8C00"/>
                    </GroupBox.Header>
                    <StackPanel>
                        <TextBlock Style="{StaticResource SettingsLabel}" 
                                   Text="Liste des initiales (une par ligne, ou sÃ©parÃ©es par des virgules):"/>
                        <TextBox x:Name="TxtDesignerInitials" Style="{StaticResource SettingsTextBox}"
                                 Height="100" AcceptsReturn="True" TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 ToolTip="Entrez les initiales des dessinateurs, une par ligne ou sÃ©parÃ©es par des virgules"/>
                        <TextBlock Text="Exemple: N/A, AC, AM, AP, AR, BL, CC..." 
                                   Foreground="#666666" FontSize="10" Margin="0,4,0,0"/>
                    </StackPanel>
                </GroupBox>

                <!-- Chemins -->
                <GroupBox Style="{StaticResource SettingsGroupBox}">
                    <GroupBox.Header>
                        <TextBlock Text="ðŸ“ Chemins et Dossiers" FontSize="14" FontWeight="Bold" Foreground="#FF8C00"/>
                    </GroupBox.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Template Local Path -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Template (Local):" 
                                   Style="{StaticResource SettingsLabel}" VerticalAlignment="Center"/>
                        <TextBox x:Name="TxtTemplateLocalPath" Grid.Row="0" Grid.Column="1" 
                                 Style="{StaticResource SettingsTextBox}" Margin="0,0,5,8"/>
                        <Button x:Name="BtnBrowseTemplate" Grid.Row="0" Grid.Column="2" Content="..." 
                                Width="30" Click="BtnBrowseTemplate_Click" Margin="0,0,0,8"/>

                        <!-- Template Vault Path -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Template (Vault):" 
                                   Style="{StaticResource SettingsLabel}" VerticalAlignment="Center"/>
                        <TextBox x:Name="TxtTemplateVaultPath" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                                 Style="{StaticResource SettingsTextBox}" Margin="0,0,0,8"/>

                        <!-- Projects Local Base Path -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Projets (Local):" 
                                   Style="{StaticResource SettingsLabel}" VerticalAlignment="Center"/>
                        <TextBox x:Name="TxtProjectsLocalPath" Grid.Row="2" Grid.Column="1" 
                                 Style="{StaticResource SettingsTextBox}" Margin="0,0,5,8"/>
                        <Button x:Name="BtnBrowseProjects" Grid.Row="2" Grid.Column="2" Content="..." 
                                Width="30" Click="BtnBrowseProjects_Click" Margin="0,0,0,8"/>

                        <!-- Projects Vault Base Path -->
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Projets (Vault):" 
                                   Style="{StaticResource SettingsLabel}" VerticalAlignment="Center"/>
                        <TextBox x:Name="TxtProjectsVaultPath" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"
                                 Style="{StaticResource SettingsTextBox}"/>
                    </Grid>
                </GroupBox>

                <!-- Fichiers Template -->
                <GroupBox Style="{StaticResource SettingsGroupBox}">
                    <GroupBox.Header>
                        <TextBlock Text="ðŸ“„ Fichiers Template" FontSize="14" FontWeight="Bold" Foreground="#FF8C00"/>
                    </GroupBox.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Fichier IPJ Template:" 
                                   Style="{StaticResource SettingsLabel}" VerticalAlignment="Center"/>
                        <TextBox x:Name="TxtTemplateIpjName" Grid.Row="0" Grid.Column="1" 
                                 Style="{StaticResource SettingsTextBox}" Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Top Assembly Template:" 
                                   Style="{StaticResource SettingsLabel}" VerticalAlignment="Center"/>
                        <TextBox x:Name="TxtTemplateTopAssembly" Grid.Row="1" Grid.Column="1" 
                                 Style="{StaticResource SettingsTextBox}" Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="PrÃ©fixe RÃ©fÃ©rence:" 
                                   Style="{StaticResource SettingsLabel}" VerticalAlignment="Center"/>
                        <TextBox x:Name="TxtReferenceFolderPrefix" Grid.Row="2" Grid.Column="1" 
                                 Style="{StaticResource SettingsTextBox}" Margin="0,0,0,8" MaxLength="10"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="PrÃ©fixe Module:" 
                                   Style="{StaticResource SettingsLabel}" VerticalAlignment="Center"/>
                        <TextBox x:Name="TxtModuleFolderPrefix" Grid.Row="3" Grid.Column="1" 
                                 Style="{StaticResource SettingsTextBox}" MaxLength="10"/>
                    </Grid>
                </GroupBox>

                <!-- Extensions -->
                <GroupBox Style="{StaticResource SettingsGroupBox}">
                    <GroupBox.Header>
                        <TextBlock Text="ðŸ“‹ Extensions de Fichiers" FontSize="14" FontWeight="Bold" Foreground="#FF8C00"/>
                    </GroupBox.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Style="{StaticResource SettingsLabel}" Text="Extensions Inventor:"/>
                            <TextBox x:Name="TxtInventorExtensions" Style="{StaticResource SettingsTextBox}"
                                     Height="60" AcceptsReturn="True" TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Style="{StaticResource SettingsLabel}" Text="Extensions Exclues:"/>
                            <TextBox x:Name="TxtExcludedExtensions" Style="{StaticResource SettingsTextBox}"
                                     Height="60" AcceptsReturn="True" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Dossiers Exclus et Library -->
                <GroupBox Style="{StaticResource SettingsGroupBox}">
                    <GroupBox.Header>
                        <TextBlock Text="ðŸš« Exclusions et Library" FontSize="14" FontWeight="Bold" Foreground="#FF8C00"/>
                    </GroupBox.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Style="{StaticResource SettingsLabel}" Text="Dossiers Exclus:"/>
                            <TextBox x:Name="TxtExcludedFolders" Style="{StaticResource SettingsTextBox}"
                                     Height="60" AcceptsReturn="True" TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Style="{StaticResource SettingsLabel}" Text="Patterns Library (liens prÃ©servÃ©s):"/>
                            <TextBox x:Name="TxtLibraryPatterns" Style="{StaticResource SettingsTextBox}"
                                     Height="60" AcceptsReturn="True" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- iProperties -->
                <GroupBox Style="{StaticResource SettingsGroupBox}">
                    <GroupBox.Header>
                        <TextBlock Text="ðŸ·ï¸ Noms des iProperties" FontSize="14" FontWeight="Bold" Foreground="#FF8C00"/>
                    </GroupBox.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,8">
                            <TextBlock Style="{StaticResource SettingsLabel}" Text="Initiale Dessinateur:"/>
                            <TextBox x:Name="TxtIPropDesigner" Style="{StaticResource SettingsTextBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,8">
                            <TextBlock Style="{StaticResource SettingsLabel}" Text="Initiale Co-Dessinateur:"/>
                            <TextBox x:Name="TxtIPropCoDesigner" Style="{StaticResource SettingsTextBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,8">
                            <TextBlock Style="{StaticResource SettingsLabel}" Text="Date CrÃ©ation:"/>
                            <TextBox x:Name="TxtIPropCreationDate" Style="{StaticResource SettingsTextBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,8">
                            <TextBlock Style="{StaticResource SettingsLabel}" Text="Job Title:"/>
                            <TextBox x:Name="TxtIPropJobTitle" Style="{StaticResource SettingsTextBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,10,8">
                            <TextBlock Style="{StaticResource SettingsLabel}" Text="Projet:"/>
                            <TextBox x:Name="TxtIPropProject" Style="{StaticResource SettingsTextBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,0,0,8">
                            <TextBlock Style="{StaticResource SettingsLabel}" Text="RÃ©fÃ©rence:"/>
                            <TextBox x:Name="TxtIPropReference" Style="{StaticResource SettingsTextBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Style="{StaticResource SettingsLabel}" Text="Module:"/>
                            <TextBox x:Name="TxtIPropModule" Style="{StaticResource SettingsTextBox}"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer - Boutons -->
        <Border Grid.Row="2" Background="#252536" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="BtnResetDefaults" Grid.Column="0" Content="â†º RÃ©initialiser" 
                        Style="{StaticResource SecondaryButton}" Click="BtnResetDefaults_Click"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="BtnCancel" Content="Annuler" 
                            Style="{StaticResource SecondaryButton}" Margin="0,0,10,0"
                            Click="BtnCancel_Click"/>
                    <Button x:Name="BtnSave" Content="âœ“ Sauvegarder" 
                            Style="{StaticResource ActionButton}" Click="BtnSave_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
