<Window x:Class="XnrgyEngineeringAutomationTools.Modules.ChecklistHVAC.Views.ChecklistHVACWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Checklist HVAC AHU - v1.0.0 - Released on 2026-01-02 - By Mohammed Amine Elgalai - XNRGY CLIMATE SYSTEMS ULC" 
        Height="900" Width="1400"
        MinWidth="800" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#1E1E2E">

    <Window.Resources>
        <!-- Style Bouton Primaire - Glow Brillant -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#005A9E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#4A7FBF"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1E90FF"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#00D4FF"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#00D4FF" BlurRadius="30" ShadowDepth="0" Opacity="0.9"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style Bouton Secondaire - Glow Brillant -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#404050"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#4A7FBF"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2A5A8F"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#00D4FF"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#00D4FF" BlurRadius="28" ShadowDepth="0" Opacity="0.85"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2A4A6F" Padding="15,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#107C10" CornerRadius="8" Width="50" Height="50" Margin="0,0,12,0">
                        <TextBlock Text="&#x1F4DD;" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="ðŸ“‹ Checklist HVAC AHU" FontSize="20" FontWeight="Bold" Foreground="White"/>
                        <TextBlock FontSize="14" Foreground="#FFB74D" Margin="0,3,0,0" FontWeight="SemiBold">
                            <Run Text="ðŸ’¡ VÃ©rification QualitÃ© AHU - Engineering Automation Tools"/>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>

                <Border Grid.Column="1" Background="#2D2D44" CornerRadius="4" Padding="10,6"
                        BorderBrush="#4A7FBF" BorderThickness="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse x:Name="VaultStatusIndicator" Width="10" Height="10" Fill="#E81123" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock x:Name="StatusText" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center">
                            <Run Text="ðŸ—„ï¸" Foreground="#00BFFF"/><Run x:Name="RunVaultName" Text=" Vault : --  /  " Foreground="White"/><Run Text="ðŸ‘¤" Foreground="#FFB74D"/><Run x:Name="RunUserName" Text=" Utilisateur : --  /  " Foreground="White"/><Run Text="ðŸ“¡" Foreground="#90EE90"/><Run x:Name="RunStatus" Text=" Statut : Deconnecte" Foreground="White"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="SyncNowButton" Content="ðŸ”„ Sync Vault" 
                            Click="SyncNowButton_Click"
                            Style="{StaticResource PrimaryButton}"
                            Margin="0,0,10,0"
                            ToolTip="Synchroniser maintenant avec Vault"/>
                    <Button x:Name="RefreshButton" Content="ðŸ”„ Rafraichir" 
                            Click="RefreshButton_Click"
                            Style="{StaticResource SecondaryButton}"
                            Margin="0,0,10,0"/>
                    <Button x:Name="OpenExternalButton" Content="ðŸŒ Ouvrir dans navigateur" 
                            Click="OpenExternalButton_Click"
                            Style="{StaticResource SecondaryButton}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- WebView2 pour afficher le HTML moderne (React/JS) -->
        <wv2:WebView2 Grid.Row="1" x:Name="WebViewControl" 
                      NavigationCompleted="WebViewControl_NavigationCompleted"/>

        <!-- Footer avec info Vault -->
        <Border Grid.Row="2" Background="#252536" Padding="15,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" x:Name="FilePathText" 
                           Text="Chargement..." Foreground="#808080" 
                           VerticalAlignment="Center" FontSize="11"/>
                
                <TextBlock Grid.Column="1" Text="By Mohammed Amine Elgalai - XNRGY" 
                           Foreground="#606070" VerticalAlignment="Center" FontSize="11"/>
            </Grid>
        </Border>
    </Grid>
</Window>
