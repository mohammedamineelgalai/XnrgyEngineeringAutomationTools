                              SelectionChanged="CmbExtension_SelectionChanged">
                        <ComboBoxItem Content="Tous" IsSelected="True"/>
                    </ComboBox>
                    
                    <!-- Filtre Statut -->
                    <TextBlock Text="ðŸ”„ Statut:" VerticalAlignment="Center" Margin="12,0,4,0" FontSize="11" Foreground="White" FontWeight="Bold"/>
                    <ComboBox x:Name="CmbState" Width="120" Height="32" VerticalContentAlignment="Center"
                              SelectionChanged="CmbState_SelectionChanged">
                        <ComboBoxItem Content="Tous" IsSelected="True"/>
                        <ComboBoxItem Content="En attente"/>
                        <ComboBoxItem Content="Uploade"/>
                        <ComboBoxItem Content="Ignore"/>
                        <ComboBoxItem Content="Erreur"/>
                    </ComboBox>
                </StackPanel>

                <!-- DataGrid Fichiers -->
                <DataGrid x:Name="DgFiles" Grid.Row="1" 
                          AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                          IsReadOnly="False"
                          Background="{DynamicResource DarkBg}"
                          Foreground="{DynamicResource TextLight}"
                          GridLinesVisibility="Horizontal"
                          AlternatingRowBackground="{DynamicResource DarkBg3}"
                          RowHeight="32" SelectionMode="Single" SelectionUnit="FullRow"
                          BorderBrush="{DynamicResource BorderColor}" BorderThickness="2"
                          MouseLeftButtonUp="DataGrid_MouseLeftButtonUp">
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn Header="âœ“" Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" Width="40"/>
                        <DataGridTextColumn Header="ðŸ“„ Nom du fichier" Binding="{Binding FileName}" Width="200" IsReadOnly="True"/>
                        <DataGridTextColumn Header="ðŸ“ Extension" Binding="{Binding FileExtension}" Width="70" IsReadOnly="True"/>
                        <DataGridTextColumn Header="ðŸ“Š Taille" Binding="{Binding FileSizeFormatted}" Width="80" IsReadOnly="True"/>
                        <DataGridTextColumn Header="ðŸ“ Chemin complet" Binding="{Binding FullPath}" Width="*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="ðŸ”„ Statut" Binding="{Binding Status}" Width="120" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>

        <!-- ========== SECTION COMMENTAIRE ========== -->
        <GroupBox Grid.Row="3" Style="{StaticResource ModernGroupBox}" Padding="8" Margin="10,5,10,5">
            <GroupBox.Header>
                <TextBlock Text="ðŸ“ Commentaire Check-In" Foreground="White" FontWeight="Bold"/>
            </GroupBox.Header>
            <TextBox x:Name="TxtComment" Style="{StaticResource ModernTextBox}" Height="36" 
                     TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                     Text="[Auto] Upload effectue par XNRGY Engineering Automation Tools - Module Upload Template"/>
        </GroupBox>

        <!-- ========== BARRE DE PROGRESSION + BOUTONS ========== -->
        <Border Grid.Row="4" Background="#2A4A6F" CornerRadius="8" Padding="15,10" Margin="10,5,10,5"
                BorderBrush="#4A7FBF" BorderThickness="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Barre de progression style Creer Module (rectangulaire avec texte) -->
                <Border Grid.Column="0" Background="#1E1E2E" CornerRadius="6" Height="34" ClipToBounds="True" Margin="0,0,15,0"
                        BorderBrush="#4A7FBF" BorderThickness="2">
                    <Grid>
                        <!-- Fond de progression (rempli par le code) -->
                        <Border x:Name="ProgressBarFill" Background="#28A745" CornerRadius="6" 
                                HorizontalAlignment="Left" Width="0">
                            <Border.Effect>
                                <DropShadowEffect Color="#00FF7F" BlurRadius="20" ShadowDepth="0" Opacity="0.85"/>
                            </Border.Effect>
                        </Border>
                        
                        <!-- Texte de statut (fichier en cours) -->
                        <TextBlock x:Name="TxtProgressStatus" Text="Pret" Foreground="White" FontSize="12" FontWeight="SemiBold"
                                   VerticalAlignment="Center" HorizontalAlignment="Left" Margin="12,0,0,0" 
                                   TextTrimming="CharacterEllipsis" MaxWidth="200"/>
                        
                        <!-- Fichier actuellement en traitement -->
                        <TextBlock x:Name="TxtCurrentFile" 
                                   Text="" 
                                   Foreground="#00D4FF" FontSize="11" FontWeight="SemiBold"
                                   VerticalAlignment="Center" HorizontalAlignment="Left"
                                   Margin="220,0,0,0" TextTrimming="CharacterEllipsis" MaxWidth="200">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#00D4FF" BlurRadius="8" ShadowDepth="0" Opacity="0.7"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        
                        <!-- Temps Ã©coulÃ© / Temps total estimÃ© Ã  droite -->
                        <TextBlock x:Name="TxtProgressTime" 
                                   Text="" 
                                   Foreground="#FFD700" FontSize="11" FontWeight="SemiBold"
                                   VerticalAlignment="Center" HorizontalAlignment="Right"
                                   Margin="0,0,80,0">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#FFD700" BlurRadius="8" ShadowDepth="0" Opacity="0.7"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        
                        <!-- Pourcentage a droite -->
                        <TextBlock x:Name="TxtProgressPercent" Text="" Foreground="#AAA" FontSize="11"
                                   VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,12,0"/>
                    </Grid>
                </Border>

                <!-- Boutons d'action a droite (identique VaultUploadModule) -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="BtnStartUpload" Content="â–¶ï¸ UPLOAD" 
                            Style="{StaticResource SuccessButton}" Height="34" MinWidth="115" FontSize="13"
                            Click="BtnStartUpload_Click" IsEnabled="False" Margin="0,0,8,0" Padding="12,5" VerticalContentAlignment="Center"/>
                    
                    <Button x:Name="BtnPause" Content="â¸ï¸ PAUSE" 
                            Style="{StaticResource WarningButton}" Height="34" MinWidth="105" FontSize="13"
                            Click="BtnPause_Click" IsEnabled="False" Margin="0,0,8,0" Padding="10,5" VerticalContentAlignment="Center"/>
                    
                    <Button x:Name="BtnStop" Content="â¹ï¸ STOP" 
                            Style="{StaticResource WarningButton}" Height="34" MinWidth="95" FontSize="13"
                            Click="BtnStop_Click" IsEnabled="False" Margin="0,0,8,0" Padding="10,5" VerticalContentAlignment="Center"/>
                    
                    <Button x:Name="BtnCancel" Content="âœ— FERMER" 
                            Style="{StaticResource DangerButton}" Height="34" MinWidth="115" FontSize="13"
                            Click="BtnCancel_Click" Padding="10,5" VerticalContentAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ========== JOURNAL ========== -->
        <Border Grid.Row="5" Background="{DynamicResource DarkBg2}" BorderBrush="#4A7FBF" 
                BorderThickness="2" CornerRadius="6" Margin="10,5,10,8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header Journal -->
                <Border Grid.Row="0" Background="#2A4A6F" CornerRadius="6,6,0,0" Padding="12,8">
                    <Grid>
                        <TextBlock Text="ðŸ“‹ Journal des OpÃ©rations" FontSize="14" FontWeight="Bold" 
                                   Foreground="White"/>
                        <Button x:Name="BtnClearLog" Content="ðŸ—‘ï¸ Effacer" HorizontalAlignment="Right" 
                                Background="#DC2626" Foreground="White" FontWeight="Bold"
                                BorderBrush="#DC2626" BorderThickness="2"
                                Padding="8,2" Click="BtnClearLog_Click" Cursor="Hand"/>
                    </Grid>
                </Border>
                
                <!-- Contenu Journal avec couleurs -->
                <RichTextBox x:Name="TxtLog" Grid.Row="1" Background="Transparent" 
