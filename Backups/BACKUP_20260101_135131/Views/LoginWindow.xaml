<Window x:Class="XnrgyEngineeringAutomationTools.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connexion Vault - v1.0.0 - Released on 2025-12-31 - By Mohammed Amine Elgalai - XNRGY CLIMATE SYSTEMS ULC" 
        SizeToContent="WidthAndHeight"
        MinWidth="480"
        MinHeight="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1E1E2E"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Animation du Spinner -->
        <Storyboard x:Key="SpinnerAnimation">
            <DoubleAnimation Storyboard.TargetName="SpinnerRotation"
                           Storyboard.TargetProperty="Angle"
                           From="0" To="360" Duration="0:0:1"
                           RepeatBehavior="Forever"/>
        </Storyboard>
        
        <!-- Style TextBox moderne -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#404050"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#0078D4"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Style PasswordBox moderne -->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#404050"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CaretBrush" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <StackPanel Grid.Row="0" Margin="0,0,0,25">
            <TextBlock Text="ðŸ” Connexion Vault" FontSize="24" FontWeight="Bold" 
                       Foreground="White" HorizontalAlignment="Center"/>
            <TextBlock Text="Autodesk Vault Professional 2026" FontSize="12" 
                       Foreground="#808080" HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Serveur -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Serveur" Foreground="#B0B0B0" Margin="0,0,0,5"/>
            <TextBox x:Name="ServerTextBox" Text="VAULTPOC" Style="{StaticResource ModernTextBox}"/>
        </StackPanel>

        <!-- Vault -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="Vault" Foreground="#B0B0B0" Margin="0,0,0,5"/>
            <TextBox x:Name="VaultTextBox" Text="TestXNRGY" Style="{StaticResource ModernTextBox}"/>
        </StackPanel>

        <!-- Utilisateur -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <TextBlock Text="Utilisateur" Foreground="#B0B0B0" Margin="0,0,0,5"/>
            <TextBox x:Name="UserTextBox" Style="{StaticResource ModernTextBox}"/>
        </StackPanel>

        <!-- Mot de passe -->
        <StackPanel Grid.Row="4" Margin="0,0,0,15">
            <TextBlock Text="Mot de passe" Foreground="#B0B0B0" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Style="{StaticResource ModernPasswordBox}"/>
        </StackPanel>

        <!-- Sauvegarder -->
        <CheckBox Grid.Row="5" x:Name="SaveCredentialsCheckBox" 
                  Content="Sauvegarder les identifiants" 
                  Foreground="#B0B0B0" IsChecked="False" Margin="0,0,0,10"/>

        <!-- Spinner de connexion -->
        <Border Grid.Row="6" x:Name="ConnectionSpinner" Visibility="Collapsed" 
                Margin="0,10,0,10" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Ellipse Width="20" Height="20" StrokeThickness="3" 
                         Stroke="#0078D4" StrokeDashArray="2,2" RenderTransformOrigin="0.5,0.5">
                    <Ellipse.RenderTransform>
                        <RotateTransform x:Name="SpinnerRotation" Angle="0"/>
                    </Ellipse.RenderTransform>
                </Ellipse>
                <TextBlock x:Name="ConnectionStatusText" Text="Connexion en cours..." 
                           Foreground="#0078D4" Margin="10,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Message d'erreur -->
        <Border Grid.Row="7" x:Name="ErrorBorder" Visibility="Collapsed"
                Background="#3C1518" BorderBrush="#E81123" BorderThickness="1" 
                CornerRadius="4" Padding="10" Margin="0,5,0,10">
            <TextBlock x:Name="ErrorMessage" Foreground="#FF6B6B" 
                       TextWrapping="Wrap" HorizontalAlignment="Center"/>
        </Border>

        <!-- Boutons -->
        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="ClearButton" Content="Effacer" 
                    Click="ClearButton_Click"
                    Width="80" Padding="10,8" Margin="0,0,10,0"
                    Background="#505060" Foreground="White" BorderThickness="0"
                    Cursor="Hand" ToolTip="Effacer les identifiants sauvegardÃ©s"/>
            <Button x:Name="CancelButton" Content="Annuler" 
                    Click="CancelButton_Click"
                    Width="100" Padding="10,8" Margin="0,0,10,0"
                    Background="#404050" Foreground="White" BorderThickness="0"
                    Cursor="Hand"/>
            <Button x:Name="ConnectButton" Content="ðŸ”Œ Connecter" 
                    Click="ConnectButton_Click"
                    Width="130" Padding="10,8"
                    Background="#0078D4" Foreground="White" BorderThickness="0"
                    FontWeight="SemiBold" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
