    <!-- ╔═══════════════════════════════════════════════════════════════════════════════════════════╗
         ║                           SECTION 11: STYLES RESPONSIVE / AUTO-FIT                         ║
         ╠═══════════════════════════════════════════════════════════════════════════════════════════╣
         ║  IMPORTANT: Pour rendre une fenetre responsive, utiliser ces techniques:                   ║
         ║                                                                                            ║
         ║  1. VIEWBOX (Scale proportionnel):                                                         ║
         ║     Viewbox Stretch="Uniform" StretchDirection="Both"                                      ║
         ║         Grid Width="1400" Height="900"                                                     ║
         ║                                                                                            ║
         ║  2. GRID avec proportions (* et Auto):                                                     ║
         ║     RowDefinition Height="Auto"    = Header fixe                                           ║
         ║     RowDefinition Height="*"       = Contenu extensible                                    ║
         ║     RowDefinition Height="Auto"    = Footer fixe                                           ║
         ║                                                                                            ║
         ║  3. MINWIDTH/MINHEIGHT sur Window:                                                         ║
         ║     MinWidth="900" MinHeight="600"                                                         ║
         ╚═══════════════════════════════════════════════════════════════════════════════════════════╝ -->

    <!-- ========== VIEWBOX RESPONSIVE - Scale uniforme ========== -->
    <Style x:Key="XnrgyResponsiveViewbox" TargetType="Viewbox">
        <Setter Property="Stretch" Value="Uniform"/>
        <Setter Property="StretchDirection" Value="Both"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
    </Style>

    <!-- ========== VIEWBOX RESPONSIVE - Scale horizontal seulement ========== -->
    <Style x:Key="XnrgyResponsiveViewboxHorizontal" TargetType="Viewbox">
        <Setter Property="Stretch" Value="Uniform"/>
        <Setter Property="StretchDirection" Value="DownOnly"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>

    <!-- ========== GRID RESPONSIVE - Conteneur principal ========== -->
    <Style x:Key="XnrgyResponsiveGrid" TargetType="Grid">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
    </Style>

    <!-- ========== SCROLLVIEWER RESPONSIVE - Pour contenu qui deborde ========== -->
    <Style x:Key="XnrgyResponsiveScrollViewer" TargetType="ScrollViewer">
        <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
    </Style>

    <!-- ========== DATAGRID RESPONSIVE ========== -->
    <Style x:Key="XnrgyResponsiveDataGrid" TargetType="DataGrid" BasedOn="{StaticResource XnrgyDataGrid}">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="ColumnWidth" Value="*"/>
    </Style>

    <!-- ========== STACKPANEL RESPONSIVE - Wrap si necessaire ========== -->
    <Style x:Key="XnrgyResponsiveWrapPanel" TargetType="WrapPanel">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Orientation" Value="Horizontal"/>
    </Style>

    <!-- ========== UNIFORM GRID RESPONSIVE ========== -->
    <Style x:Key="XnrgyResponsiveUniformGrid" TargetType="UniformGrid">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
    </Style>

    <!-- ========== TEXTBLOCK RESPONSIVE - Wrap automatique ========== -->
    <Style x:Key="XnrgyResponsiveTextBlock" TargetType="TextBlock">
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
    </Style>

    <!-- ========== BUTTON RESPONSIVE - Taille minimum ========== -->
    <Style x:Key="XnrgyResponsiveButton" TargetType="Button" BasedOn="{StaticResource XnrgyPrimaryButton}">
        <Setter Property="MinWidth" Value="80"/>
        <Setter Property="MinHeight" Value="32"/>
        <Setter Property="MaxWidth" Value="300"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>

    <!-- ========== TEXTBOX RESPONSIVE ========== -->
    <Style x:Key="XnrgyResponsiveTextBox" TargetType="TextBox" BasedOn="{StaticResource XnrgyTextBox}">
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="MinHeight" Value="30"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>

    <!-- ========== GROUPBOX RESPONSIVE ========== -->
    <Style x:Key="XnrgyResponsiveGroupBox" TargetType="GroupBox" BasedOn="{StaticResource XnrgyGroupBox}">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
    </Style>

</ResourceDictionary>