                            <Setter TargetName="radioBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="#0078D4" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="radioBorder" Property="Background" Value="{StaticResource XnrgyBlue}"/>
